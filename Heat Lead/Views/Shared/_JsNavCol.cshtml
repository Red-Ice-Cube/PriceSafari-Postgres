@{
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();

    <div class="@(controllerName == "CanvasJS" && actionName == "Index" ? "Flex-Column-Button-Active" : "Flex-Column-Button") menu-link"
         onclick="location.href='@Url.Action("Index", "CanvasJS", new { affiliateLinkId = Model.AffiliateLinkId })'">
        Banery JS
    </div>
    <div class="@(controllerName == "CanvasJS" && actionName == "ManageStyles" ? "Flex-Column-Button-Active" : "Flex-Column-Button") menu-link"
         onclick="location.href='@Url.Action("ManageStyles", "CanvasJS", new { affiliateLinkId = Model.AffiliateLinkId })'">
        Edytor styli
    </div>
}
