@model Heat_Lead.Models.ManagerViewModels.EditVerificationRequiredViewModel

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Page-Box">
    <div class="Page-Box-Container">
        <div class="Page-Box-Category">
            <div class="Category-Box-Title">
                Weryfikacja użytkownika
            </div>
            <partial name="_ManageNavCol" />
        </div>

        <div class="Column-30">
            <form asp-action="EditVerificationRequired" class="Column-Form" method="post">
                <div class="form-group">
                    <label asp-for="VerificationRequired" class="control-label">Włączyć zatwierdzanie nowych affiliantów?</label>
                    <select asp-for="VerificationRequired" class="form-control">
                        <option value="true">Tak</option>
                        <option value="false">Nie</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="Button-Add-Small" />
                </div>
            </form>
        </div>
    </div>
</div>
