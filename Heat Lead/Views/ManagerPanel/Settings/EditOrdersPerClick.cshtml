@model Heat_Lead.Models.ManagerViewModels.EditOrdersPerClickViewModel

@{

    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Page-Box">
    <div class="Page-Box-Container">
        <div class="Page-Box-Category">
            <div class="Category-Box-Title">
                Zamówienia na klik

            </div>

            <partial name="_ManageNavCol" />
        </div>

        <div class="Column-30">

            <form asp-action="EditOrdersPerClick" class="Column-Form" method="post">

                <div class="form-group">
                    <label asp-for="OrdersPerClick" class="control-label">Maksymalna liczba zamówień na dane zapisanie pliku śledzącego</label>
                    <input asp-for="OrdersPerClick" class="form-control" />
                    <span asp-validation-for="OrdersPerClick" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" role="alert"></div>

                <div class="form-group">
                    <input type="submit" value="Zapisz" class="Button-Add-Small" />
                </div>
            </form>

        </div>

    </div>

</div>