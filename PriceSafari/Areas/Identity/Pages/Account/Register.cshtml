@* @page
@model RegisterModel

@{
    ViewData["Title"] = "Rejestracja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-page">
    <div class="partner-banner">
        <a href="@Url.Action("Index", "Home")">
            <img src="~/images/Banner.gif" alt="Home" class="menu-icon" />
        </a>
    </div>
    <div class="login">
        <div class="heat-lead"></div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login-box">
            <div class="login-box-head">
                <div class="login-box-title">Rejestracja</div>
                <a asp-page="./Login" class="links" asp-route-returnUrl="@Model.ReturnUrl">Zaloguj się</a>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Imie" class="form-control" autocomplete="imie" aria-required="true" placeholder="imie" />
                <label asp-for="Input.Imie">Imię</label>
                <span asp-validation-for="Input.Imie" class="text-danger"></span>

            </div>
            <div class="form-floating">
                <input asp-for="Input.Nazwisko" class="form-control" autocomplete="nazwisko" aria-required="true" placeholder="nazwisko" />
                <label asp-for="Input.Nazwisko">Nazwisko</label>
                <span asp-validation-for="Input.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Powtórz Hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="other-function">
                <div class="checkbox-blank">
                    <input type="checkbox" class="form-check-input" asp-for="Input.AcceptsTerms" id="acceptsTerms" />
                    <label asp-for="Input.AcceptsTerms" class="form-label">Akceptuję <a href="/pdf/Regulamin.pdf" class="links-underline">regulamin</a> programu.</label>
                    <p><span asp-validation-for="Input.AcceptsTerms" class="text-danger"></span></p>

                </div>
            </div>

                <button id="registerSubmit" type="submit" class="login-button">Zarejestruj się</button>

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

        </form>


        <div class="price-safari"><img src="~/images/PriceSafari.png" alt="PriceSafari" /></div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} *@