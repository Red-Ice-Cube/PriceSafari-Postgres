@page
@model PriceSafari.Areas.Identity.Pages.Account.VerifyEmailModel
@{
    ViewData["Title"] = "Weryfikacja Konta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideHeaderFooter = true;
}

<div class="main-page">
    <div class="partner-banner">
        <a href="https://pricesafari.pl/">
            <img id="homeBanner" src="~/images/Home-Banner-L.gif" alt="Price Safari">
            <img id="preloadedImage" src="~/images/Home-Banner-L.png" alt="Preloaded Frame" style="display: none;">
        </a>
    </div>

    <div class="login">
        <div class="heat-lead"></div>

        @if (Model.VerificationSuccess)
        {
            <div class="login-box">
                <div class="login-box-head">
                    <div class="login-box-title">Sukces!</div>
                </div>
                <div class="text-center p-4">
                    @* Jeśli masz własną ikonę sukcesu, możesz ją tu wstawić *@
                    @* <img src="~/images/success-icon.png" alt="Success" width="80" class="mb-3" /> *@
                    <div class="Main-Text mb-3">
                        <h4>E-mail zweryfikowany poprawnie.</h4>
                        <p>Twoje konto jest gotowe do dalszej konfiguracji. Zaloguj się, aby kontynuować.</p>
                    </div>
                    <a asp-page="./Login" class="login-button">Przejdź do logowania</a>
                </div>
            </div>
        }
        else
        {
            <div class="login-box">
                <div class="login-box-head">
                    <div class="login-box-title">Potwierdź swój e-mail</div>
                </div>

                <div class="Main-Text">
                    Na Twój adres e-mail wysłaliśmy 6-cyfrowy kod. Wpisz go poniżej, aby kontynuować.
                </div>

                <div id="message-container" class="mt-2 mx-3"></div>

                <form method="post" id="verify-form" class="px-3 pb-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <input type="hidden" asp-for="Input.Email" />

                    <div class="form-floating">
                        <input asp-for="Input.Code" class="form-control" placeholder="123456" autofocus />
                        <label asp-for="Input.Code" class="form-label"></label>
                        <span asp-validation-for="Input.Code" class="text-danger"></span>
                    </div>

                    <button type="submit" class="login-button">Zweryfikuj konto</button>
                </form>

                <div class="text-center mb-3">
                    <button id="resend-button" class="btn btn-link links">
                        <span id="resend-spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                        <span id="resend-text">Nie otrzymałeś kodu? Wyślij ponownie.</span>
                    </button>
                </div>
            </div>
        }

        <a href="https://pricesafari.pl/">
            <img src="~/images homepage/PriceSafari.png" alt="PriceSafari" class="price-safari" style="cursor: pointer;">
        </a>
    </div>
</div>

<script>
    function freezeGif() {
        var banner = document.getElementById("homeBanner");
        if (!banner) return;
        var frozenFrameSrc = banner.src.replace('.gif', '.png');
        var preloadedImage = document.getElementById("preloadedImage");

        if (preloadedImage && preloadedImage.complete) {
            banner.src = frozenFrameSrc;
        } else if (preloadedImage) {
            preloadedImage.onload = function () {
                banner.src = frozenFrameSrc;
            };
        }
    }
    setTimeout(freezeGif, 5000);
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const resendButton = document.getElementById('resend-button');
            if (!resendButton) return;

            const resendText = document.getElementById('resend-text');
            const resendSpinner = document.getElementById('resend-spinner');
            const messageContainer = document.getElementById('message-container');
            const emailInput = document.querySelector('input[name="Input.Email"]');
            const verifyForm = document.getElementById('verify-form');

            resendButton.addEventListener('click', function(event) {
                event.preventDefault();

                resendButton.disabled = true;
                resendSpinner.style.display = 'inline-block';
                resendText.textContent = 'Wysyłanie...';
                messageContainer.innerHTML = '';

                const formData = new FormData();
                formData.append('Input.Email', emailInput.value);

                // Token jest częścią formularza, więc musimy go znaleźć wewnątrz niego
                const token = verifyForm.querySelector('input[name="__RequestVerificationToken"]');
                if(token) {
                     formData.append('__RequestVerificationToken', token.value);
                }

                fetch('?handler=ResendCode', {
                    method: 'POST',
                    body: new URLSearchParams(formData)
                })
                .then(response => {
                    if (!response.ok) {
                        // Obsługa błędów HTTP (np. 500)
                        throw new Error('Błąd serwera: ' + response.statusText);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        messageContainer.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
                        startCooldownTimer(60);
                    } else {
                        messageContainer.innerHTML = `<div class="alert alert-danger">${data.message || 'Wystąpił nieznany błąd.'}</div>`;
                        resetButton();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    messageContainer.innerHTML = `<div class="alert alert-danger">Błąd sieci lub serwera. Spróbuj ponownie.</div>`;
                    resetButton();
                });
            });

            function startCooldownTimer(duration) {
                let timer = duration;
                resendSpinner.style.display = 'none';
                resendButton.disabled = true;

                const interval = setInterval(function () {
                    resendText.textContent = `Wyślij ponownie za ${timer}s`;
                    timer--;
                    if (timer < 0) {
                        clearInterval(interval);
                        resetButton();
                    }
                }, 1000);
            }

            function resetButton() {
                 resendButton.disabled = false;
                 resendSpinner.style.display = 'none';
                 resendText.textContent = 'Nie otrzymałeś kodu? Wyślij ponownie.';
            }
        });
    </script>
}