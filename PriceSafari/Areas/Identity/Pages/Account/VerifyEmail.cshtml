@page
@model PriceSafari.Areas.Identity.Pages.Account.VerifyEmailModel
@{
    ViewData["Title"] = "Weryfikacja Konta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideHeaderFooter = true;
}

<div class="main-page">
    <partial name="_PartnerBanner" />
    <div class="login">
        <div class="heat-lead"></div>

        @if (Model.VerificationSuccess)
        {
            <div class="login-box">
                <div class="login-box-head">
                    <div class="login-box-title">Sukces!</div>
                </div>
         

                    <div class="Main-Text">
                    
                        Twoje konto jest gotowe do dalszej konfiguracji. Zaloguj się, aby kontynuować.
                    </div>
                    <a asp-page="./Login" class="login-button">Przejdź do logowania</a>
        
            </div>
        }
        else
        {

            <form method="post" id="verify-form" class="login-box">

                <div class="login-box-head">
                    <div class="login-box-title">Potwierdź swój e-mail</div>

                    <div class="Main-Text">
                        Na Twój adres e-mail wysłaliśmy 6-cyfrowy kod. Wpisz go poniżej, aby kontynuować.
                    </div>

                </div>

                <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
                <input type="hidden" asp-for="Input.Email" />

                <div class="form-floating">
                    <input asp-for="Input.Code" class="form-control" placeholder="123456" autofocus />
                    <label asp-for="Input.Code" class="form-label"></label>
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                </div>

                <button type="submit" class="login-button">Zweryfikuj konto</button>

                <div class="other-function">
                    <button id="resend-button" class="btn btn-link links">
                        <span id="resend-spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                        <span id="resend-text">Nie otrzymałeś kodu? Wyślij ponownie.</span>
                    </button>
                </div>

                <div id="resend-message-container"></div>

            </form>

        }

        <a href="https://pricesafari.pl/">
            <img src="~/images homepage/PriceSafari.png" alt="PriceSafari" class="price-safari" style="cursor: pointer;">
        </a>
    </div>
</div>

<script>
    function freezeGif() {
        var banner = document.getElementById("homeBanner");
        if (!banner) return;
        var frozenFrameSrc = banner.src.replace('.gif', '.png');
        var preloadedImage = document.getElementById("preloadedImage");

        if (preloadedImage && preloadedImage.complete) {
            banner.src = frozenFrameSrc;
        } else if (preloadedImage) {
            preloadedImage.onload = function () {
                banner.src = frozenFrameSrc;
            };
        }
    }
    setTimeout(freezeGif, 5000);
</script>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const resendButton = document.getElementById('resend-button');
            const messageContainer = document.getElementById('resend-message-container');
            const spinner = document.getElementById('resend-spinner');
            const resendText = document.getElementById('resend-text');

            const COOLDOWN_KEY = 'resendCooldownUntil';

            function startCooldown(seconds) {

                const cooldownEndTime = Date.now() + seconds * 1000;
                localStorage.setItem(COOLDOWN_KEY, cooldownEndTime);

                let counter = seconds;
                spinner.style.display = 'none';
                resendText.textContent = `Wyślij ponownie za ${counter}s`;
                resendText.style.color = 'white';
                resendButton.disabled = true;

                const intervalId = setInterval(() => {
                    counter--;
                    resendText.textContent = `Wyślij ponownie za ${counter}s`;

                    if (counter <= 0) {
                        clearInterval(intervalId);
                        resendText.textContent = 'Nie otrzymałeś kodu? Wyślij ponownie.';
                        resendText.style.color = '';
                        resendButton.disabled = false;
                        localStorage.removeItem(COOLDOWN_KEY);
                    }
                }, 1000);
            }

            function checkCooldownOnLoad() {
                const cooldownEndTime = localStorage.getItem(COOLDOWN_KEY);
                if (cooldownEndTime) {
                    const remainingSeconds = Math.round((cooldownEndTime - Date.now()) / 1000);
                    if (remainingSeconds > 0) {

                        startCooldown(remainingSeconds);
                    } else {

                        localStorage.removeItem(COOLDOWN_KEY);
                    }
                }
            }

            resendButton.addEventListener('click', function (event) {
                event.preventDefault();

                spinner.style.display = 'inline-block';
                resendText.textContent = 'Wysyłanie...';
                resendText.style.color = 'white';
                resendButton.disabled = true;

                messageContainer.innerHTML = '';
                messageContainer.className = '';

                fetch('/Identity/Account/VerifyEmail?handler=ResendCode', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: 'Input.Email=' + encodeURIComponent(document.querySelector('input[name="Input.Email"]').value)
                })
                .then(response => response.ok ? response.json() : Promise.reject('Błąd serwera'))
                .then(data => {
                    messageContainer.textContent = data.message;

                    if (data.success) {
                        messageContainer.className = 'validation-summary-succes';
                        startCooldown(60);
                    } else {
                        messageContainer.className = 'validation-summary-errors';

                        spinner.style.display = 'none';
                        resendText.textContent = 'Nie otrzymałeś kodu? Wyślij ponownie.';
                        resendText.style.color = '';
                        resendButton.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Błąd:', error);
                    messageContainer.textContent = 'Wystąpił nieoczekiwany błąd. Spróbuj ponownie.';
                    messageContainer.className = 'validation-summary-errors';

                    spinner.style.display = 'none';
                    resendText.textContent = 'Nie otrzymałeś kodu? Wyślij ponownie.';
                    resendText.style.color = '';
                    resendButton.disabled = false;
                });
            });

            checkCooldownOnLoad();
        });
    </script>
}