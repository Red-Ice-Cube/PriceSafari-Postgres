@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-page">
    <div class="partner-banner">
        <a href="@Url.Action("Index", "Home")">
            <img src="~/images/Banner.gif" alt="Home" class="menu-icon" />
        </a>
    </div>
    <div class="login">
        <div class="heat-lead"></div>


            <form id="account" method="post" class="login-box">
            <div class="login-box-head">  <div class="login-box-title">Logowanie</div>
                <a asp-page="./Register" class="links" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
            </div>
               
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
            <div class="other-function">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <a id="forgot-password"class="links" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
            </div>
              
                <button id="login-submit" type="submit" class="login-button">Zaloguj się</button>
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
            </form>
       

        <div class="price-safari"><img src="~/images/PriceSafari.png" alt="PriceSafari"/></div>
       
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
