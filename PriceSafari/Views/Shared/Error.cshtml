@model ErrorViewModel
@{
    ViewData["Title"] = "Błąd";
}

<h1 class="text-danger">Błąd programu</h1>
<h2 class="text-danger">Wystąpił problem podczas przetwarzania Twojego żądania.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Identyfikator żądania:</strong> <code>@Model.RequestId</code>
    </p>
}

<p>
    Wystąpił błąd aplikacji. Prosimy spróbować ponownie zalogować się lub wrócić do strony głównej.
</p>

<a href="/Account/Login" class="btn btn-primary">Zaloguj się ponownie</a>
<a href="/" class="btn btn-secondary">Strona główna</a>

<h3>Informacje techniczne</h3>
<p>
    Jeśli problem będzie się powtarzał, skontaktuj się z administratorem systemu, podając szczegóły błędu i poniższy identyfikator żądania.
</p>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Identyfikator żądania:</strong> <code>@Model.RequestId</code>
    </p>
}
