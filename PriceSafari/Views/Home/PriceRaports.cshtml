@{
    ViewData["Title"] = "Price Safari";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var faqItems = ViewBag.FAQItems as List<PriceSafari.Models.HomeModels.FAQItem>;
}


<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Monitoring Cen</title>

</head>
<body>


    <div class="Main-home">


        <div class="Vert-Home">

            <div class="Horizontal-100" style="justify-content:flex-start;">
                <div class="Text-Box">
                    <div class="Text-Box-Title">
                        Raporty cenowe w Europie<img src="~/images homepage/EU.png" class="img-box-left" />
                    </div>
                    <div class="Text-Box-Text">

                        <div class="text-icon-flex">
                            <img src="~/images/Product-search.svg" />
                            <div class="text">
                                <strong>Gdzie są najlepsze ceny</strong>
                                <p>
                                    Wyrusz na cenowe safari i odkryj, gdzie w Europie można znaleźć produkty z Twojej oferty w najkorzystniejszych cenach.
                                    Nasze narzędzie analizuje rynki w 16 krajach Europy, przeliczając ceny na złotówki według aktualnych kursów.
                                </p>
                            </div>
                        </div>

                        <div class="text-icon-flex">
                            <img src="~/images/MoneyLock.svg" />
                            <div class="text">
                                <strong>Gdzie zamawiać</strong>
                                <p>
                                    Nasze narzędzie pomoże Ci znaleźć najtańsze oferty na interesujące Cię produkty. Dzięki temu zyskasz przewagę podczas negocjacji
                                    cenowych z dostawcami lub podejmiesz świadome decyzje o zamówieniach zza granicy, maksymalizując swoje zyski.
                                </p>
                            </div>
                        </div>

                        <div class="text-icon-flex">
                            <img src="~/images/Basket.svg" />
                            <div class="text">
                                <strong>Gdzie sprzedawać</strong>
                                <p>
                                    Jeżeli planujesz rozwijać swoją sprzedaż na rynkach takich jak Allegro.cz czy Allegro.sk, nasze narzędzie umożliwi Ci porównanie swoich cen z ofertami dostępnymi w wybranym kraju. Możesz błyskawicznie sprawdzić, które produkty z
                                    Twojego asortymentu są o na przykład o 30% tańsze od najtańszych konkurencyjnych ofert na danym rynku.
                                </p>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>





        <div class="Vert-Space-Gray">
            <div class="Vert-100" id="banner-change-target-2">
                <div class="button-container">
                    <button class="change-banner-2" data-target="banner-change-target-2" data-index="0">Produkty</button>
                    <button class="change-banner-2" data-target="banner-change-target-2" data-index="1">Ceny</button>
                </div>
                <img src="~/images homepage/RaportCeny.png" class="banner-img" style="display:block; cursor:pointer;" alt="Produkty w Europie">
                <img src="~/images homepage/SafariCeny.png" class="banner-img" style="display:none; cursor:pointer;" alt="Ceny w Europie">

            </div>

        </div>



    </div>

    <!-- Struktura modala -->
    <div id="image-modal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="modal-image">
    </div>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Obsługa pierwszego zestawu bannerów
            const buttons1 = document.querySelectorAll('.change-banner-1');
            const images1 = document.querySelectorAll('#banner-change-target-1 .banner-img');

            buttons1[0].classList.add('change-banner-1-active'); // Domyślnie aktywuj pierwszy przycisk

            buttons1.forEach((button, index) => {
                button.addEventListener('click', function () {
                    buttons1.forEach(btn => btn.classList.remove('change-banner-1-active')); // Usuń aktywność z innych przycisków
                    this.classList.add('change-banner-1-active'); // Dodaj aktywność do klikniętego przycisku
                    images1.forEach(img => img.style.display = 'none'); // Ukryj inne obrazki
                    images1[index].style.display = 'block'; // Pokaż wybrany obrazek
                });
            });

            // Obsługa drugiego zestawu bannerów
            const buttons2 = document.querySelectorAll('.change-banner-2');
            const images2 = document.querySelectorAll('#banner-change-target-2 .banner-img');

            buttons2[0].classList.add('change-banner-2-active'); // Domyślnie aktywuj pierwszy przycisk

            buttons2.forEach((button, index) => {
                button.addEventListener('click', function () {
                    buttons2.forEach(btn => btn.classList.remove('change-banner-2-active')); // Usuń aktywność z innych przycisków
                    this.classList.add('change-banner-2-active'); // Dodaj aktywność do klikniętego przycisku
                    images2.forEach(img => img.style.display = 'none'); // Ukryj inne obrazki
                    images2[index].style.display = 'block'; // Pokaż wybrany obrazek
                });
            });

            // Funkcjonalność modala
            var modal = document.getElementById("image-modal");
            var modalImg = document.getElementById("modal-image");
            var closeBtn = document.querySelector("#image-modal .close");

            const bannerImages = document.querySelectorAll('.banner-img');
            bannerImages.forEach(function (image) {
                image.addEventListener('click', function () {
                    modal.style.display = "block";
                    modalImg.src = this.src;
                });
            });

            closeBtn.addEventListener('click', function () {
                modal.style.display = "none";
            });

            modal.addEventListener('click', function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            });
        });

    </script>
</body>
</html>




