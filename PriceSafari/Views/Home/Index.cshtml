@model dynamic
@using Schema.NET
@using Newtonsoft.Json

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var faqItems = ViewBag.FAQItems as List<PriceSafari.Models.HomeModels.FAQItem>;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <link rel="canonical" href="https://pricesafari.pl/" />
    <meta charset="UTF-8">
    <meta name="description" content="PriceSafari - zaawansowane narzędzie do monitorowania cen w Polsce i Europie. Zyskaj przewagę nad konkurencją, zarządzaj cenami produktów i maksymalizuj zyski dzięki precyzyjnym danym rynkowym.">
    <title>PriceSafari - Monitoring cen Twojej konkurencji w Polsce i Europie | Testuj za darmo</title>
    @if (faqItems != null && faqItems.Any())
    {

        IThing[] questions = faqItems.Select(item => (IThing)new Question()
                {
                    Name = item.Question,
                    AcceptedAnswer = new Answer()
                    {
                        Text = item.Answer
                    }
                }).ToArray();

        var faqPage = new FAQPage()
                {
                    MainEntity = questions
                };

        var jsonLd = faqPage.ToString();

        @Html.Raw($"<script type=\"application/ld+json\">\n{jsonLd}\n</script>")
    }

</head>
<body>

    <div class="Main-home">

        <div class="Vert-Home">
            <div class="Vert-50">
                <div class="Text-Box">
                    <div class="Text-Box-Title">
                        <h1>Monitoring cen</h1>
                    </div>

                    <div class="Text-Box-Text">
                        <h4>
                            Maksymalizacja Twoich zysków, strategiczne zarządzanie cenami i wyprzedzanie konkurencji.
                        </h4>

                        <p>
                            PriceSafari to narzędzie do monitorowania cen i dostępności produktów Twojej konkurencji, które codziennie dostarcza aktualne raporty cenowe i wspiera Cię w analizie cen własnych produktów.

                        </p>
                    
                        <div class="text-icon-flex">
                            <img src="~/images/Product-search-b.svg" alt="Monitoring konkurencji" />
                            <div class="text">
                                <strong>Ceny konkurencji</strong><span> - Monitoruj ceny i dostępność produktów konkurencji.</span>
                            </div>
                        </div>

                        <div class="text-icon-flex">
                            <img src="~/images/MoneyLock-b.svg" alt="Ochrona marży" />
