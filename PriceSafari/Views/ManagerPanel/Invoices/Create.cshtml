@model PriceSafari.Models.InvoiceClass

@{
    ViewData["Title"] = "Wystaw Nową Fakturę";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>Wystaw Nową Fakturę</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StoreId">Sklep</label>
        <select asp-for="StoreId" class="form-control" asp-items="ViewBag.Stores">
            <option value="">-- Wybierz Sklep --</option>
        </select>
        <span asp-validation-for="StoreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlanId">Plan</label>
        <select asp-for="PlanId" class="form-control" asp-items="ViewBag.Plans">
            <option value="">-- Wybierz Plan --</option>
        </select>
        <span asp-validation-for="PlanId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IssueDate"></label>
        <input asp-for="IssueDate" class="form-control" type="date" value="@Model.IssueDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NetAmount"></label>
        <input asp-for="NetAmount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NetAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DaysIncluded"></label>
        <input asp-for="DaysIncluded" class="form-control" type="number" />
        <span asp-validation-for="DaysIncluded" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsPaid"></label>
        <div class="form-check">
            <input asp-for="IsPaid" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsPaid"></label>
        </div>
        <span asp-validation-for="IsPaid" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Wystaw Fakturę</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
