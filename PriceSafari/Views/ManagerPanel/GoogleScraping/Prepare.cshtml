@model IEnumerable<PriceSafari.Models.ProductClass>

@{
    ViewBag.Title = "Prepare Products for Scraping";
}

<h1>Prepare Products for Scraping</h1>

<form asp-action="ClearPreparedProducts" method="post" onsubmit="return confirm('Are you sure you want to clear all prepared products?');">
    <button type="submit" class="btn btn-danger mt-3">Clear All Prepared Products</button>
</form>

<!-- Przycisk do przejścia do listy produktów przygotowanych do scrapowania -->
<a asp-action="PreparedProducts" class="btn btn-info mt-3">View Prepared Products</a>

<form asp-action="Assign" method="post">
    <div class="form-group">
        <label for="Region">Select Region:</label>
        <select class="form-control" name="regionId" required>
            @foreach (var region in ViewBag.Regions)
            {
                <option value="@region.RegionId">@region.Name (@region.Currency)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Assign Products to Region</button>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Google URL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.GoogleUrl</td>
                </tr>
            }
        </tbody>
    </table>


</form>
