@model PriceSafari.Models.PlanClass

@{
    ViewData["Title"] = "Dodaj Nowy Plan";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>Dodaj Nowy Plan</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PlanName"></label>
        <input asp-for="PlanName" class="form-control" />
        <span asp-validation-for="PlanName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NetPrice"></label>
        <input asp-for="NetPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NetPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductsToScrap"></label>
        <input asp-for="ProductsToScrap" class="form-control" type="number" />
        <span asp-validation-for="ProductsToScrap" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductsToScrapAllegro"></label>
        <input asp-for="ProductsToScrapAllegro" class="form-control" type="number" />
        <span asp-validation-for="ProductsToScrapAllegro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DaysPerInvoice"></label>
        <input asp-for="DaysPerInvoice" class="form-control" type="number" />
        <span asp-validation-for="DaysPerInvoice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsTestPlan"></label>
        <div class="form-check">
            <input asp-for="IsTestPlan" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsTestPlan"></label>
        </div>
        <span asp-validation-for="IsTestPlan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ceneo"></label>
        <div class="form-check">
            <input asp-for="Ceneo" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="Ceneo"></label>
        </div>
        <span asp-validation-for="Ceneo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GoogleShopping"></label>
        <div class="form-check">
            <input asp-for="GoogleShopping" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="GoogleShopping"></label>
        </div>
        <span asp-validation-for="GoogleShopping" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Allegro"></label>
        <div class="form-check">
            <input asp-for="Allegro" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="Allegro"></label>
        </div>
        <span asp-validation-for="Allegro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Info"></label>
        <textarea asp-for="Info" class="form-control"></textarea>
        <span asp-validation-for="Info" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Dodaj Plan</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

