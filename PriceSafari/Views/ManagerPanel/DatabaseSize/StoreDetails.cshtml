                                <td><input type="checkbox" name="selectedIds" value="@item.ReportId" /></td>
                                <td>@(rowNum2++)</td>
                                <td>@item.ReportName</td>
                                <td>@item.ReportDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td class="text-right">@item.TotalGlobalPriceReportsCount.ToString("N0")</td>
                                <td class="text-right">@item.UsedSpaceMB.ToString("N4")</td>
                            </tr>
                        }
                    </tbody>
                </table>
