@* Modal edycji wbudowany bezpośrednio w plik *@
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edytuj Historię Scrapowania</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="editForm" asp-action="EditScrapHistory" method="post">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id" />
                    <input type="hidden" name="StoreId" value="@Model.StoreId" />
                    <div class="form-group">
                        <label for="editDate">Data:</label>
                        <input type="datetime-local" class="form-control" id="editDate" name="Date" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-primary">Zapisz Zmiany</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function toggleAll(source, name) {
            const form = source.closest('form');
            const checkboxes = form.querySelectorAll('input[type="checkbox"][name="' + name + '"]');
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = source.checked;
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const storeSize = parseFloat('@Model.TotalStoreHistorySizeMB.ToString(CultureInfo.InvariantCulture)');
            const allegroSize = parseFloat('@Model.TotalAllegroHistorySizeMB.ToString(CultureInfo.InvariantCulture)');
            const reportsSize = parseFloat('@Model.TotalReportsSizeMB.ToString(CultureInfo.InvariantCulture)');

            if (storeSize > 0 || allegroSize > 0 || reportsSize > 0) {
                const ctx = document.getElementById('sizeChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Historia Sklepu', 'Historia Allegro', 'Raporty'],
                        datasets: [{
                            label: 'Rozmiar (MB)',
                            data: [storeSize, allegroSize, reportsSize],
                            backgroundColor: [
                                'rgba(78, 115, 223, 0.8)',
                                'rgba(28, 200, 138, 0.8)',
                                'rgba(246, 194, 62, 0.8)'
                            ],
                            borderColor: [
                                'rgba(78, 115, 223, 1)',
                                'rgba(28, 200, 138, 1)',
                                'rgba(246, 194, 62, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        let label = context.label || '';
                                        let value = context.parsed || 0;
                                        return `${label}: ${value.toFixed(4)} MB`;
                                    }
                                }
                            }
                        }
                    }
                });
            } else {
                const container = document.getElementById('chart-container');
                container.innerHTML = '<div class="d-flex align-items-center justify-content-center h-100"><p class="text-muted">Brak danych do narysowania wykresu.</p></div>';
            }
        });

        // Skrypt do obsługi modalu bez AJAX-a
        $(document).ready(function () {
            // Obsługa kliknięcia przycisku "Edytuj"
            $('.edit-btn').on('click', function () {
                const scrapHistoryId = $(this).data('id');
                const scrapHistoryDate = $(this).data('date');

                // Konwersja formatu daty na YYYY-MM-DDTHH:mm
                // Ten kod obcina sekundy, aby pasowały do inputu datetime-local
                const formattedDate = scrapHistoryDate.substring(0, 16);

                // Ustaw wartości pól w modal'u
                $('#editId').val(scrapHistoryId);
                $('#editDate').val(formattedDate);

                // Pokaż modal
                $('#editModal').modal('show');
            });

            // Obsługa wysyłania formularza w modal'u
            $('#editModal').on('submit', '#editForm', function (e) {
                e.preventDefault();

                const form = $(this);
                const token = $('input[name="__RequestVerificationToken"]', form).val();

                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    headers: {
                        'RequestVerificationToken': token
                    },
                    success: function (response) {
                        if (response.success) {
                            // Znajdź wiersz w tabeli i zaktualizuj datę
                            const newDateFormatted = response.newDate;
                            $(`[data-id="${response.id}"]`).closest('tr').find('.scrap-history-date').text(newDateFormatted);

                            // Zamknij modal i wyświetl komunikat
                            $('#editModal').modal('hide');
                            alert(response.message);

                            // Opcjonalnie: przeładowanie strony, jeśli chcesz odświeżyć wszystko
                            // location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Wystąpił nieoczekiwany błąd podczas zapisywania zmian.');
                    }
                });
            });
        });
    </script>
}