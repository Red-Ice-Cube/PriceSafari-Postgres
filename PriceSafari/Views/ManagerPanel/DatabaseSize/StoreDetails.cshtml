@model PriceSafari.Controllers.ManagerControllers.StoreDetailsViewModel
@using System.Globalization

@{
    ViewData["Title"] = $"Szczegóły Sklepu: {Model.StoreName}";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

@section Styles {
    <style>
        .info-box {
            background: #fff;
            border-radius: .375rem;
            padding: 1.5rem;
            border-left: 5px solid #4e73df; /* Primary color */
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
        }

        .info-box-text {
            color: #6c757d;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .info-box-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #343a40;
        }

        #chart-container {
            position: relative;
            height: 250px; /* Zmniejszona wysokość dla lepszego dopasowania */
            width: 100%;
        }
    </style>
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Zarządzanie danymi dla: <strong>@Model.StoreName</strong></h1>
    <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary shadow-sm"><i class="fas fa-arrow-left fa-sm text-white-50"></i> Powrót do listy</a>
</div>

<div class="row mb-4">
    <div class="col-lg-7 mb-4 mb-lg-0">
        <div class="info-box shadow h-100 py-2">
            <div class="info-box-text">Łączny rozmiar danych dla sklepu</div>
            <div class="info-box-number">
                @((Model.TotalStoreHistorySizeMB + Model.TotalAllegroHistorySizeMB + Model.TotalReportsSizeMB).ToString("N4")) MB
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow h-100">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Podział danych dla sklepu</h6>
            </div>
            <div class="card-body">
                <div id="chart-container">
                    <canvas id="sizeChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Historia Scrapowania (Sklep)</h6>
    </div>
    <div class="card-body">
        <form method="post" asp-action="DeleteSelectedScrapHistories" asp-route-storeId="@Model.StoreId" onsubmit="return confirm('Czy na pewno chcesz usunąć zaznaczone historie scrapowania sklepu?');">
            <div class="table-responsive">
                <table class="table table-striped table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 5%;"><input type="checkbox" onclick="toggleAll(this, 'selectedIds')" /></th>
                            <th style="width: 5%;">Lp.</th>
                            <th style="width: 10%;">ID</th>
                            <th>Data</th>
                            <th class="text-right">Ilość Rekordów</th>
                            <th class="text-right">Rozmiar (MB)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rowNum1 = 1;
                        }
                        @foreach (var item in Model.TableSizes)
                        {
                            <tr>
                                <td><input type="checkbox" name="selectedIds" value="@item.ScrapHistoryId" /></td>
                                <td>@(rowNum1++)</td>
                                <td>@item.ScrapHistoryId</td>
                                <td>@item.Date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td class="text-right">@item.PriceHistoriesCount.ToString("N0")</td>
                                <td class="text-right">@item.UsedSpaceMB.ToString("N4")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.TableSizes.Any())
            {
                <button type="submit" class="btn btn-danger mt-3"><i class="fas fa-trash"></i> Usuń Zaznaczone</button>
            }
            else
            {

                <p class="text-center mt-3">Brak danych.</p>
            }
        </form>
    </div>
</div>

