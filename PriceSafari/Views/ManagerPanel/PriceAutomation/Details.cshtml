@model PriceSafari.Models.ViewModels.AutomationDetailsViewModel
@using PriceSafari.Models.ViewModels

@{
    ViewData["Title"] = $"Szczegóły Reguły: {Model.RuleName}";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

    string badgeClass = Model.IsActive ? "badge-success" : "badge-secondary";
    string strategyIcon = Model.StrategyMode == PriceSafari.Models.AutomationStrategyMode.Competitiveness ? "fa-bolt" : "fa-dollar-sign";
    string strategyName = Model.StrategyMode == PriceSafari.Models.AutomationStrategyMode.Competitiveness ? "Lider Rynku" : "Rentowność";
    string sourceIcon = Model.SourceType == PriceSafari.Models.AutomationSourceType.PriceComparison ? "fa-tags" : "fa-shopping-bag";
    string borderClass = Model.SourceType == PriceSafari.Models.AutomationSourceType.PriceComparison ? "border-left-info" : "border-left-warning";

    bool isMarketplace = Model.SourceType == PriceSafari.Models.AutomationSourceType.Marketplace;

    // Statystyki oparte na nowym modelu
    int total = Model.TotalProducts > 0 ? Model.TotalProducts : 1;
    
    // Sukces = Met + Maintained + Limited (wszystko co zostało przeliczone)
    int successCount = Model.CountMet + Model.CountMaintained + Model.CountLimited;
    int blockedCount = Model.CountBlocked;
    
    int percentSuccess = Model.SuccessRate;
}

<style>
    .limit-badge {
        display: inline-flex; align-items: center; justify-content: center;
        padding: 2px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;
        color: #ffffff !important; margin-right: 6px; min-width: 55px; height: 22px; gap:4px;
    }
    .badge-purchase { background-color: #282828; }
    .badge-min { background-color: rgba(171, 37, 32, 1); }
    .badge-max { background-color: rgba(0, 145, 123, 1); }
    .limit-price-text { font-weight: 500; font-size: 13px; }
    .rank-icon { width: 12px; height: 12px; vertical-align: middle; margin-right: 5px; }
    .rank-row { display: flex; align-items: center;  }

    /* Style statusów */
    .status-badge {
        display: inline-flex; align-items: center; justify-content: center;
        padding: 4px 12px; border-radius: 4px; font-size: 11px; font-weight: 600;
        color: #ffffff !important; min-width: 130px; height: 24px;
        margin-bottom: 3px; box-shadow: 0 1px 2px rgba(0,0,0,0.1); gap:4px;
    }
    
    .status-ok { background-color: rgba(0, 145, 123, 1); } /* Zielony */
    .status-maintained { background-color: rgba(13, 110, 253, 0.7); } /* Niebieski */
    .status-limited { background-color: #f6c23e; color: #fff !important; } /* Żółty */
    .status-blocked { background-color: rgba(171, 37, 32, 1); } /* Czerwony */
    .status-neutral { background-color: #858796; } /* Szary */

    .status-text { font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; }
    
    .status-text-ok { color: rgba(0, 145, 123, 1); }
    .status-text-maintained { color: rgba(13, 110, 253, 0.7); }
    .status-text-limited { color: #f6c23e; }
    .status-text-blocked { color: rgba(171, 37, 32, 1); }

    .price-row-block {
        display: flex;
        align-items: center;
        gap: 4px;
        flex-wrap: wrap;
    }

    .price-main-style {
        font-weight: 500;
        font-size: 17px;
        color: #000; 
    }
    .price-green {
        color: #169A23 !important; 
    }

    .commission-stack-badge {
        width:52px;
    }

    .price-badge {
        width:52px;
    }

    .text-muted {
        font-size:12px;
    }
    
    .column-flex-min-gap{
        display:flex;
        flex-direction:column;
        gap:2px;
    }

    .dynamics-stat {
        font-size: 11px;
        font-weight: 600;
        display: flex;
        align-items: center;
        margin-right: 10px;
    }
</style>

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas @sourceIcon text-gray-400 mr-2"></i> @Model.RuleName
            </h1>
            <div class="mt-2">
                <span class="badge @badgeClass p-2"><i class="fas fa-power-off"></i> @(Model.IsActive ? "Aktywna" : "Wyłączona")</span>
                <span class="badge badge-light p-2 border ml-1"><i class="fas @strategyIcon"></i> @strategyName</span>
                <span class="text-xs text-muted ml-2">Sklep: <strong>@Model.StoreName</strong></span>
            </div>
        </div>
        <div>
            <a asp-controller="AutomationRules" asp-action="Edit" asp-route-id="@Model.RuleId" class="btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-cog fa-sm text-white-50"></i> Konfiguruj Regułę
            </a>
            <a asp-controller="AutomationRules" asp-action="Index" asp-route-storeId="@Model.StoreId" asp-route-filterType="@Model.SourceType" class="btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Powrót
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card @borderClass shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1">Przypisane Produkty</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalProducts</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-box fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 border-left-primary">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ostatnia Analiza</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.LastScrapDate.HasValue ? Model.LastScrapDate.Value.ToString("dd.MM.yyyy HH:mm") : "Brak danych")
                            </div>
                        </div>
                        <div class="col-auto"><i class="fas fa-history fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 border-left-success">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Skuteczność (Symulacja)</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@percentSuccess%</div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @percentSuccess%" aria-valuenow="@percentSuccess" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2 small">
                                <span class="text-success font-weight-bold"><i class="fas fa-check"></i> @successCount</span> przeliczone
                                <span class="text-gray-400 mx-1">|</span>
                                <span class="text-danger font-weight-bold"><i class="fas fa-ban"></i> @blockedCount</span> blokada
                            </div>
                        </div>
                        <div class="col-auto"><i class="fas fa-chart-line fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2 border-left-info">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Dynamika Zmian</div>
                            
                            <div class="d-flex flex-wrap mt-2">
                                <div class="dynamics-stat text-danger mr-3" title="Podwyżki">
                                    <i class="fas fa-arrow-up mr-1"></i> @Model.CountIncreased
                                </div>
                                <div class="dynamics-stat text-success mr-3" title="Obniżki">
                                    <i class="fas fa-arrow-down mr-1"></i> @Model.CountDecreased
                                </div>
                                <div class="dynamics-stat text-primary" title="Cena utrzymana (optymalna)">
                                    <i class="fas fa-equals mr-1"></i> @Model.CountMaintained
                                </div>
                            </div>

                        </div>
                        <div class="col-auto"><i class="fas fa-chart-bar fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="Vert">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Symulacja Cen</h6>
            <button class="btn btn-success btn-sm" onclick="executeAutomation()">
                <i class="fas fa-play"></i> Wykonaj Automatyzację (Symulacja)
            </button>
        </div>
        <div class="Vert-full">
            <div class="Vert-table" style="height: 90vh;">
                <table class="table-orders" id="automationTable" width="100%">
    <thead>
        <tr>
            @if (!isMarketplace)
            {
                <th style="width: 50px;"></th>
            }

            <th style="width: 250px;">Produkt</th>
            <th style="width: 200px;">Limity Cenowe</th>

            <th style="width: 280px;">Dane z rynku - Twoja oferta</th>

            @if (Model.StrategyMode == PriceSafari.Models.AutomationStrategyMode.Competitiveness)
            {
                <th style="width: 280px;">Najlepszy Rywal</th>
            }
            else
            {
                <th style="width: 280px;">Mediana Rynku</th>
            }

            <th style="min-width: 130px; width: 140px;">Zmiana</th>

            <th class="bg-gradient-light border-left-primary" style="width: 210px;">Wyznaczona Cena</th>

            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                @if (!isMarketplace)
                {
                    <td class="text-center align-middle">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="img" style="max-height: 40px; max-width: 40px;" />
                        }
                        else
                        {
                            <i class="fas fa-image text-gray-400"></i>
                        }
                    </td>
                }

                <td class="align-middle">
                    <div class="font-weight-bold text-truncate" style="max-width: 250px;" title="@item.Name">@item.Name</div>
                    <div class="small text-muted mb-1">
                        @item.Identifier
                        @if(item.ApiAllegroPriceFromUser.HasValue) {
                                <span class="text-xs ml-1 text-gray-500" title="Cena bazowa w API (przed dopłatami)">(API: @item.ApiAllegroPriceFromUser)</span>
                        }
                    </div>
                </td>

                <td class="align-middle">
                    @if (item.PurchasePrice.HasValue)
                    {
                        <div class="bg-light p-2 rounded border">
                           @if (item.MaxPriceLimit.HasValue)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="limit-badge badge-max">MAX <i class="fa-solid fa-arrow-up"></i></span>
                                    <span class="limit-price-text" style="color: rgba(0, 145, 123, 1);">@item.MaxPriceLimit.Value.ToString("F2") PLN</span>
                                </div>
                            }
                            @if (item.MinPriceLimit.HasValue)
                            {
                                <div class="d-flex justify-content-between align-items-center @(item.MaxPriceLimit.HasValue ? "border-top pt-1 mt-1" : "mb-1")">
                                    <span class="limit-badge badge-min">MIN <i class="fa-solid fa-arrow-down"></i></span>
                                    <span class="limit-price-text" style="color: rgba(171, 37, 32, 1);">@item.MinPriceLimit.Value.ToString("F2") PLN</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center @(item.MinPriceLimit.HasValue || item.MaxPriceLimit.HasValue ? "border-top pt-1 mt-1" : "")">
                                <span class="limit-badge badge-purchase">Zakup</span>
                                <span class="limit-price-text" style="color: #282828;">@item.PurchasePrice.Value.ToString("F2") PLN</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-gray-400 small">Brak ceny zakupu</div>
                    }
                </td>

                <td class="align-middle text-right">
                <div class="price-row-block"> <span class="price-main-style @(item.IsBestPriceGuarantee ? "price-green" : "")">
                        @(item.CurrentPrice.HasValue ? item.CurrentPrice.Value.ToString("F2")  : "-") PLN
                    </span>

                    @if (item.IsBestPriceGuarantee)
                    {
                        <div title="Gwarancja Najniższej Ceny">
                            <img src="/images/TopPrice.png" alt="Gwarancja" style="width: 18px; height: 18px; vertical-align: middle;">
                        </div>
                    }
                    @if (item.IsSuperPrice)
                    {
                        <div class="SuperPrice">SUPERCENA</div>
                    }
                    @if (item.IsTopOffer)
                    {
                        <div class="TopOffer">Top oferta</div>
                    }
                    @if (item.IsInAnyCampaign)
                    {
                        <span class="badge badge-info ml-1" title="Udział w kampanii promocyjnej" style="font-size:10px;">PROMO</span>
                    }
                </div>

                <div class="small text-muted ">@Model.StoreName</div>

                @if (item.CommissionAmount.HasValue)
                {
                    <div class="Commission-stack">
                        <span class="commission-stack-badge">Prowizja</span>
                        <p>
                            @item.CommissionAmount.Value.ToString("F2") PLN
                            @if(item.IsCommissionIncluded) { <span style="font-weight: 400; color: #555;"> | uwzg.</span> }
                            else { <span style="font-weight: 400; color: #999;"> | nieuwzg.</span> }
                        </p>
                    </div>
                }

                @if (item.CurrentMarkupAmount.HasValue && item.CurrentMarkupPercent.HasValue)
                {
                    <div class="price-box-diff-margin-ib @(item.CurrentMarkupAmount > 0 ? "price-box-diff-margin-ib-positive" : "price-box-diff-margin-ib-negative")" style="margin-top: 4px; width: 100%;">
                            <span class="price-badge @(item.CurrentMarkupAmount > 0 ? "price-badge-positive" : "price-badge-negative")">Narzut</span>
                            <p>@item.CurrentMarkupAmount.Value.ToString("F2") PLN (@item.CurrentMarkupPercent.Value.ToString("F2")%)</p>
                    </div>
                }
            </td>
                <td class="align-middle text-right">
                    @if (Model.StrategyMode == PriceSafari.Models.AutomationStrategyMode.Competitiveness)
                    {
                        @if (item.BestCompetitorPrice.HasValue)
                        {
                            <div class="price-row-block">
                                <span class="price-main-style @(item.CompetitorIsBestPriceGuarantee ? "price-green" : "")">
                                    @item.BestCompetitorPrice.Value.ToString("F2") PLN
                                </span>

                                @if (item.CompetitorIsBestPriceGuarantee)
                                {
                                    <div title="Gwarancja Najniższej Ceny Rywala">
                                        <img src="/images/TopPrice.png" alt="Gwarancja" style="width: 18px; height: 18px; vertical-align: middle;">
                                    </div>
                                }

                                @if (item.CompetitorIsSuperPrice)
                                {
                                    <div class="SuperPrice">SUPERCENA</div>
                                }

                                @if (item.CompetitorIsTopOffer)
                                {
                                    <div class="TopOffer">Top oferta</div>
                                }
                            </div>

                            <div class="small text-muted">@item.CompetitorName</div>
                        }
                        else
                        {
                            <span class="badge badge-light">Brak konkurencji</span>
                        }
                    }
                    else
                    {
                        @if (item.MarketAveragePrice.HasValue)
                        {
                             <span class="price-main-style">@item.MarketAveragePrice.Value.ToString("F2") PLN</span>
                        }
                    }
                </td>

                <td class="align-middle text-center">

                  <div class="price-row-block">
                        @if (item.PriceChange.HasValue && item.PriceChange.Value != 0 && item.Status != AutomationCalculationStatus.Blocked)
                        {
                            @if (item.PriceChange.Value < 0)
                            {

                                <span class="price-main-style text-success" style="display: inline-flex; align-items: center;">
                                    <i class="fas fa-arrow-down" style="margin-right: 5px; font-weight: 900; font-size: 0.8em;"></i>
                                    @Math.Abs(item.PriceChange.Value).ToString("F2") PLN
                                </span>
                            }
                            else
                            {

                                <span class="price-main-style text-danger" style="display: inline-flex; align-items: center;">
                                    <i class="fas fa-arrow-up" style="margin-right: 5px; font-weight: 900; font-size: 0.8em;"></i>
                                    @item.PriceChange.Value.ToString("F2") PLN
                                </span>
                            }
                        }
                        else if (item.Status == AutomationCalculationStatus.TargetMaintained)
                        {

                         <span class="price-main-style" style="display: inline-flex; align-items: center; color: rgba(13, 110, 253, 0.7);">
                             <i class="no-change-icon-turquoise" style="font-style:normal;"></i>
                             Brak zmian
                        </span>
                        }
                        else
                        {
                             <span class="price-main-style text-gray-400">Blokada</span>
                        }
                    </div>
                    <div class="column-flex-min-gap">
                         @if (Model.SourceType == PriceSafari.Models.AutomationSourceType.Marketplace)
                    {
                        <div class="rank-row">
                            <img src="/images/AllegroIcon.png" alt="Allegro" class="rank-icon">
                            <span class="text-muted">@item.CurrentRankingAllegro</span>
                            <i class="fas fa-arrow-right fa-xs text-gray-400 mx-1"></i>
                            <span class="text-muted">@item.NewRankingAllegro</span>
                        </div>
                    }
                    else
                    {
                        <div class="rank-row">
                            <img src="/images/GoogleShopping.png" alt="Google" class="rank-icon">
                            <span class="text-muted">@item.CurrentRankingGoogle</span>
                            <i class="fas fa-arrow-right fa-xs text-gray-400 mx-1"></i>
                            <span class="text-muted">@item.NewRankingGoogle</span>
                        </div>
                        <div class="rank-row">
                            <img src="/images/Ceneo.png" alt="Ceneo" class="rank-icon">
                            <span class="text-muted">@item.CurrentRankingCeneo</span>
                            <i class="fas fa-arrow-right fa-xs text-gray-400 mx-1"></i>
                            <span class="text-muted">@item.NewRankingCeneo</span>
                        </div>
                    }
                    </div>

                </td>

                <td class="align-middle text-right bg-light border-left-primary">
                    <div class="d-flex flex-column" style="width:100%;">

                        @if (item.Status == AutomationCalculationStatus.Blocked)
                        {
                                <div class="mb-1 text-right">
                                    <span class="badge badge-secondary" style="font-size: 10px;">BLOKADA: @item.BlockReason.ToUpper()</span>
                                </div>
                                <div class="font-weight-bold text-secondary" style="font-size: 1.1em;">
                                    @(item.SuggestedPrice?.ToString("F2") ?? "-") PLN
                                </div>
                        }
                        else
                        {
                            <span class="price-main-style @(item.IsMarginWarning ? "text-warning" : "text-success")">
                                @(item.SuggestedPrice.HasValue ? item.SuggestedPrice.Value.ToString("F2") : "-") PLN
                            </span>
                        }
                            <div class="small text-muted ">@Model.StoreName</div>

                        @if (item.IsSubsidyActive && item.ApiAllegroPriceFromUser.HasValue)
                        {
                            <div class="subsidy-stack">
                                <span class="subsidy-stack-badge">Kampania z dopł. | Twoja cena</span>
                                <p>@item.ApiAllegroPriceFromUser.Value.ToString("F2") PLN</p>
                            </div>
                        }

                        @if (item.CommissionAmount.HasValue)
                        {
                            <div class="Commission-stack">
                                <span class="commission-stack-badge">Prowizja</span>
                                <p>
                                    @item.CommissionAmount.Value.ToString("F2") PLN
                                    @if(item.IsCommissionIncluded) { <span style="font-weight: 400; color: #555;"> | uwzg.</span> }
                                    else { <span style="font-weight: 400; color: #999;"> | nieuwzg.</span> }
                                </p>
                            </div>
                        }

                        @if (item.SuggestedPrice.HasValue && item.MarkupAmount.HasValue)
                        {
                                <div class="price-box-diff-margin-ib @(item.MarkupAmount > 0 ? "price-box-diff-margin-ib-positive" : "price-box-diff-margin-ib-negative")" style="margin-top: 4px; width: 100%;">
                                        <span class="price-badge @(item.MarkupAmount > 0 ? "price-badge-positive" : "price-badge-negative")">Narzut</span>
                                        <p>@item.MarkupAmount.Value.ToString("F2") PLN (@item.MarkupPercent.Value.ToString("F2")%)</p>
                                </div>
                        }
                    </div>
                </td>

               <td class="align-middle text-center">
                    @switch (item.Status)
                    {
                        case AutomationCalculationStatus.TargetMet:
                            <div class="status-badge status-ok">
                                <i class="fas fa-check mr-2"></i> Cel Osiągnięty
                            </div>
                            <div class="status-text status-text-ok">
                                Warunki spełnione
                            </div>
                            break;

                        case AutomationCalculationStatus.TargetMaintained:
                            <div class="status-badge status-maintained">
                                <i class="fas fa-check-circle mr-2"></i> Cel Utrzymany
                            </div>
                            <div class="status-text status-text-maintained">
                                Cena optymalna
                            </div>
                            break;

                        case AutomationCalculationStatus.PriceLimited:
                            <div class="status-badge status-limited">
                                <i class="fas fa-filter mr-2"></i> Limit Ceny
                            </div>
                            <div class="status-text status-text-limited">
                                @if (item.IsMarginWarning) { <span>Ogr. Marżą Min</span> }
                                else { <span>Ogr. Widełkami</span> }
                            </div>
                            break;

                        case AutomationCalculationStatus.Blocked:
                            <div class="status-badge status-blocked">
                                <i class="fas fa-ban mr-2"></i> Blokada
                            </div>
                            <div class="status-text status-text-blocked font-weight-bold">
                                @item.BlockReason.ToUpper()
                            </div>
                            break;

                        default:
                            <span class="badge badge-light border px-3 py-2">Brak danych</span>
                            break;
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var productsData = @Html.Raw(Json.Serialize(Model.Products.Select(p => new {
            ProductId = p.ProductId,
            Identifier = p.Identifier,
            CurrentPrice = p.CurrentPrice ?? 0,
            NewPrice = p.SuggestedPrice ?? 0,
            PurchasePrice = p.PurchasePrice,

            CurrentRankingAllegro = p.CurrentRankingAllegro,
            NewRankingAllegro = p.NewRankingAllegro,
            CurrentRankingGoogle = p.CurrentRankingGoogle,
            NewRankingGoogle = p.NewRankingGoogle,
            CurrentRankingCeneo = p.CurrentRankingCeneo,
            NewRankingCeneo = p.NewRankingCeneo,

            MinPriceLimit = p.MinPriceLimit,
            MaxPriceLimit = p.MaxPriceLimit,

            WasLimitedByMin = (p.SuggestedPrice.HasValue && p.MinPriceLimit.HasValue && p.SuggestedPrice.Value == p.MinPriceLimit.Value),
            WasLimitedByMax = (p.SuggestedPrice.HasValue && p.MaxPriceLimit.HasValue && p.SuggestedPrice.Value == p.MaxPriceLimit.Value),

            IsTargetMet = p.IsTargetMet 
        })));

        var ruleId = @Model.RuleId;
        var storeId = @Model.StoreId;
        var sourceType = @((int)Model.SourceType);

        function executeAutomation() {
            var validProducts = productsData.filter(function(p) {
                return parseFloat(p.newPrice) > 0; 
            });

            if (validProducts.length === 0) {
                alert("Brak produktów z wyliczoną nową ceną.");
                return;
            }

            if (!confirm("Czy na pewno chcesz zapisać symulację zmian cen dla " + validProducts.length + " produktów?")) {
                return;
            }

            var payload = {
                RuleId: ruleId,
                StoreId: storeId,
                SourceType: sourceType,
                Products: validProducts
            };

            $.ajax({
                url: '@Url.Action("ExecuteAutomation", "PriceAutomation")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(payload),
                success: function(response) {
                    alert("Sukces! Zapisano log automatyzacji. Przetworzono: " + response.count);
                    location.reload();
                },
                error: function(xhr, status, error) {
                    alert("Błąd serwera: " + error);
                    console.error(xhr);
                }
            });
        }

        $(document).ready(function() {
            $('#automationTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Polish.json"
                },
                "pageLength": 25,
                "order": [[ 7, "asc" ]] 
            });
        });
    </script>
