@section Scripts {
    <script>
        var productsData = @Html.Raw(Json.Serialize(Model.Products.Select(p => new {
            ProductId = p.ProductId,
            Identifier = p.Identifier,
            CurrentPrice = p.CurrentPrice ?? 0,
            NewPrice = p.SuggestedPrice ?? 0,
            PurchasePrice = p.PurchasePrice,

            CurrentRankingAllegro = p.CurrentRankingAllegro,
            NewRankingAllegro = p.NewRankingAllegro,
            CurrentRankingGoogle = p.CurrentRankingGoogle,
            NewRankingGoogle = p.NewRankingGoogle,
            CurrentRankingCeneo = p.CurrentRankingCeneo,
            NewRankingCeneo = p.NewRankingCeneo,

            MinPriceLimit = p.MinPriceLimit,
            MaxPriceLimit = p.MaxPriceLimit,

            WasLimitedByMin = (p.SuggestedPrice.HasValue && p.MinPriceLimit.HasValue && p.SuggestedPrice.Value == p.MinPriceLimit.Value),
            WasLimitedByMax = (p.SuggestedPrice.HasValue && p.MaxPriceLimit.HasValue && p.SuggestedPrice.Value == p.MaxPriceLimit.Value),

            IsTargetMet = p.IsTargetMet 
        })));

        var ruleId = @Model.RuleId;
        var storeId = @Model.StoreId;
        var sourceType = @((int)Model.SourceType);

        function executeAutomation() {
            var validProducts = productsData.filter(function(p) {
                return parseFloat(p.newPrice) > 0; 
            });

            if (validProducts.length === 0) {
                alert("Brak produktów z wyliczoną nową ceną.");
                return;
            }

            if (!confirm("Czy na pewno chcesz zapisać symulację zmian cen dla " + validProducts.length + " produktów?")) {
                return;
            }

            var payload = {
                RuleId: ruleId,
                StoreId: storeId,
                SourceType: sourceType,
                Products: validProducts
            };

            $.ajax({
                url: '@Url.Action("ExecuteAutomation", "PriceAutomation")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(payload),
                success: function(response) {
                    alert("Sukces! Zapisano log automatyzacji. Przetworzono: " + response.count);
                    location.reload();
                },
                error: function(xhr, status, error) {
                    alert("Błąd serwera: " + error);
                    console.error(xhr);
                }
            });
        }

        $(document).ready(function() {
            $('#automationTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Polish.json"
                },
                "pageLength": 25,
                "order": [[ 7, "asc" ]] 
            });
        });

        $(document).ready(function() {
        
        // 1. Obsługa przycisku Edycji/Plusa
        $(document).on('click', '.edit-btn', function() {
            var wrapper = $(this).closest('.purchase-wrapper');
            wrapper.find('.display-mode').addClass('d-none');
            wrapper.find('.edit-mode').removeClass('d-none');
            // Focus na input
            var input = wrapper.find('input');
            input.focus().select();
        });

        // 2. Obsługa przycisku Anuluj
        $(document).on('click', '.cancel-btn', function() {
            var wrapper = $(this).closest('.purchase-wrapper');
            wrapper.find('.edit-mode').addClass('d-none');
            wrapper.find('.display-mode').removeClass('d-none');
        });

        // 3. Obsługa przycisku Zapisz
        $(document).on('click', '.save-btn', function() {
            var btn = $(this);
            var wrapper = btn.closest('.purchase-wrapper');
            var input = wrapper.find('input');
            var newVal = input.val();

            // Walidacja
            if(!newVal || newVal < 0) {
                alert("Podaj poprawną cenę.");
                return;
            }

            var productId = wrapper.data('id');
            var storeId = wrapper.data('store-id');
            var isMarketplace = wrapper.data('is-marketplace'); // true/false (boolean from razor converted to string usually)

            // Przygotowanie danych w zależności od typu
            var url = '';
            var payload = {};

            if (isMarketplace === true || isMarketplace === "true") {
                // Allegro
                url = '@Url.Action("UpdateAllegroPurchasePrice", "AllegroProduct")?storeId=' + storeId;
                payload = {
                    AllegroProductId: parseInt(productId),
                    NewPrice: parseFloat(newVal)
                };
            } else {
                // Price Comparison (Sklep)
                url = '@Url.Action("UpdatePurchasePrice", "Product")?storeId=' + storeId;
                payload = {
                    ProductId: parseInt(productId),
                    NewPrice: parseFloat(newVal)
                };
            }

            // UI Loading state
            var originalIcon = btn.html();
            btn.html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);

            // Pobranie tokenu (zakładam, że jest w layoutcie lub formie, jeśli nie - AJAX może wymagać konfiguracji)
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: url,
                type: 'POST',
                contentType: 'application/json',
                headers: {
                    'RequestVerificationToken': token
                },
                data: JSON.stringify(payload),
                success: function(response) {
                    if(response.success) {
                        // Sukces - odświeżamy stronę, żeby przeliczyć reguły
                        // Można by też zaktualizować tylko DOM, ale tutaj reguły (min/max/suggested) zależą od ceny zakupu
                        // więc reload jest bezpieczniejszy dla spójności danych widoku.
                        location.reload(); 
                    } else {
                        alert("Błąd: " + response.message);
                        btn.html(originalIcon).prop('disabled', false);
                    }
                },
                error: function(xhr, status, error) {
                    alert("Wystąpił błąd serwera.");
                    console.error(error);
                    btn.html(originalIcon).prop('disabled', false);
                }
            });
        });
        
        // Zapisywanie enterem w polu input
        $(document).on('keypress', '.price-edit-input', function(e) {
            if(e.which == 13) {
                $(this).closest('.edit-mode').find('.save-btn').click();
            }
        });
    });
    </script>
}