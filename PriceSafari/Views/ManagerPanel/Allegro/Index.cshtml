@using Microsoft.AspNetCore.Http
@model List<AllegroOffer>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using PriceSafari.Models
@{
    ViewData["Title"] = "Wyszukiwarka Allegro";
    var token = HttpContextAccessor.HttpContext?.Session.GetString("AllegroAccessToken");
}

<h2>Wyszukiwarka ofert Allegro</h2>

@if (string.IsNullOrEmpty(token))
{
    <p>
        <a href="@Url.Action("Login", "Allegro")">🔑 Zaloguj się do Allegro</a>
    </p>
}
else
{
    <p>
        Token: @token
    </p>
}

<form method="post" asp-action="GetOffers" asp-controller="Allegro">
    <label for="ean">Podaj kod EAN:</label>
    <input type="text" id="ean" name="ean" required />
    <button type="submit">Szukaj</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}

@if (Model != null && Model.Count > 0)
{
    <h3>Wyniki wyszukiwania:</h3>
    <table border="1">
        <tr>
            <th>Nazwa</th>
            <th>Sprzedawca</th>
            <th>Cena</th>
            <th>Link do oferty</th>
        </tr>
        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.Name</td>
                <td>@offer.Seller.Login</td>
                <td>@offer.SellingMode.Price.Amount @offer.SellingMode.Price.Currency</td>
                <td><a href="https://allegro.pl/oferta/@offer.Id" target="_blank">Zobacz ofertę</a></td>
            </tr>
        }
    </table>
}
else if (Model != null)
{
    <p>Brak ofert dla podanego EAN.</p>
}
