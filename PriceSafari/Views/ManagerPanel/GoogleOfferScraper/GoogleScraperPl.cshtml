@model PriceSafari.ScrapersControllers.GoogleScraperPlViewModel
@{
    ViewData["Title"] = "Google Scraper PL";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";

}

<style>
   
    .google-scraper-container {
        padding: 20px;
        background: #f8f9fa;
        width: 100%;
        min-height: 100%;
        box-sizing: border-box;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 3px solid #4285f4;
    }

    .View {
        overflow-y: auto !important;
        overflow-x: hidden !important;
        height: auto !important;
        min-height: 100vh !important;
    }


    .page-title {
        font-size: 26px;
        font-weight: 600;
        color: #1a73e8;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .page-title i {
            color: #ea4335;
        }

    .status-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 14px;
        text-transform: uppercase;
    }


    .status-idle {
        background: #e8eaed;
        color: #5f6368;

    }

    .status-running {
        background: #e6f4ea;
        color: #1e8e3e;
        animation: pulse 2s infinite;
    }

    .status-paused {
        background: #fef7e0;
        color: #f9ab00;
    }
  

    .stats-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
        padding: 15px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .stats-bar-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
    }

        .stats-bar-item strong {
            color: #202124;
        }

        .stats-bar-item span {
            color: #1a73e8;
            font-weight: 600;
        }

    .controls-section {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .btn-google {
        padding: 10px 18px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
        font-size: 14px;
    }

    .btn-start {
        background: #1e8e3e;
        color: white;
    }

        .btn-start:hover {
            background: #137333;
        }

    .btn-stop {
        background: #ea4335;
        color: white;
    }

        .btn-stop:hover {
            background: #c5221f;
        }

    .btn-reset {
        background: #fbbc05;
        color: #202124;
    }

        .btn-reset:hover {
            background: #f9a825;
        }

    .btn-clear {
        background: #5f6368;
        color: white;
    }

        .btn-clear:hover {
            background: #3c4043;
        }

    .dashboard-section {
        background: white;
        border-radius: 10px;
        padding: 18px;
        margin-bottom: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .section-title {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 15px;
        color: #202124;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
        width: 100%;
        box-sizing: border-box;
    }

    .stat-card {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 10px 8px;
        text-align: center;
        border-left: 3px solid #4285f4;
        min-width: 0;
        box-sizing: border-box;
    }

        .stat-card.success {
            border-left-color: #34a853;
        }

        .stat-card.warning {
            border-left-color: #fbbc05;
        }

        .stat-card.danger {
            border-left-color: #ea4335;
        }

        .stat-card.info {
            border-left-color: #4285f4;
        }

        .stat-card.nuke {
            border-left-color: #9c27b0;
        }

    .stat-value {
        font-size: 20px;
        font-weight: 700;
        color: #202124;
        word-break: break-all;
    }

    .stat-label {
        font-size: 10px;
        color: #5f6368;
        margin-top: 4px;
        text-transform: uppercase;
    }

    .progress-section {
        background: white;
        border-radius: 10px;
        padding: 18px;
        margin-bottom: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }


    .progress-bar-bg {
        background: #333333;
        border-radius: 4px;  
        height: 28px;
        overflow: hidden;
        margin-bottom: 15px;
        border: 1px solid #222; 
    }

   
    .progress-bar-fill {
        height: 100%;
        background: #34a853; 
        border-radius: 2px;  
        transition: width 0.3s linear; 
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 13px;
        min-width: 40px;
    }

    .progress-info {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
        font-size: 13px;
        color: #5f6368;
    }

    .progress-info-item {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .elapsed-time {
        font-family: 'Consolas', monospace;
        font-size: 20px;
        font-weight: 700;
        color: #4285f4;
    }

  
    .chart-container {
        height: 200px;
        margin-top: 15px;
        position: relative;
        width: 100%;
    }

    #speedChart {
        width: 100% !important;
        height: 100% !important;
    }

    .scrapers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 15px;
    }

    .scraper-card {
        background: white;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        border-left: 5px solid #5f6368;
        transition: all 0.3s;
    }

        .scraper-card.status-idle {
            border-left-color: #34a853;
        }

        .scraper-card.status-busy {
            border-left-color: #4285f4;
            animation: busy-pulse 1.5s infinite;
        }

        .scraper-card.status-offline {
            border-left-color: #ea4335;
            opacity: 0.6;
        }

        .scraper-card.status-stopped {
            border-left-color: #fbbc05;
        }

        .scraper-card.status-resettingnetwork {
            border-left-color: #9c27b0;
        }
 

    .scraper-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .scraper-name {
        font-weight: 700;
        font-size: 15px;
        color: #202124;
    }

    .scraper-status {
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 10px;
        font-weight: 600;
        text-transform: uppercase;
    }

        .scraper-status.idle {
            background: #e6f4ea;
            color: #1e8e3e;
        }

        .scraper-status.busy {
            background: #e8f0fe;
            color: #1a73e8;
        }

        .scraper-status.offline {
            background: #fce8e6;
            color: #c5221f;
        }

        .scraper-status.stopped {
            background: #fef7e0;
            color: #e37400;
        }

        .scraper-status.resettingnetwork {
            background: #f3e5f5;
            color: #7b1fa2;
        }

    .scraper-stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 6px;
        margin-bottom: 10px;
    }

    .scraper-stat {
        text-align: center;
        padding: 6px 4px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .scraper-stat-value {
        font-size: 14px;
        font-weight: 700;
        color: #202124;
    }

    .scraper-stat-label {
        font-size: 9px;
        color: #5f6368;
        text-transform: uppercase;
    }

    .scraper-details {
        font-size: 11px;
        color: #5f6368;
        margin-bottom: 10px;
    }

        .scraper-details div {
            margin-bottom: 3px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

    .scraper-actions {
        display: flex;
        gap: 8px;
    }

    .btn-scraper {
        flex: 1;
        padding: 8px;
        border: none;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-scraper.pause {
            background: #fef7e0;
            color: #e37400;
        }

            .btn-scraper.pause:hover {
                background: #fbbc05;
                color: #202124;
            }

        .btn-scraper.resume {
            background: #e6f4ea;
            color: #1e8e3e;
        }

            .btn-scraper.resume:hover {
                background: #34a853;
                color: white;
            }

    .no-scrapers {
        text-align: center;
        padding: 30px;
        background: #f8f9fa;
        border-radius: 10px;
        color: #5f6368;
        grid-column: 1 / -1;
    }

        .no-scrapers i {
            font-size: 40px;
            margin-bottom: 10px;
            color: #dadce0;
        }

    .logs-section {
        background: #1a1a2e;
        border-radius: 10px;
        padding: 12px;
        max-height: 250px;
        overflow-y: auto;
    }

    .log-entry {
        font-family: 'Consolas', monospace;
        font-size: 11px;
        padding: 4px 8px;
        margin-bottom: 2px;
        border-radius: 4px;
    }

        .log-entry.info {
            color: #82aaff;
            background: rgba(130, 170, 255, 0.1);
        }

        .log-entry.success {
            color: #c3e88d;
            background: rgba(195, 232, 141, 0.1);
        }

        .log-entry.warning {
            color: #ffcb6b;
            background: rgba(255, 203, 107, 0.1);
        }

        .log-entry.error {
            color: #ff5370;
            background: rgba(255, 83, 112, 0.1);
        }

        .log-entry.nuke {
            color: #c792ea;
            background: rgba(199, 146, 234, 0.1);
        }

    .log-time {
        color: #676e95;
    }

    .log-scraper {
        color: #89ddff;
        font-weight: 600;
    }

    .urls-section {
        display: block !important;
        visibility: visible !important;
        opacity: 1 !important;
    }

    .table-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .search-box {
        padding: 10px 15px;
        border: 1px solid #dadce0;
        border-radius: 8px;
        width: 280px;
        font-size: 14px;
    }

        .search-box:focus {
            outline: none;
            border-color: #4285f4;
            box-shadow: 0 0 0 3px rgba(66, 133, 244, 0.2);
        }

    .filter-tabs {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
    }

    .filter-tab {
        padding: 8px 14px;
        border: none;
        background: #f8f9fa;
        border-radius: 18px;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .filter-tab.active {
            background: #4285f4;
            color: white;
        }

        .filter-tab:hover:not(.active) {
            background: #e8eaed;
        }

    .table-container {
        overflow: auto !important;
        max-height: 600px !important;
        display: block !important;
    }

    .urls-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 12px;
    }

        .urls-table th {
            background: #f8f9fa;
            padding: 10px 8px;
            text-align: left;
            font-weight: 600;
            color: #5f6368;
            border-bottom: 2px solid #e8eaed;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .urls-table td {
            padding: 8px;
            border-bottom: 1px solid #e8eaed;
            vertical-align: middle;
        }

        .urls-table tbody tr {
            background-color: white;
            transition: background-color 0.2s;
        }

            .urls-table tbody tr:hover {
                background: #f1f3f4 !important;
            }

            .urls-table tbody tr.scraped {
                background-color: #e6f4ea !important;
            }

            .urls-table tbody tr.rejected {
                background-color: #fce8e6 !important;
            }

    .url-cell {
        max-width: 280px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-family: monospace;
        font-size: 11px;
    }

        .url-cell a {
            color: #1a73e8;
            text-decoration: none;
        }

            .url-cell a:hover {
                text-decoration: underline;
            }

    .badge {
        padding: 3px 8px;
        border-radius: 10px;
        font-size: 10px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-wrga {
        background: #e8f0fe;
        color: #1a73e8;
    }

    .badge-gpid {
        background: #fef7e0;
        color: #e37400;
    }

    .badge-hid {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .badge-scraped {
        background: #e6f4ea;
        color: #1e8e3e;
    }

    .badge-rejected {
        background: #fce8e6;
        color: #c5221f;
    }

    .badge-pending {
        background: #f8f9fa;
        color: #5f6368;
    }

    .alert {
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .alert-success {
        background: #e6f4ea;
        color: #1e8e3e;
        border: 1px solid #34a853;
    }

    .alert-warning {
        background: #fef7e0;
        color: #e37400;
        border: 1px solid #fbbc05;
    }

    .alert-danger {
        background: #fce8e6;
        color: #c5221f;
        border: 1px solid #ea4335;
    }

    .btn-close {
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        opacity: 0.5;
    }

        .btn-close:hover {
            opacity: 1;
        }

    .two-column-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

  
</style>

<div class="google-scraper-container">
    <div class="page-header">
        <div class="page-title">
            <i class="fas fa-shopping-bag"></i>
            Google Shopping Scraper PL
        </div>
        <div>
            <span id="statusBadge" class="status-badge status-@Model.CurrentStatus.ToString().ToLower()">
                @(Model.CurrentStatus == PriceSafari.Services.GoogleScraping.GoogleScrapingProcessStatus.Running ? "Działa" :
                                Model.CurrentStatus == PriceSafari.Services.GoogleScraping.GoogleScrapingProcessStatus.Paused ? "Wstrzymany" : "Bezczynny")
            </span>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        var msgType = TempData["MessageType"]?.ToString() ?? "info";
        <div class="alert alert-@(msgType == "error" ? "danger" : msgType)" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" onclick="this.parentElement.remove()">×</button>
        </div>
    }

    <div class="stats-bar">
        <div class="stats-bar-item"><strong>Łącznie URL:</strong> <span id="totalUrlCount">@Model.DbStats.TotalUrls</span></div>
        <div class="stats-bar-item"><strong>Zescrapowane:</strong> <span id="scrapedUrlCount">@Model.DbStats.ScrapedUrls</span></div>
        <div class="stats-bar-item"><strong>Odrzucone:</strong> <span id="rejectedUrlCount">@Model.DbStats.RejectedUrls</span></div>
        <div class="stats-bar-item"><strong>Oczekujące:</strong> <span id="pendingUrlCount">@Model.DbStats.PendingUrls</span></div>
        <div class="stats-bar-item"><strong>Zebrane ceny:</strong> <span id="totalPricesCount">@Model.DbStats.TotalPrices</span></div>
        <div class="stats-bar-item"><strong>Scrapery online:</strong> <span id="onlineScrapersCount">@Model.Scrapers.Count</span></div>
    </div>

    <div class="controls-section" id="controlsSection">
        @if (Model.CurrentStatus != PriceSafari.Services.GoogleScraping.GoogleScrapingProcessStatus.Running)
        {
            <button type="button" class="btn-google btn-start" onclick="startScraping()">
                <i class="fas fa-play"></i> Rozpocznij scrapowanie
            </button>
        }
        else
        {
            <button type="button" class="btn-google btn-stop" onclick="stopScraping()">
                <i class="fas fa-stop"></i> Zatrzymaj scrapowanie
            </button>
        }
        <button type="button" class="btn-google btn-reset" onclick="resetRejected()">
            <i class="fas fa-redo"></i> Resetuj odrzucone (<span id="rejectedCountBtn">@Model.DbStats.RejectedUrls</span>)
        </button>
        <button type="button" class="btn-google btn-clear" onclick="clearData()">
            <i class="fas fa-trash"></i> Wyczyść dane
        </button>
    </div>

    <div class="progress-section">
        <div class="section-title"><i class="fas fa-chart-line"></i> Postęp scrapowania</div>
        @{
            var progressPercent = Model.DbStats.TotalUrls > 0 ? Math.Round((double)Model.DbStats.ScrapedUrls / Model.DbStats.TotalUrls * 100, 1) : 0;
        }
        <div class="progress-bar-bg">
            <div id="progressBarFill" class="progress-bar-fill" style="width: @progressPercent%;">@progressPercent%</div>
        </div>
        <div class="progress-info">
            <div class="progress-info-item"><i class="fas fa-clock"></i> Czas: <span id="elapsedTime" class="elapsed-time">00:00:00</span></div>
            <div class="progress-info-item"><i class="fas fa-tachometer-alt"></i> Prędkość: <span id="currentSpeed" style="color:#1e8e3e; font-weight:600;">0.00</span> URL/sek</div>
            <div class="progress-info-item"><i class="fas fa-check-circle"></i> <span id="progressScraped">@Model.DbStats.ScrapedUrls</span> / <span id="progressTotal">@Model.DbStats.TotalUrls</span></div>
            <div class="progress-info-item"><i class="fas fa-hourglass-half"></i> Pozostało: <span id="progressPending">@Model.DbStats.PendingUrls</span></div>
        </div>
        <div class="chart-container">
            <canvas id="speedChart"></canvas>
        </div>
    </div>

    <div class="two-column-grid">
        <div class="dashboard-section">
            <div class="section-title"><i class="fas fa-chart-bar"></i> Statystyki</div>
            <div class="stats-grid">
                <div class="stat-card info"><div id="totalUrlsStat" class="stat-value">@Model.DbStats.TotalUrls</div><div class="stat-label">Wszystkie</div></div>
                <div class="stat-card success"><div id="scrapedUrlsStat" class="stat-value">@Model.DbStats.ScrapedUrls</div><div class="stat-label">Zescrapowane</div></div>
                <div class="stat-card warning"><div id="rejectedUrlsStat" class="stat-value">@Model.DbStats.RejectedUrls</div><div class="stat-label">Odrzucone</div></div>
                <div class="stat-card success"><div id="totalPricesStat" class="stat-value">@Model.DbStats.TotalPrices</div><div class="stat-label">Ceny</div></div>
                <div class="stat-card info"><div class="stat-value" id="urlsWithWRGA">@Model.DbStats.UrlsWithWRGA</div><div class="stat-label">WRGA</div></div>
                <div class="stat-card info"><div class="stat-value" id="urlsWithGPID">@Model.DbStats.UrlsWithGPID</div><div class="stat-label">GPID</div></div>
                <div class="stat-card info"><div class="stat-value" id="urlsWithHID">@Model.DbStats.UrlsWithHidOffer</div><div class="stat-label">HID</div></div>
                <div class="stat-card nuke"><div id="nukeCountStat" class="stat-value">0</div><div class="stat-label">NUKE</div></div>
            </div>
        </div>
        <div class="dashboard-section">
            <div class="section-title"><i class="fas fa-terminal"></i> Logi aktywności</div>
            <div id="logsContainer" class="logs-section">
                @foreach (var log in Model.RecentLogs.OrderByDescending(l => l.Timestamp).Take(50))
                {
                    <div class="log-entry @log.Level.ToLower()">
                        <span class="log-time">[@log.Timestamp.ToString("HH:mm:ss")]</span>
                        <span class="log-scraper">[@log.ScraperName]</span>
                        @if (!string.IsNullOrEmpty(log.BatchId))
                        {
                            <span style="color:#89ddff;">[#@(log.BatchId.Length > 8 ? log.BatchId.Substring(log.BatchId.Length - 8) : log.BatchId)]</span>
                        }
                        @log.Message
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="dashboard-section">
        <div class="section-title">
            <i class="fas fa-server"></i> Aktywne scrapery
            <span style="margin-left: auto; font-size: 13px; font-weight: 400; color: #5f6368;">
                Online: <span id="scrapersOnlineCount">@Model.Scrapers.Count</span> | Zajęte: <span id="scrapersBusyCount">0</span>
            </span>
        </div>
        <div id="scrapersContainer" class="scrapers-grid">
            @if (Model.Scrapers.Any())
            {
                @foreach (dynamic scraper in Model.Scrapers)
                {
                    var statusClass = ((string)scraper.status).ToLower();
                    var statusText = statusClass == "idle" ? "Bezczynny" : statusClass == "busy" ? "Zajęty" : statusClass == "offline" ? "Offline" : statusClass == "stopped" ? "Zatrzymany" : statusClass == "resettingnetwork" ? "Reset sieci" : statusClass;
                    <div class="scraper-card status-@statusClass" data-scraper="@scraper.name">
                        <div class="scraper-header">
                            <div class="scraper-name">@scraper.name</div>
                            <span class="scraper-status @statusClass">@statusText</span>
                        </div>
                        <div class="scraper-stats">
                            <div class="scraper-stat"><div class="scraper-stat-value scraper-processed">@scraper.totalUrlsProcessed</div><div class="scraper-stat-label">Przetw.</div></div>
                            <div class="scraper-stat"><div class="scraper-stat-value scraper-success-rate">@scraper.successRate%</div><div class="scraper-stat-label">Sukces</div></div>
                            <div class="scraper-stat"><div class="scraper-stat-value scraper-urls-per-min">@scraper.urlsPerMinute</div><div class="scraper-stat-label">URL/min</div></div>
                            <div class="scraper-stat"><div class="scraper-stat-value scraper-urls-per-sec" style="color:#1e8e3e;">@(((double)scraper.urlsPerMinute / 60).ToString("F2"))</div><div class="scraper-stat-label">URL/sek</div></div>
                        </div>
                        <div class="scraper-details">
                            <div><i class="fas fa-network-wired"></i> IP: <span class="scraper-ip">@(scraper.currentIpAddress ?? "N/A")</span></div>
                            <div><i class="fas fa-box"></i> Paczka: <span class="scraper-batch">@(scraper.currentBatchId != null ? ((string)scraper.currentBatchId).Substring(Math.Max(0, ((string)scraper.currentBatchId).Length - 12)) : "Brak")</span></div>
                            <div><i class="fas fa-bomb"></i> NUKE: <span class="scraper-nuke">@scraper.nukeCount</span> | <i class="fas fa-coins"></i> Ceny: <span class="scraper-prices">@scraper.totalPricesCollected</span></div>
                        </div>
                        <div class="scraper-actions">
                            @if ((bool)scraper.isManuallyPaused)
                            {
                                <button type="button" class="btn-scraper resume" onclick="resumeScraper('@scraper.name')"><i class="fas fa-play"></i> Wznów</button>
                            }
                            else
                            {
                                <button type="button" class="btn-scraper pause" onclick="pauseScraper('@scraper.name')"><i class="fas fa-pause"></i> Wstrzymaj</button>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-scrapers">
                    <i class="fas fa-server"></i>
                    <p>Brak aktywnych scraperów.</p>
                    <p style="font-size: 13px;">Uruchom skrypt Python, aby rozpocząć scrapowanie.</p>
                </div>
            }
        </div>
    </div>

    <div class="urls-section">
        <div class="section-title"><i class="fas fa-list"></i> Lista URLi do scrapowania (@Model.Urls.Count wierszy)</div>
        <div class="table-controls">
            <input type="text" id="searchBox" class="search-box" placeholder="Szukaj po URL, ID, CID...">
            <div class="filter-tabs">
                <button class="filter-tab active" data-filter="all" onclick="applyFilter('all', this)">Wszystkie (<span id="filterAll">@Model.DbStats.TotalUrls</span>)</button>
                <button class="filter-tab" data-filter="pending" onclick="applyFilter('pending', this)">Oczekujące (<span id="filterPending">@Model.DbStats.PendingUrls</span>)</button>
                <button class="filter-tab" data-filter="scraped" onclick="applyFilter('scraped', this)">Zescrapowane (<span id="filterScraped">@Model.DbStats.ScrapedUrls</span>)</button>
                <button class="filter-tab" data-filter="rejected" onclick="applyFilter('rejected', this)">Odrzucone (<span id="filterRejected">@Model.DbStats.RejectedUrls</span>)</button>
            </div>
        </div>
        <div class="table-container">
            <table class="urls-table" id="urlsTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>URL Google</th>
                        <th>CID</th>
                        <th>
                            <a asp-action="GoogleScraperPl" asp-route-sortOrder="@ViewData["GidSortParam"]" style="color: inherit; text-decoration: none; cursor: pointer;">
                                GID <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>HID</th>
                        <th>Flagi</th>
                        <th>Status</th>
                        <th>Ceny</th>
                    </tr>
                </thead>
                <tbody id="urlsTableBody">
                    @foreach (var url in Model.Urls)
                    {
                        var rowClass = url.GoogleIsScraped ? (url.GoogleIsRejected ? "rejected" : "scraped") : "";
                        var statusText = url.GoogleIsRejected ? "rejected" : (url.GoogleIsScraped ? "scraped" : "pending");
                        <tr class="@rowClass" data-id="@url.Id" data-status="@statusText">
                            <td><strong>@url.Id</strong></td>
                            <td class="url-cell" title="@url.GoogleOfferUrl">
                                @if (!string.IsNullOrEmpty(url.GoogleOfferUrl))
                                {
                                    <a href="@url.GoogleOfferUrl" target="_blank">@url.GoogleOfferUrl</a>
                                }
                                else if (url.UseGoogleHidOffer)
                                {
                                    <span style="color:#7b1fa2;">[HID Offer]</span>
                                }
                            </td>
                            <td><code>@(url.GoogleCid ?? "-")</code></td>
                            <td><code>@(url.GoogleGid ?? "-")</code></td>
                            <td><code>@(url.GoogleHid ?? "-")</code></td>
                            <td>
                                @if (url.UseWRGA)
                                {
                                    <span class="badge badge-wrga">WRGA</span>
                                }
                                @if (url.UseGPID)
                                {
                                    <span class="badge badge-gpid">GPID</span>
                                }
                                @if (url.UseGoogleHidOffer)
                                {
                                    <span class="badge badge-hid">HID</span>
                                }
                            </td>
                            <td class="status-cell">
                                @if (url.GoogleIsRejected)
                                {
                                    <span class="badge badge-rejected">Odrzucony</span>
                                }
                                else if (url.GoogleIsScraped)
                                {

                                    <span class="badge badge-scraped">Zescrapowany</span>
                                }
                                else
                                {

                                    <span class="badge badge-pending">Oczekuje</span>
                                }
                            </td>
                            <td class="prices-cell">
                                @if (url.GooglePricesCount > 0)
                                {
                                    <strong style="color:#1e8e3e;">@url.GooglePricesCount</strong>
                                }
                                else
                                {

                                    <span style="color:#5f6368;">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dane inicjalne z modelu
        var scrapingStartTime = @(Model.ScrapingStartTime.HasValue ? $"new Date('{Model.ScrapingStartTime.Value:o}')" : "null");
        var isRunning = @(Model.CurrentStatus == PriceSafari.Services.GoogleScraping.GoogleScrapingProcessStatus.Running ? "true" : "false");
        var lastScrapedCount = @Model.DbStats.ScrapedUrls;

        // Zmienne pomocnicze
        var speedChart = null;
        var lastSpeedCheckTime = Date.now();
        var initialBaseCount = 0;
        var currentFilter = 'all';

        // --- USUNIĘTO API_KEY (Bezpieczeństwo) ---

        function initSpeedChart() {
            var ctx = document.getElementById('speedChart').getContext('2d');
            var gradientFill = ctx.createLinearGradient(0, 0, 0, 180);
            gradientFill.addColorStop(0, 'rgba(14, 126, 135, 0.3)');
            gradientFill.addColorStop(1, 'rgba(14, 126, 135, 0.05)');

            speedChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Średnia prędkość (URL/sek)',
                        data: [],
                        backgroundColor: gradientFill,
                        borderColor: 'rgba(14, 126, 135, 1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 0,
                        pointHoverRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.parsed.y;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { grid: { color: 'rgba(0,0,0,0.05)' }, ticks: { color: '#5f6368', maxTicksLimit: 10 } },
                        y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' }, ticks: { color: '#5f6368' } }
                    }
                }
            });
        }

        // --- SIGNALR CONFIG ---
        var connection = new signalR.HubConnectionBuilder().withUrl("/scrapinghub").withAutomaticReconnect().build();

        connection.on("GoogleUpdateScraperStatus", updateScraperCard);
        connection.on("GoogleUpdateDashboard", updateDashboard);
        connection.on("GoogleUpdateLogs", updateLogs);
        connection.on("GoogleUpdateStats", updateStats);
        connection.on("GoogleUpdateOfferRow", updateOfferRow);

        connection.on("GoogleScrapingStarted", function(data) {
            isRunning = true;
            scrapingStartTime = new Date(data.startTime);
            lastSpeedCheckTime = Date.now();

            // Reset licznika sesji dla wykresu
            var currentCountText = document.getElementById('scrapedUrlCount').textContent;
            initialBaseCount = parseInt(currentCountText) || 0;

            updateStatusBadge('running', 'Działa');
            updateControlButtons(true);

            if (speedChart) {
                speedChart.data.labels = [];
                speedChart.data.datasets[0].data = [];
                speedChart.update();
            }
        });

        connection.on("GoogleScrapingFinished", function() {
            isRunning = false;
            updateStatusBadge('idle', 'Zakończone');
            updateControlButtons(false);
        });

        connection.on("GoogleScrapingStopped", function() {
            isRunning = false;
            scrapingStartTime = null;
            updateStatusBadge('idle', 'Zatrzymane');
            updateControlButtons(false);
        });

        connection.start().catch(function(err) { console.error('[SignalR] Błąd:', err); });

        // --- FUNKCJE POMOCNICZE UI ---

        function updateStatusBadge(status, text) {
            var badge = document.getElementById('statusBadge');
            badge.className = 'status-badge status-' + status;
            badge.textContent = text;
        }

        function updateControlButtons(running) {
            var section = document.getElementById('controlsSection');
            var rejCount = document.getElementById('rejectedUrlCount').textContent;
            if (running) {
                section.innerHTML = '<button type="button" class="btn-google btn-stop" onclick="stopScraping()"><i class="fas fa-stop"></i> Zatrzymaj scrapowanie</button><button type="button" class="btn-google btn-reset" onclick="resetRejected()"><i class="fas fa-redo"></i> Resetuj odrzucone (<span id="rejectedCountBtn">' + rejCount + '</span>)</button><button type="button" class="btn-google btn-clear" onclick="clearData()"><i class="fas fa-trash"></i> Wyczyść dane</button>';
            } else {
                section.innerHTML = '<button type="button" class="btn-google btn-start" onclick="startScraping()"><i class="fas fa-play"></i> Rozpocznij scrapowanie</button><button type="button" class="btn-google btn-reset" onclick="resetRejected()"><i class="fas fa-redo"></i> Resetuj odrzucone (<span id="rejectedCountBtn">' + rejCount + '</span>)</button><button type="button" class="btn-google btn-clear" onclick="clearData()"><i class="fas fa-trash"></i> Wyczyść dane</button>';
            }
        }

        function updateScraperCard(scraper) {
            var card = document.querySelector('.scraper-card[data-scraper="' + scraper.name + '"]');
            var container = document.getElementById('scrapersContainer');
            var noScrapers = container.querySelector('.no-scrapers');
            if (noScrapers) noScrapers.remove();

            if (!card) {
                card = document.createElement('div');
                card.dataset.scraper = scraper.name;
                container.appendChild(card);
            }

            var statusClass = scraper.status.toLowerCase();
            var statusText = statusClass === 'idle' ? 'Bezczynny' : statusClass === 'busy' ? 'Zajęty' : statusClass === 'offline' ? 'Offline' : statusClass === 'stopped' ? 'Zatrzymany' : 'Reset sieci';
            var urlsPerSec = (scraper.urlsPerMinute / 60).toFixed(2);
            // Zmieniono wywołanie pause/resume na stringi
            var actionBtn = scraper.isManuallyPaused
                ? `<button type="button" class="btn-scraper resume" onclick="resumeScraper('${scraper.name}')"><i class="fas fa-play"></i> Wznów</button>`
                : `<button type="button" class="btn-scraper pause" onclick="pauseScraper('${scraper.name}')"><i class="fas fa-pause"></i> Wstrzymaj</button>`;

            card.className = 'scraper-card status-' + statusClass;
            card.innerHTML = `<div class="scraper-header"><div class="scraper-name">${scraper.name}</div><span class="scraper-status ${statusClass}">${statusText}</span></div>
                              <div class="scraper-stats">
                                <div class="scraper-stat"><div class="scraper-stat-value scraper-processed">${scraper.totalUrlsProcessed}</div><div class="scraper-stat-label">Przetw.</div></div>
                                <div class="scraper-stat"><div class="scraper-stat-value scraper-success-rate">${scraper.successRate}%</div><div class="scraper-stat-label">Sukces</div></div>
                                <div class="scraper-stat"><div class="scraper-stat-value scraper-urls-per-min">${scraper.urlsPerMinute}</div><div class="scraper-stat-label">URL/min</div></div>
                                <div class="scraper-stat"><div class="scraper-stat-value scraper-urls-per-sec" style="color:#1e8e3e;">${urlsPerSec}</div><div class="scraper-stat-label">URL/sek</div></div>
                              </div>
                              <div class="scraper-details">
                                <div><i class="fas fa-network-wired"></i> IP: <span class="scraper-ip">${scraper.currentIpAddress || 'N/A'}</span></div>
                                <div><i class="fas fa-box"></i> Paczka: <span class="scraper-batch">${scraper.currentBatchId ? scraper.currentBatchId.slice(-12) : 'Brak'}</span></div>
                                <div><i class="fas fa-bomb"></i> NUKE: <span class="scraper-nuke">${scraper.nukeCount}</span> | <i class="fas fa-coins"></i> Ceny: <span class="scraper-prices">${scraper.totalPricesCollected}</span></div>
                              </div>
                              <div class="scraper-actions">${actionBtn}</div>`;
        }

        function updateDashboard(d) {
            document.getElementById('scrapersOnlineCount').textContent = d.scrapersOnline;
            document.getElementById('scrapersBusyCount').textContent = d.scrapersBusy;
            document.getElementById('onlineScrapersCount').textContent = d.scrapersOnline;
            document.getElementById('nukeCountStat').textContent = d.totalNukeEvents;
            var m = { 'Running': ['running', 'Działa'], 'Idle': ['idle', 'Bezczynny'], 'Paused': ['paused', 'Wstrzymany'] };
            var s = m[d.status] || ['idle', d.status];
            updateStatusBadge(s[0], s[1]);
            isRunning = d.status === 'Running';
        }

        function updateStats(s) {
            document.getElementById('totalUrlsStat').textContent = s.totalUrls;
            document.getElementById('scrapedUrlsStat').textContent = s.scrapedUrls;
            document.getElementById('rejectedUrlsStat').textContent = s.rejectedUrls;
            document.getElementById('totalPricesStat').textContent = s.totalPrices;
            document.getElementById('totalUrlCount').textContent = s.totalUrls;
            document.getElementById('scrapedUrlCount').textContent = s.scrapedUrls;
            document.getElementById('rejectedUrlCount').textContent = s.rejectedUrls;
            document.getElementById('pendingUrlCount').textContent = s.pendingUrls;
            document.getElementById('totalPricesCount').textContent = s.totalPrices;
            document.getElementById('progressScraped').textContent = s.scrapedUrls;
            document.getElementById('progressTotal').textContent = s.totalUrls;
            document.getElementById('progressPending').textContent = s.pendingUrls;

            var rb = document.getElementById('rejectedCountBtn');
            if (rb) rb.textContent = s.rejectedUrls;

            var pct = s.totalUrls > 0 ? Math.round(s.scrapedUrls / s.totalUrls * 1000) / 10 : 0;
            var pb = document.getElementById('progressBarFill'); pb.style.width = pct + '%'; pb.textContent = pct + '%';

            // --- LOGIKA WYKRESU ---
            if (isRunning && scrapingStartTime) {
                var now = new Date();
                var elapsedSeconds = (now - scrapingStartTime) / 1000;

                if (elapsedSeconds > 2) {
                    var itemsInSession = s.scrapedUrls - initialBaseCount;
                    if (itemsInSession < 0) itemsInSession = 0;
                    var averageSpeed = (itemsInSession / elapsedSeconds).toFixed(2);

                    document.getElementById('currentSpeed').textContent = averageSpeed;

                    if (speedChart) {
                        var currentTimeInt = Math.floor(elapsedSeconds);
                        var lastLabel = speedChart.data.labels.length > 0 ? speedChart.data.labels[speedChart.data.labels.length - 1] : -1;
                        var lastLabelInt = parseInt(lastLabel);

                        if (lastLabelInt === currentTimeInt) {
                            var lastIndex = speedChart.data.labels.length - 1;
                            var currentVal = parseFloat(speedChart.data.datasets[0].data[lastIndex]);
                            var newVal = parseFloat(averageSpeed);
                            speedChart.data.datasets[0].data[lastIndex] = (currentVal + newVal) / 2;
                        } else {
                            speedChart.data.labels.push(currentTimeInt);
                            speedChart.data.datasets[0].data.push(parseFloat(averageSpeed));
                        }

                        if (speedChart.data.labels.length > 60) {
                            speedChart.data.labels.shift();
                            speedChart.data.datasets[0].data.shift();
                        }

                        speedChart.update();
                    }
                }
            }
        }

        function updateLogs(logs) {
            var html = '';
            for (var i = 0; i < logs.length; i++) {
                var l = logs[i], t = new Date(l.timestamp).toLocaleTimeString('pl-PL'), b = l.batchId ? l.batchId.slice(-8) : '';
                html += '<div class="log-entry ' + l.level.toLowerCase() + '"><span class="log-time">[' + t + ']</span> <span class="log-scraper">[' + l.scraperName + ']</span> ' + (b ? '<span style="color:#89ddff;">[#' + b + ']</span> ' : '') + l.message + '</div>';
            }
            document.getElementById('logsContainer').innerHTML = html;
        }

        function updateOfferRow(o) {
            var row = document.querySelector('tr[data-id="' + o.id + '"]');
            if (!row) return;
            row.classList.remove('scraped', 'rejected');
            row.dataset.status = o.isRejected ? 'rejected' : o.isScraped ? 'scraped' : 'pending';
            if (o.isRejected) row.classList.add('rejected'); else if (o.isScraped) row.classList.add('scraped');
            row.querySelector('.status-cell').innerHTML = o.isRejected ? '<span class="badge badge-rejected">Odrzucony</span>' : o.isScraped ? '<span class="badge badge-scraped">Zescrapowany</span>' : '<span class="badge badge-pending">Oczekuje</span>';
            row.querySelector('.prices-cell').innerHTML = o.pricesCount > 0 ? '<strong style="color:#1e8e3e;">' + o.pricesCount + '</strong>' : '<span style="color:#5f6368;">-</span>';
            applyCurrentFilter();
        }

        function updateElapsedTime() {
            if (!scrapingStartTime || !isRunning) return;
            var d = Math.floor((new Date() - scrapingStartTime) / 1000);
            document.getElementById('elapsedTime').textContent = String(Math.floor(d / 3600)).padStart(2, '0') + ':' + String(Math.floor((d % 3600) / 60)).padStart(2, '0') + ':' + String(d % 60).padStart(2, '0');
        }

        function applyFilter(f, btn) {
            currentFilter = f;
            document.querySelectorAll('.filter-tab').forEach(function(t) { t.classList.remove('active'); });
            if (btn) btn.classList.add('active');
            applyCurrentFilter();
        }

        function applyCurrentFilter() {
            var q = document.getElementById('searchBox').value.toLowerCase();
            document.querySelectorAll('#urlsTableBody tr').forEach(function(r) {
                var show = (currentFilter === 'all' || r.dataset.status === currentFilter) && (!q || r.textContent.toLowerCase().indexOf(q) !== -1);
                r.style.display = show ? '' : 'none';
            });
        }

        // --- GŁÓWNE ZMIANY: STEROWANIE PRZEZ MVC CONTROLLER ---

        function startScraping() {
            console.log('[Start] Rozpoczynam...');
            // Pobieramy token Antiforgery
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            // Wywołujemy akcję MVC (nie API)
            fetch('@Url.Action("StartScraping", "GoogleScraper")', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token
                }
            })
            .then(function(r) { return r.json(); })
            .then(function(d) {
                console.log('[Start Response]', d);
                if (d.success) {
                    // UI zaktualizuje się samo przez SignalR, ale dla pewności:
                    updateControlButtons(true);
                    updateStatusBadge('running', 'Działa');
                } else {
                    alert('Błąd: ' + d.message);
                }
            })
            .catch(function(e) { console.error(e); alert('Błąd: ' + e); });
        }

        function stopScraping() {
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("StopScraping", "GoogleScraper")', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token
                }
            })
            .then(function(r) { return r.json(); })
            .then(function(d) {
                if (d.success) {
                    updateControlButtons(false);
                    updateStatusBadge('idle', 'Zatrzymane');
                }
            });
        }

        function resetRejected() {
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            fetch('@Url.Action("ResetRejected", "GoogleScraper")', {
                method: 'POST',
                headers: { 'RequestVerificationToken': token }
            }).then(refreshStats);
        }

        function clearData() {
            if (!confirm('Czy na pewno chcesz wyczyścić wszystkie zebrane dane?')) return;
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            fetch('@Url.Action("ClearData", "GoogleScraper")', {
                method: 'POST',
                headers: { 'RequestVerificationToken': token }
            }).then(function() { location.reload(); });
        }

        function pauseScraper(name) {
            var fd = new FormData(); fd.append('scraperName', name);
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            fetch('@Url.Action("PauseScraper", "GoogleScraper")', {
                method: 'POST',
                body: fd,
                headers: { 'RequestVerificationToken': token }
            });
        }

        function resumeScraper(name) {
            var fd = new FormData(); fd.append('scraperName', name);
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            fetch('@Url.Action("ResumeScraper", "GoogleScraper")', {
                method: 'POST',
                body: fd,
                headers: { 'RequestVerificationToken': token }
            });
        }

        function refreshStats() {
            // Używamy Url.Action do pobrania statystyk (API wewnątrz controllera MVC)
            fetch('@Url.Action("GetStats", "GoogleScraper")')
                .then(function(r) { return r.json(); })
                .then(updateStats);
        }

        document.addEventListener('DOMContentLoaded', function() {
            initSpeedChart();
            initialBaseCount = 0;
            setInterval(updateElapsedTime, 1000);
            setInterval(refreshStats, 5000);

            var searchBox = document.getElementById('searchBox');
            if (searchBox) {
                searchBox.addEventListener('input', applyCurrentFilter);
            }
        });
    </script>
    @Html.AntiForgeryToken()
}