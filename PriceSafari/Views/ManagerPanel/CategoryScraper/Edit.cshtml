@model PriceSafari.Models.CategoryClass

@{
    ViewData["Title"] = "Edytuj Kategorię";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>Edytuj Kategorię</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@Model.CategoryId">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="StoreId" />

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryUrl" class="control-label"></label>
                <input asp-for="CategoryUrl" class="form-control" />
                <span asp-validation-for="CategoryUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Depth" class="control-label"></label>
                <input asp-for="Depth" class="form-control" type="number" />
                <span asp-validation-for="Depth" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                <a asp-action="Index" asp-route-storeId="@Model.StoreId" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>