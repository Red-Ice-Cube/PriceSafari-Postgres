@model PriceSafari.Models.ViewModels.SchedulePlanViewModels.AddTaskViewModel

@{
    ViewData["Title"] = "Dodaj Zadanie";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddTask" method="post">
    <!-- dayDetailId w parametrach -->
    <input type="hidden" name="dayDetailId" value="@ViewBag.DayDetailId" />

    <div class="form-group">
        <label>Nazwa sesji:</label>
        <input asp-for="SessionName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Godzina startu (HH:mm):</label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input type="checkbox" asp-for="BaseEnabled" class="form-check-input" />
        <label class="form-check-label">Base Scal</label>
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="UrlEnabled" class="form-check-input" />
        <label class="form-check-label">Url Scal</label>
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="GoogleEnabled" class="form-check-input" />
        <label class="form-check-label">Google Scraper</label>
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="CeneoEnabled" class="form-check-input" />
        <label class="form-check-label">Ceneo Scraper</label>
    </div>

    <div class="form-group">
        <label>Data/godzina zakończenia (opcjonalnie):</label>
        <input asp-for="CompletedAt" class="form-control" placeholder="yyyy-MM-dd HH:mm" />
        <span asp-validation-for="CompletedAt" class="text-danger"></span>
    </div>

    <hr />
    <h4>Wybierz sklepy:</h4>
    <table class="table">
        <thead>
            <tr><th>Sklep</th><th></th></tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Stores.Count; i++)
            {
                <tr>
                    <td>@Model.Stores[i].StoreName</td>
                    <td>
                        <input asp-for="Stores[i].IsSelected" type="checkbox" />
                        <input type="hidden" asp-for="Stores[i].StoreId" />
                        <input type="hidden" asp-for="Stores[i].StoreName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
