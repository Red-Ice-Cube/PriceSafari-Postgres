@model PriceSafari.Models.ViewModels.SchedulePlanViewModels.AddTaskViewModel

@{
    ViewData["Title"] = "Dodaj nowe zadanie";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0">
            <i class="fas fa-plus-circle me-2"></i>Dodaj nowe zadanie do harmonogramu
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="AddTask" method="post">
            <input type="hidden" name="dayDetailId" value="@ViewBag.DayDetailId" />

            <h5><i class="fas fa-info-circle me-2 text-primary"></i>Podstawowe informacje</h5>
            <hr class="mt-2 mb-4" />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="SessionName" class="form-label fw-bold">Nazwa zadania (sesji)</label>
                    <input asp-for="SessionName" class="form-control" placeholder="np. Wieczorne scrapowanie" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="StartTime" class="form-label fw-bold">Godzina startu (HH:mm)</label>
                    <input asp-for="StartTime" type="time" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="EndTime" class="form-label fw-bold">Godzina końca (HH:mm)</label>
                    <input asp-for="EndTime" type="time" class="form-control" />
                </div>
            </div>

            <h5 class="mt-4"><i class="fas fa-cogs me-2 text-primary"></i>Wybierz akcje</h5>
            <hr class="mt-2 mb-4" />

            <div class="mb-4 p-3 border rounded bg-light">
                <h6 class="fw-bold">⚙️ Porównywarki Cenowe (Ceneo / Google)</h6>
                <div class="d-flex flex-wrap align-items-center mt-3">

                    <div class="form-check me-3">
                        <input asp-for="UrlEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">1. Przygotuj URL</label>
                    </div>

                    <span class="fs-4 mx-2 text-muted">→</span>

                    <div class="me-3">
                        <div class="form-check">
                            <input asp-for="CeneoEnabled" class="form-check-input" />
                            <label class="form-check-label">2. Scraper Ceneo</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="GoogleEnabled" class="form-check-input" />
                            <label class="form-check-label">2. Scraper Google</label>
                        </div>
                    </div>

                    <span class="fs-4 mx-2 text-muted">→</span>

                    <div class="form-check me-3">
                        <input asp-for="ApiBotEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">2a. API Sklepu (Ceny)</label>
                    </div>
                    <span class="fs-4 mx-2 text-muted">→</span>

                    <div class="form-check">
                        <input asp-for="BaseEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">3. Scal wyniki</label>
                    </div>
                </div>
            </div>

            <div class="p-3 border rounded bg-light">
                <h6 class="fw-bold">🛒 Marketplace (Allegro)</h6>
                <div class="d-flex flex-wrap align-items-center mt-3">

                    <div class="form-check me-3">
                        <input asp-for="UrlScalAleEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">1. Przygotuj URL</label>
                    </div>

                    <span class="fs-4 mx-2 text-muted">→</span>

                    <div class="form-check me-3">
                        <input asp-for="AleCrawEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">2. Uruchom Scraper</label>
                    </div>

                    <span class="fs-4 mx-2 text-muted">→</span>

                    <div class="form-check me-3">
                        <input asp-for="AleApiBotEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">2a. Pobierz dane z API</label>
                    </div>

                    <span class="fs-4 mx-2 text-muted">→</span>

                    <div class="form-check">
                        <input asp-for="AleBaseEnabled" class="form-check-input" />
                        <label class="form-check-label fw-bold">3. Scal wyniki</label>
                    </div>
                </div>
            </div>

            <div class="p-3 border rounded bg-warning bg-opacity-10 mb-4" style="border-color: #ffc107 !important;">
                <h6 class="fw-bold text-dark"><i class="fas fa-robot me-2"></i>🤖 Automatyzacja Cen (Price Automation)</h6>
                <p class="text-muted small mb-2">Te akcje wykonają się na samym końcu procesu, po zakończeniu wszystkich powyższych zadań.</p>

                <div class="d-flex flex-wrap align-items-center mt-3">
                    <div class="form-check me-4">
                        <input asp-for="PriceComparisonAutomationEnabled" class="form-check-input" style="transform: scale(1.2);" />
                        <label class="form-check-label fw-bold ms-1">
                            Uruchom Reguły Porównywarek
                            <span class="d-block small text-muted font-weight-normal">(Ceneo / Google / Sklep)</span>
                        </label>
                    </div>

                    <div class="form-check me-4">
                        <input asp-for="MarketPlaceAutomationEnabled" class="form-check-input" style="transform: scale(1.2);" />
                        <label class="form-check-label fw-bold ms-1">
                            Uruchom Reguły Marketplace
                            <span class="d-block small text-muted font-weight-normal">(Allegro)</span>
                        </label>
                    </div>
                </div>
            </div>

            <h5 class="mt-4"><i class="fas fa-store me-2 text-primary"></i>Wybierz sklepy</h5>
            <hr class="mt-2 mb-4" />

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Nazwa sklepu</th>
                            <th class="text-center">Przypisz do zadania</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Stores.Count; i++)
                        {
                            <tr>
                                <td>@Model.Stores[i].StoreName</td>
                                <td class="text-center">
                                    <div class="form-check d-inline-block">
                                        <input asp-for="Stores[i].IsSelected" type="checkbox" class="form-check-input" />
                                    </div>
                                    <input type="hidden" asp-for="Stores[i].StoreId" />
                                    <input type="hidden" asp-for="Stores[i].StoreName" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-transparent text-end mt-4 border-0 px-0">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-times me-2"></i>Anuluj
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Zapisz zadanie
                </button>
            </div>
        </form>
    </div>
</div>