@model PriceSafari.Models.ViewModels.SchedulePlanViewModels.AddTaskViewModel

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}


<h2>Dodaj Zadanie</h2>
<form asp-action="AddTask" method="post">
    <!-- Ukryte: dayDetailId (np. Monday) -->
    <input type="hidden" name="dayDetailId" value="@ViewBag.DayDetailId" />

    <div class="form-group">
        <label>Nazwa Zadania (sesji):</label>
        <input asp-for="SessionName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Godzina startu (HH:mm) [obowiązkowe]:</label>
        <input asp-for="StartTime" class="form-control" />
    </div>

    <div class="form-group">
        <label>Godzina końca (HH:mm) [obowiązkowe]:</label>
        <input asp-for="EndTime" class="form-control" />
    </div>

    <div class="form-check">
        <input asp-for="BaseEnabled" class="form-check-input" />
        <label class="form-check-label">Base Scal</label>
    </div>
    <div class="form-check">
        <input asp-for="UrlEnabled" class="form-check-input" />
        <label class="form-check-label">Url Scal</label>
    </div>
    <div class="form-check">
        <input asp-for="GoogleEnabled" class="form-check-input" />
        <label class="form-check-label">Google Scraper</label>
    </div>
    <div class="form-check">
        <input asp-for="CeneoEnabled" class="form-check-input" />
        <label class="form-check-label">Ceneo Scraper</label>
    </div>
    <div class="form-check">
        <input asp-for="AleBaseEnabled" class="form-check-input" />
        <label asp-for="AleBaseEnabled" class="form-check-label">Scalanie Bazy Allegro</label>
    </div>

    <hr />
    <h4>Sklepy:</h4>
    <table class="table">
        <thead>
            <tr><th>Sklep</th><th>Wybierz</th></tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Stores.Count; i++)
            {
                <tr>
                    <td>@Model.Stores[i].StoreName</td>
                    <td>
                        <input asp-for="Stores[i].IsSelected" type="checkbox" />
                        <input type="hidden" asp-for="Stores[i].StoreId" />
                        <input type="hidden" asp-for="Stores[i].StoreName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
