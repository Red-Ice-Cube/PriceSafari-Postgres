@using PriceSafari.Models
@using PriceSafari.Enums
@model List<PriceSafari.Models.ViewModels.AutomationStoreListViewModel>

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    ViewData["Title"] = "Wybór sklepu do automatyzacji";
}

<style>

    .button-disabled {
        pointer-events: none;
        opacity: 0.5;
    }

    .icon-disabled {
        filter: grayscale(100%);
        opacity: 0.4;
    }

    .rules-header {
        font-weight: 600;
        font-size: 14px;
        color: #5a5c69;
        margin-bottom: 3px;
        line-height: 1.2;
    }

    .status-inline-container {
        display: flex;
        align-items: center;
        font-size: 12px;
        color: #858796;
        white-space: nowrap;
    }

    .status-item {
        display: flex;
        align-items: center;
    }

    .status-dot {
        width: 7px;
        height: 7px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 5px;
    }

    .dot-green {
        background-color: #1cc88a;
    }

    .dot-red {
        background-color: #e74a3b;
    }

    .status-separator {
        margin: 0 8px;
        color: #d1d3e2;
    }

    .status-empty {
        font-size: 13px;
        color: #858796;
    }
</style>

<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Automatyzacja Cen
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Sklep</th>
                            <th></th>
                            <th>Porównywarki Cenowe</th>
                            <th>Marketplace</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {

                            var totalComp = store.ComparisonRulesActiveCount + store.ComparisonRulesInactiveCount;

                            var totalMarket = store.MarketplaceRulesActiveCount + store.MarketplaceRulesInactiveCount;

                            <tr class="store-row">
                                <td>
                                    @if (!string.IsNullOrEmpty(store.LogoUrl))
                                    {
                                        <img src="@store.LogoUrl" class="img-container" alt="@store.StoreName" />
                                    }
                                </td>

                                <td>
                                    @store.StoreName
                                </td>

                                <td>
                                    <div style="display: flex; align-items: center; gap: 15px;">

                                        <a href="@Url.Action("Index", "AutomationRules", new { storeId = store.StoreId, filterType = AutomationSourceType.PriceComparison })"
                                           class="Button-select @(!(store.OnCeneo || store.OnGoogle) ? "button-disabled" : "")"
                                           title="Reguły porównywarek">

                                            <img src="/images/Ceneo.png" alt="Ceneo" class="@(store.OnCeneo ? "" : "icon-disabled")" />
                                            <img src="/images/GoogleShopping.png" alt="Google Shopping" class="@(store.OnGoogle ? "" : "icon-disabled")" />
                                        </a>

                                        <div>
                                            @if (store.OnCeneo || store.OnGoogle)
                                            {
                                                <div class="rules-header">
                                                    @totalComp Automatów cenowych
                                                </div>

                                                @if (totalComp > 0)
                                                {
                                                    <div class="status-inline-container">
                                                        @if (store.ComparisonRulesActiveCount > 0)
                                                        {
                                                            <span class="status-item" style="color: #1cc88a; font-weight:500;">
                                                                <span class="status-dot dot-green"></span>
                                                                @store.ComparisonRulesActiveCount aktywne
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="status-item">0 aktywnych</span>
                                                        }

                                                        <span class="status-separator">|</span>

                                                        @if (store.ComparisonRulesInactiveCount > 0)
                                                        {
                                                            <span class="status-item" style="color: #e74a3b;">
                                                                <span class="status-dot dot-red"></span>
                                                                @store.ComparisonRulesInactiveCount wyłączone
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="status-item">0 wyłączonych</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="status-empty">Brak reguł</div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="status-empty">Brak reguł</div>
                                            }
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div style="display: flex; align-items: center; gap: 15px;">

                                        <a href="@Url.Action("Index", "AutomationRules", new { storeId = store.StoreId, filterType = AutomationSourceType.Marketplace })"
                                           class="Button-select @(!store.OnAllegro ? "button-disabled" : "")"
                                           title="Reguły Allegro">

                                            <img src="/images/AllegroIcon.png" alt="Allegro" class="@(store.OnAllegro ? "" : "icon-disabled")" />
                                        </a>

                                        <div>
                                            @if (store.OnAllegro)
                                            {
                                                <div class="rules-header">
                                                    @totalMarket reguł automatów cenowych
                                                </div>

                                                @if (totalMarket > 0)
                                                {
                                                    <div class="status-inline-container">
                                                        @if (store.MarketplaceRulesActiveCount > 0)
                                                        {
                                                            <span class="status-item" style="color: #1cc88a; font-weight:500;">
                                                                <span class="status-dot dot-green"></span>
                                                                @store.MarketplaceRulesActiveCount aktywne
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="status-item">0 aktywnych</span>
                                                        }

                                                        <span class="status-separator">|</span>

                                                        @if (store.MarketplaceRulesInactiveCount > 0)
                                                        {
                                                            <span class="status-item" style="color: #e74a3b;">
                                                                <span class="status-dot dot-red"></span>
                                                                @store.MarketplaceRulesInactiveCount wyłączone
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="status-item">0 wyłączonych</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="status-empty">Brak reguł</div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="status-empty">Brak reguł</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="padding: 40px; text-align: center; color: #858796;">
                <p style="font-size: 1.2em;">Brak dostępnych sklepów do konfiguracji.</p>
            </div>
        }
    </div>
</div>