@using PriceSafari.Models
@model List<PriceSafari.Models.ViewModels.AutomationStoreListViewModel>

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    ViewData["Title"] = "Wybór sklepu do automatyzacji";
}

<style>
    .button-disabled {
        pointer-events: none;
        opacity: 0.4;
        filter: grayscale(100%);
    }

    .icon-disabled {
        filter: grayscale(100%);
        opacity: 0.5;
    }

    .scenario-count {
        font-size: 13px;
        color: #4e73df;
        font-weight: 600;
        margin-top: 4px;
    }

    .scenario-count-empty {
        font-size: 13px;
        color: #858796;
        margin-top: 4px;
    }

    .channel-box {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 10px;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

        .channel-box:hover {
            background-color: #f8f9fc;
        }
</style>

<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Zarządzanie Automatyzacją Cen - Wybierz Sklep
        </div>

        <div style="padding: 0 20px 20px 20px;">
            <p class="text-muted">Poniżej znajduje się lista Twoich sklepów. Wybierz kanał sprzedaży, aby zarządzać jego regułami automatyzacji.</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Logo</th>
                            <th>Nazwa Sklepu</th>
                            <th>Porównywarki Cen (Google/Ceneo)</th>
                            <th>Marketplace (Allegro)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr class="store-row">
                                <td>
                                    @if (!string.IsNullOrEmpty(store.LogoUrl))
                                    {
                                        <img src="@store.LogoUrl" class="img-container" alt="@store.StoreName" style="max-width: 60px; max-height: 60px; object-fit: contain;" />
                                    }
                                </td>

                                <td style="font-weight: 500; font-size: 1.1em;">
                                    @store.StoreName
                                </td>

                                <td>
                                    <a href="@Url.Action("Index", "AutomationRules", new { storeId = store.StoreId, filterType = AutomationSourceType.PriceComparison })"
                                       class="channel-box @(!(store.OnCeneo || store.OnGoogle) ? "button-disabled" : "")"
                                       style="text-decoration: none; color: inherit;">

                                        <div style="display:flex; gap:8px;">
                                            <img src="/images/Ceneo.png" alt="Ceneo" style="width: 24px; height: 24px;" class="@(store.OnCeneo ? "" : "icon-disabled")" />
                                            <img src="/images/GoogleShopping.png" alt="Google" style="width: 24px; height: 24px;" class="@(store.OnGoogle ? "" : "icon-disabled")" />
                                        </div>

                                        <div>
                                            @if (store.OnCeneo || store.OnGoogle)
                                            {
                                                <div style="font-weight: 600;">Porównywarki</div>
                                                @if (store.ComparisonRulesCount > 0)
                                                {
                                                    <div class="scenario-count">
                                                        <i class="fas fa-robot"></i> @store.ComparisonRulesCount reguł(y)
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="scenario-count-empty">Brak reguł</div>
                                                }
                                            }
                                            else
                                            {
                                                <div style="color: #ccc;">Niedostępne</div>
                                            }
                                        </div>
                                    </a>
                                </td>

                                <td>
                                    <a href="@Url.Action("Index", "AutomationRules", new { storeId = store.StoreId, filterType = AutomationSourceType.Marketplace })"
                                       class="channel-box @(!store.OnAllegro ? "button-disabled" : "")"
                                       style="text-decoration: none; color: inherit;">

                                        <div>
                                            <img src="/images/AllegroIcon.png" alt="Allegro" style="width: 24px; height: 24px;" class="@(store.OnAllegro ? "" : "icon-disabled")" />
                                        </div>

                                        <div>
                                            @if (store.OnAllegro)
                                            {
                                                <div style="font-weight: 600;">Allegro</div>
                                                @if (store.MarketplaceRulesCount > 0)
                                                {
                                                    <div class="scenario-count" style="color: #ff5a00;">
                                                        <i class="fas fa-robot"></i> @store.MarketplaceRulesCount reguł(y)
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="scenario-count-empty">Brak reguł</div>
                                                }
                                            }
                                            else
                                            {
                                                <div style="color: #ccc;">Niedostępne</div>
                                            }
                                        </div>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="padding: 20px; text-align: center;">
                <p>Brak dostępnych sklepów do konfiguracji.</p>
            </div>
        }
    </div>
</div>