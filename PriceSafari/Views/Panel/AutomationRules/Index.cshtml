@model IEnumerable<PriceSafari.Models.AutomationRule>

@{
    ViewData["Title"] = "Reguły Automatyzacji";
    int storeId = ViewBag.StoreId;
    string storeName = ViewBag.StoreName;
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Reguły Automatyzacji: @storeName</h1>
        <a asp-action="Create"
           asp-route-storeId="@storeId"
           asp-route-sourceType="@ViewBag.CurrentFilter"
           class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Dodaj nową regułę
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kolor</th>
                            <th>Nazwa Reguły</th>
                            <th>Źródło danych</th>
                            <th>Status</th>
                            <th style="min-width: 250px;">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">Brak zdefiniowanych reguł dla tego sklepu.</td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center" style="width: 80px;">
                                    <div style="width: 30px; height: 30px; background-color: @item.ColorHex; border-radius: 50%; margin: 0 auto; border: 1px solid #ccc;"></div>
                                </td>
                                <td style="vertical-align: middle; font-weight: 500;">
                                    @item.Name
                                </td>
                                <td style="vertical-align: middle;">
                                    @if (item.SourceType == PriceSafari.Models.AutomationSourceType.PriceComparison)
                                    {
                                        <span class="badge badge-info">Porównywarki (Google/Ceneo)</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning" style="color:#fff; background-color: #ff5a00;">Allegro / Marketplace</span>
                                    }
                                </td>
                                <td style="vertical-align: middle;">
                                    @if (item.IsActive)
                                    {
                                        <span class="text-success"><i class="fas fa-check-circle"></i> Aktywna</span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary"><i class="fas fa-pause-circle"></i> Wyłączona</span>
                                    }
                                </td>
                                <td style="vertical-align: middle;">
                                    <a asp-controller="PriceAutomation"
                                       asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-success shadow-sm"
                                       title="Zobacz produkty i symulację">
                                        <i class="fas fa-eye"></i> Szczegóły
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info shadow-sm" style="margin-left: 5px;">
                                        <i class="fas fa-edit"></i> Edytuj
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block; margin-left: 5px;" onsubmit="return confirm('Czy na pewno chcesz usunąć tę regułę?');">
                                        <button type="submit" class="btn btn-sm btn-danger shadow-sm">
                                            <i class="fas fa-trash"></i> Usuń
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>