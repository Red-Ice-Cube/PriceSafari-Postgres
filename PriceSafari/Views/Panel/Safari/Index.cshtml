@model IEnumerable<PriceSafari.Models.ProductClass>

@{
    ViewData["Title"] = "Lista Produktów";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    var storeId = ViewBag.StoreId;
}

<div class="Vert">
    <div class="Vert-full">
        <div class="price-box-space">
            <div class="Order-Container-Title">
                Lista produktów @ViewBag.StoreName
                <div class="bar-List">
                    <div class="d-flex mb-3">
                        <p class="me-4">Liczba produktów znalezionych: <span id="foundCount" class="badge bg-success">@Model.Count()</span></p>
                        <p class="me-4">Liczba przypisanych produktów: <span id="assignedCount" class="badge bg-info">0</span></p>

                        <form id="assignToReportForm">
                            <div>
                                <label for="reportSelection">Wybierz raport:</label>
                                <select id="reportSelection" name="reportId" required>
                                    <option value="">Wybierz raport</option>
                                    @foreach (var report in ViewBag.Reports)
                                    {
                                        <option value="@report.ReportId">@report.ReportName</option>
                                    }
                                </select>
                            </div>
                        </form>

                        <div class="mt-3">
                            <a href="@Url.Action("CreateReport", "Safari", new { storeId = ViewBag.StoreId })" class="btn btn-secondary">Stwórz nowy raport</a>
                        </div>
                        <div class="mt-3">
                            <button id="selectAllVisible" class="btn btn-primary">Zaznacz wszystkie widoczne</button>
                            <button id="deselectAllVisible" class="btn btn-secondary">Odznacz wszystkie widoczne</button>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Flag Filters Section -->
            <div class="flag-filters">
                <h5>Filtruj według flag:</h5>
                <ul id="flagFilterList">
                    @foreach (var flag in Model.SelectMany(p => p.ProductFlags).Select(pf => pf.Flag.FlagName).Distinct())
                    {
                        <li>
                            <input type="checkbox" class="flag-checkbox" value="@flag" /> @flag
                        </li>
                    }
                </ul>
            </div>

            <div>
                <input type="text" id="productSearch" placeholder="Wyszukaj produkt" />
            </div>
        </div>

        <div class="Vert-table">
            <table class="table-orders">
                <thead>
                    <tr>
                        <th>Zaznacz</th>
                        <th>Nazwa (<span id="productCount">@Model.Count()</span>)</th>
                        <th>Indeks</th>
                        <th>Url</th>
                        <th>Google Url</th>
                        <th>Status</th>
                        <th>Flagi</th>
                    </tr>
                </thead>
                <tbody id="productTable">
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="product-checkbox" data-product-id="@product.ProductId" disabled />
                            </td>
                            <td>@product.ProductNameInStoreForGoogle</td>
                            <td>@product.CatalogNumber</td>
                            <td><a href="@product.Url" target="_blank">@product.Url</a></td>
                            <td><a href="@product.GoogleUrl" target="_blank">@product.GoogleUrl</a></td>
                            <td>
                                @if (product.FoundOnGoogle ?? false)
                                {
                                    <span class="badge bg-success">Found</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                            <td>
                                @if (product.ProductFlags != null && product.ProductFlags.Any())
                                {
                                    @string.Join(", ", product.ProductFlags.Select(pf => pf.Flag.FlagName))
                                }
                                else
                                {
                                    <span>Brak flag</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var allProducts = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(p => new
            {
                productId = p.ProductId,
                productNameInStoreForGoogle = p.ProductNameInStoreForGoogle,
                catalogNumber = p.CatalogNumber,
                url = p.Url,
                googleUrl = p.GoogleUrl,
                foundOnGoogle = p.FoundOnGoogle,
                flags = p.ProductFlags != null ? p.ProductFlags.Select(pf => pf.Flag.FlagName).ToList() : new List<string>()
            }).ToList()));

            var currentAssignedProductIds = [];
            var selectedReportId = null;

            // Function to highlight matches in product names and catalog numbers
            function highlightMatches(text, searchTerm) {
                if (!searchTerm) return text;
                var regex = new RegExp('(' + searchTerm + ')', 'gi');
                return text.replace(regex, '<span style="color: #9400D3; font-weight: 600;">$1</span>');
            }

            // Function to filter and update the product table
            function filterAndUpdateTable() {
                var searchTerm = $('#productSearch').val().toLowerCase();
                var selectedFlags = $('.flag-checkbox:checked').map(function () {
                    return $(this).val();
                }).get();

                var filteredProducts = allProducts.filter(function (product) {
                    var matchesSearch = product.productNameInStoreForGoogle.toLowerCase().includes(searchTerm) ||
                        product.catalogNumber.toLowerCase().includes(searchTerm);
                    var matchesFlags = selectedFlags.length === 0 || selectedFlags.some(flag => product.flags.includes(flag));
                    return matchesSearch && matchesFlags;
                });

                updateTable(filteredProducts, searchTerm);
            }

            // Function to update the product table
            function updateTable(products, searchTerm = '') {
                $('#productTable').empty();
                products.forEach(function (product) {
                    var productNameHighlighted = highlightMatches(product.productNameInStoreForGoogle, searchTerm);
                    var catalogNumberHighlighted = highlightMatches(product.catalogNumber, searchTerm);
                    var isChecked = currentAssignedProductIds.includes(product.productId) ? 'checked' : '';
                    var isDisabled = selectedReportId ? '' : 'disabled'; // Disable checkboxes if no report selected

                    var row = `<tr>
                                        <td><input type="checkbox" class="product-checkbox" data-product-id="${product.productId}" ${isChecked} ${isDisabled} /></td>
                                        <td>${productNameHighlighted}</td>
                                        <td>${catalogNumberHighlighted}</td>
                                        <td><a href="${product.url}" target="_blank">${product.url}</a></td>
                                        <td><a href="${product.googleUrl}" target="_blank">${product.googleUrl}</a></td>
                                        <td>${product.foundOnGoogle ? '<span class="badge bg-success">Found</span>' : '<span class="badge bg-secondary">Pending</span>'}</td>
                                        <td>${product.flags.length ? product.flags.join(", ") : 'Brak flag'}</td>
                                    </tr>`;
                    $('#productTable').append(row);
                });
                enableCheckboxes();
                updateProductCount(products.length); // Update the displayed product count
                updateAssignedCount(); // Update the count of assigned products
            }

            // Update displayed product count
            function updateProductCount(count) {
                $('#productCount').text(count);
            }

            // Attach event handlers to checkboxes
            function enableCheckboxes() {
                $('.product-checkbox').on('change', function () {
                    var productId = $(this).data('product-id');
                    var isChecked = $(this).is(':checked');
                    triggerBatchProductAssignment([productId], isChecked);
                    updateAssignedCount(); // Call to update the assigned count on checkbox change
                });
            }

            // Handle mass assignment (select/deselect all)
            $('#selectAllVisible').click(function () {
                var productIds = $('input.product-checkbox:visible').map(function () {
                    if (!$(this).prop('checked')) {
                        $(this).prop('checked', true);
                        return $(this).data('product-id');
                    }
                }).get();
                triggerBatchProductAssignment(productIds, true);
            });

            $('#deselectAllVisible').click(function () {
                var productIds = $('input.product-checkbox:visible').map(function () {
                    if ($(this).prop('checked')) {
                        $(this).prop('checked', false);
                        return $(this).data('product-id');
                    }
                }).get();
                triggerBatchProductAssignment(productIds, false);
            });

            // Function to handle batch product assignment
            function triggerBatchProductAssignment(productIds, isAssigned) {
                if (!selectedReportId) {
                    alert("Wybierz raport przed zaznaczeniem produktu.");
                    return;
                }

                if (productIds.length > 0) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("ToggleBatchProductAssignment", "Safari")',
                        data: JSON.stringify({
                            reportId: parseInt(selectedReportId),
                            productIds: productIds,
                            isAssigned: isAssigned
                        }),
                        contentType: "application/json; charset=utf-8",
                        success: function (response) {
                            if (response.success) {
                                if (isAssigned) {
                                    currentAssignedProductIds = currentAssignedProductIds.concat(productIds);
                                } else {
                                    currentAssignedProductIds = currentAssignedProductIds.filter(id => !productIds.includes(id));
                                }
                                updateAssignedCount(); // Update the count of assigned products
                            } else {
                                alert("Wystąpił błąd podczas aktualizacji raportu.");
                            }
                        },
                        error: function () {
                            alert("Wystąpił błąd podczas komunikacji z serwerem.");
                        }
                    });
                }
            }

            // Update assigned product count dynamically
            function updateAssignedCount() {
                var assignedCount = $('input.product-checkbox:checked').length; // Count checked checkboxes
                $('#assignedCount').text(assignedCount);
            }

            // Handle flag filtering (OR condition)
            $('.flag-checkbox').on('change', function () {
                filterAndUpdateTable();
            });

            // Handle search with highlighting
            $('#productSearch').on('input', function () {
                filterAndUpdateTable();
            });

            // Handle report selection and disable/enable checkboxes
            $('#reportSelection').on('change', function () {
                selectedReportId = $(this).val();
                if (selectedReportId) {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("GetReportProducts", "Safari")',
                        data: { reportId: selectedReportId },
                        success: function (response) {
                            if (response.success) {
                                currentAssignedProductIds = response.productIds;
                                filterAndUpdateTable(); // Reapply the current filters
                            }
                        }
                    });
                } else {
                    currentAssignedProductIds = [];
                    filterAndUpdateTable();
                }
            });

            // Load initial data
            filterAndUpdateTable();
        });
    </script>
}
