@model IEnumerable<PriceSafari.Models.ProductClass>

@{
    ViewData["Title"] = "Lista Produktów";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    var storeId = ViewBag.StoreId;
    var storeLogo = ViewBag.StoreLogo;
}

<div class="Vert">
    <div class="Page-Box">
        <div class="Page-Box-Container">
            <div class="Page-Box-Category">
            
                <div><img src="@storeLogo" class="img-container" /></div>
                <div class="store-section">

                    <a href="@Url.Action("CreateReport", "Safari", new { storeId = ViewBag.StoreId })" class="btn btn-secondary">Stwórz nowy raport</a>
                    <form id="assignToReportForm">
                        <div>

                            <select id="reportSelection" name="reportId" class="DropDown" style="width:100%;" required>
                                <option value="">Wybierz raport</option>
                                @foreach (var report in ViewBag.Reports)
                                {
                                    <option value="@report.ReportId" data-prepared="@report.Prepared">@report.ReportName</option>
                                }
                            </select>
                        </div>
                        <button id="startReportPreparation" class="btn btn-primary mt-2">Zleć raport</button>
                    </form>
                </div>

                <!-- Flags Filter -->
                <div class="filterBox">
                    <div class="Category-Container-Select" style="margin-top:-2px;">Flagi</div>
                    <div class="store-section" id="flagContainer">
                        <div class="flag-filters">
                            <div id="flagFilterList">
                                <!-- Checkboxy flag zostaną wygenerowane przez JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="Horizontal">
                <div class="order-upper-box">
                    <!-- Search Input -->
                    <input type="text" id="productSearch" placeholder="Wyszukaj produkt" />

                    <select id="categoryFilter" class="DropDown">
                        <option value="">Wszystkie kategorie</option>
                    </select>
              
                    <div class="mt-3">
                        <button id="selectAllVisible" class="btn btn-primary">Zaznacz wszystkie widoczne</button>
                        <button id="deselectAllVisible" class="btn btn-secondary">Odznacz wszystkie widoczne</button>
                    </div>
                    <!-- Report Info -->
                    <div class="form-check-orders">
                        <div>
                            <p><strong>Liczba produktów znalezionych</strong> <span id="foundCount" class="badge bg-success">0</span></p>
                            <p><strong>Przypisane produkty do raportu <span id="reportNameDisplay"></span></strong> <span id="assignedCount" class="badge bg-info">0</span></p>
                        </div>
                    </div>

                </div>

                <div id="sortingButtons">
                    <div class="ProductCount" id="displayedProductCount"></div>
                </div>

                <div class="Vert-table">
                    <table class="table-orders">
                        <thead>
                            <tr>
                                <th>Zaznacz</th>
                                <th>Obraz</th> <!-- Dodano kolumnę na obrazek -->
                                <th>Nazwa (<span id="productCount">0</span>)</th>
                                <th>Ean</th>
                               
                                <th>Status</th>
                                <th>Url</th>
                                <th>Flagi</th>
                            </tr>
                        </thead>

                        <tbody id="productTable">
                            <!-- Tabela produktów zostanie wygenerowana przez JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Chart.js Library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            var allProducts = [];
            var currentAssignedProductIds = new Set();
            var selectedReportId = null;
            var selectedReportPreparedStatus = null;
            var totalProductsCount = 0;

            function loadProducts() {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetProducts", "Safari")',
                    data: { storeId: @storeId },
                    success: function (response) {
                        if (response.success) {
                            allProducts = response.products;
                            totalProductsCount = allProducts.length;
                            $('#foundCount').text(totalProductsCount);
                            generateFlagFilters(allProducts);
                            filterAndUpdateTable();
                        } else {
                            alert("Wystąpił błąd podczas ładowania produktów.");
                        }
                    },
                    error: function () {
                        alert("Wystąpił błąd podczas komunikacji z serwerem.");
                    }
                });
            }

            // Funkcja do generowania checkboxów flag
            function generateFlagFilters(products) {
                var flags = [];
                products.forEach(function (product) {
                    if (product.flags && product.flags.length > 0) {
                        product.flags.forEach(function (flag) {
                            if (!flags.some(f => f.name === flag.name)) {
                                flags.push(flag);
                            }
                        });
                    }
                });

                var flagFilterList = $('#flagFilterList');
                flagFilterList.empty();
                flags.forEach(function (flag) {
                    flagFilterList.append(`
                                <div>
                                    <input type="checkbox" class="flag-checkbox" value="${flag.name}" /> ${flag.name}
                                </div>
                            `);
                });

                // Przypisz zdarzenie do nowo wygenerowanych checkboxów
                $('.flag-checkbox').on('change', function () {
                    filterAndUpdateTable();
                });
            }

            // Funkcja do podświetlania wyszukiwanego tekstu
            function highlightMatches(text, searchTerm) {
                if (!searchTerm) return text;
                var regex = new RegExp('(' + searchTerm + ')', 'gi');
                return text.replace(regex, '<span style="color: #9400D3; font-weight: 600;">$1</span>');
            }

            // Funkcja do filtrowania i aktualizacji tabeli produktów
            function filterAndUpdateTable() {
                var searchTerm = $('#productSearch').val().toLowerCase();
                var selectedFlags = $('.flag-checkbox:checked').map(function () {
                    return $(this).val();
                }).get();

                var filteredProducts = allProducts.filter(function (product) {
                    var matchesSearch = product.productNameInStoreForGoogle.toLowerCase().includes(searchTerm) ||
                        product.ean.toLowerCase().includes(searchTerm);
                    var matchesFlags = selectedFlags.length === 0 || selectedFlags.some(flagName => product.flags.some(f => f.name === flagName));
                    return matchesSearch && matchesFlags;
                });

                updateTable(filteredProducts, searchTerm);
            }

            function generateFlagsHtml(flags) {
                if (flags.length === 0) {
                    return 'Brak flag';
                }

                var flagsHtml = '';
                flags.forEach(function (flag) {
                    flagsHtml += `<span class="flag" style="color:${flag.color}; border: 2px solid ${flag.color}; background-color:${hexToRgba(flag.color, 0.3)}; padding: 4px 8px; margin: 2px; border-radius: 4px; font-size: 0.9em; white-space: nowrap;">
                                ${flag.name}
                            </span> `;
                });
                return flagsHtml;
            }

            function hexToRgba(hex, alpha) {
                if (!hex) {
                    return 'rgba(0, 0, 0, ' + alpha + ')';
                }
                hex = hex.replace('#', '');
                if (hex.length === 3) {
                    hex = hex.split('').map(function (h) {
                        return h + h;
                    }).join('');
                }
                var bigint = parseInt(hex, 16);
                if (isNaN(bigint)) {
                    return 'rgba(0, 0, 0, ' + alpha + ')';
                }
                var r = (bigint >> 16) & 255;
                var g = (bigint >> 8) & 255;
                var b = bigint & 255;
                return 'rgba(' + r + ',' + g + ',' + b + ',' + alpha + ')';
            }


            // Zaktualizowana funkcja updateTable
            function updateTable(products, searchTerm = '') {
                $('#productTable').empty();
                products.forEach(function (product) {
                    var productNameHighlighted = highlightMatches(product.productNameInStoreForGoogle, searchTerm);
                    var eanNumberHighlighted = highlightMatches(product.ean, searchTerm);
                    var isChecked = currentAssignedProductIds.has(product.productId) ? 'checked' : '';
                    var isDisabled = (!selectedReportId || selectedReportPreparedStatus === false) ? 'disabled' : '';

                    var imageCell = product.productImg ? `<img data-src="${product.productImg}" alt="${product.productNameInStoreForGoogle}" class="lazy-load-flex"/>` : 'Brak obrazu';

                    var row = `<tr class="product-row" data-product-id="${product.productId}">
                        <td><input type="checkbox" class="product-checkbox" data-product-id="${product.productId}" ${isChecked} ${isDisabled} /></td>
                        <td>${imageCell}</td>
                        <td>${productNameHighlighted}</td>
                        <td>${eanNumberHighlighted}</td>
                       
                        <td>${product.foundOnGoogle ? '<span class="badge bg-success">Znaleziono na Google</span>' : '<span class="badge bg-secondary">Pending</span>'}</td>
                                 <td>
                                         <div class="store-section">
                                                   <button class="Button-Page-Small no-row-click" onclick="window.open('${product.url}', '_blank')">Twoja strona</button>
                                                            <button class="Button-Page-Small no-row-click" style="margin-top: 4px;" onclick="window.open('${product.googleUrl}', '_blank')">Google Product</button>
                                         </div>
                                          
                                </td>
                        <td>${generateFlagsHtml(product.flags)}</td>
                    </tr>`;
                    $('#productTable').append(row);
                });
                enableCheckboxes();
                updateProductCount(products.length);

                $('#productCount').text(products.length);

                initLazyLoad();

                enableRowClick();
            }


            // Funkcja do aktualizacji liczby wyświetlanych produktów
            function updateProductCount(count) {
                $('#productCount').text(count);
            }

            // Nowa funkcja enableRowClick
            function enableRowClick() {
                $('#productTable').off('click', '.product-row').on('click', '.product-row', function (e) {
                    // Ignoruj kliknięcia na przyciski z klasą .no-row-click
                    if ($(e.target).is('.no-row-click, a, input[type="checkbox"]')) {
                        return;
                    }

                    var checkbox = $(this).find('.product-checkbox');
                    var productId = parseInt($(this).data('product-id'));

                    if (!selectedReportId) {
                        alert("Proszę wybrać raport do którego mają być przypisane produkty.");
                        return;
                    }
                    if (selectedReportPreparedStatus === false) {
                        alert("Ten raport jest w trakcie przygotowania, nie można już zmienić przypisanych do niego produktów.");
                        return;
                    }
                    if (checkbox.is(':disabled')) {
                        return;
                    }

                    // Przełącz stan checkboxa
                    checkbox.prop('checked', !checkbox.prop('checked'));

                    // Wywołaj zdarzenie 'change' na checkboxie, aby obsłużyć przypisanie
                    checkbox.trigger('change');
                });
            }

            // Funkcja inicjalizująca lazy loading
            function initLazyLoad() {
                const lazyLoadImages = document.querySelectorAll('.lazy-load-flex');
                const timers = new Map();

                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        const img = entry.target;
                        const index = [...lazyLoadImages].indexOf(img);

                        if (entry.isIntersecting) {
                            const timer = setTimeout(() => {
                                loadImageWithNeighbors(index);
                                observer.unobserve(img);
                                timers.delete(img);
                            }, 100);
                            timers.set(img, timer);
                        } else {
                            if (timers.has(img)) {
                                clearTimeout(timers.get(img));
                                timers.delete(img);
                            }
                        }
                    });
                }, {
                    root: null,
                    rootMargin: '50px',
                    threshold: 0.01
                });

                function loadImageWithNeighbors(index) {
                    const range = 6;
                    const start = Math.max(0, index - range);
                    const end = Math.min(lazyLoadImages.length - 1, index + range);

                    for (let i = start; i <= end; i++) {
                        const img = lazyLoadImages[i];
                        if (!img.src) {
                            img.src = img.dataset.src;
                            img.onload = () => {
                                img.classList.add('loaded');
                            };
                        }
                    }
                }

                lazyLoadImages.forEach(img => {
                    observer.observe(img);
                });
            }

            // Funkcja do obsługi checkboxów produktów
            function enableCheckboxes() {
                $('.product-checkbox').off('change').on('change', function () {
                    if (!selectedReportId) {
                        alert("Proszę wybrać raport do którego mają być przypisane produkty.");
                        $(this).prop('checked', !$(this).prop('checked')); // Cofnij zmianę
                        return;
                    }
                    if (selectedReportPreparedStatus === false) {
                        alert("Ten raport jest w trakcie przygotowania, nie można już zmienić przypisanych do niego produktów.");
                        $(this).prop('checked', !$(this).prop('checked')); // Cofnij zmianę
                        return;
                    }
                    var productId = parseInt($(this).data('product-id'));
                    var isChecked = $(this).is(':checked');
                    triggerBatchProductAssignment([productId], isChecked);
                });
            }

            // Masowe zaznaczanie/odznaczanie produktów
            $('#selectAllVisible').click(function () {
                if (!selectedReportId) {
                    alert("Proszę wybrać raport do którego mają być przypisane produkty.");
                    return;
                }
                if (selectedReportPreparedStatus === false) {
                    alert("Ten raport jest w trakcie przygotowania, nie można już zmienić przypisanych do niego produktów.");
                    return;
                }
                var productIds = $('input.product-checkbox:visible').map(function () {
                    if (!$(this).prop('checked')) {
                        $(this).prop('checked', true);
                        return parseInt($(this).data('product-id'));
                    }
                }).get();
                triggerBatchProductAssignment(productIds, true);
            });

            $('#deselectAllVisible').click(function () {
                if (!selectedReportId) {
                    alert("Proszę wybrać raport do którego mają być przypisane produkty.");
                    return;
                }
                if (selectedReportPreparedStatus === false) {
                    alert("Ten raport jest w trakcie przygotowania, nie można już zmienić przypisanych do niego produktów.");
                    return;
                }
                var productIds = $('input.product-checkbox:visible').map(function () {
                    if ($(this).prop('checked')) {
                        $(this).prop('checked', false);
                        return parseInt($(this).data('product-id'));
                    }
                }).get();
                triggerBatchProductAssignment(productIds, false);
            });

            // Funkcja do masowego przypisywania produktów do raportu
            function triggerBatchProductAssignment(productIds, isAssigned) {
                if (!selectedReportId) {
                    alert("Proszę wybrać raport do którego mają być przypisane produkty.");
                    return;
                }
                if (selectedReportPreparedStatus === false) {
                    alert("Ten raport jest w trakcie przygotowania, nie można już zmienić przypisanych do niego produktów.");
                    return;
                }

                if (productIds.length > 0) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("ToggleBatchProductAssignment", "Safari")',
                        data: JSON.stringify({
                            reportId: parseInt(selectedReportId),
                            productIds: productIds,
                            isAssigned: isAssigned
                        }),
                        contentType: "application/json; charset=utf-8",
                        success: function (response) {
                            if (response.success) {
                                if (isAssigned) {
                                    productIds.forEach(id => currentAssignedProductIds.add(id));
                                } else {
                                    productIds.forEach(id => currentAssignedProductIds.delete(id));
                                }
                                updateAssignedCount();
                            } else {
                                alert("Wystąpił błąd podczas aktualizacji raportu.");
                            }
                        },
                        error: function () {
                            alert("Wystąpił błąd podczas komunikacji z serwerem.");
                        }
                    });
                }
            }

            // Aktualizacja liczby przypisanych produktów
            function updateAssignedCount() {
                var assignedCount = currentAssignedProductIds.size;
                $('#assignedCount').text(assignedCount);
            }

            // Obsługa wyszukiwania
            $('#productSearch').on('input', function () {
                filterAndUpdateTable();
            });

            // Obsługa wyboru raportu
            $('#reportSelection').on('change', function () {
                selectedReportId = $(this).val();
                selectedReportPreparedStatus = $(this).find('option:selected').data('prepared');

                var reportName = $(this).find('option:selected').text();
                if (selectedReportId) {
                    $('#reportNameDisplay').text(reportName);
                } else {
                    $('#reportNameDisplay').text('');
                }

                if (selectedReportId) {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("GetReportProducts", "Safari")',
                        data: { reportId: selectedReportId },
                        success: function (response) {
                            if (response.success) {
                                currentAssignedProductIds = new Set(response.productIds.map(Number));
                                filterAndUpdateTable();
                                updateAssignedCount();
                            }
                        }
                    });
                } else {
                    currentAssignedProductIds = new Set();
                    filterAndUpdateTable();
                    updateAssignedCount();
                }

                // Ustawienie stanu przycisku "Zleć raport"
                if (selectedReportPreparedStatus === false) {
                    alert("Ten raport jest już w trakcie przygotowania.");
                    $('#startReportPreparation').prop('disabled', true);
                } else if (selectedReportPreparedStatus === true) {
                    alert("Ten raport został już przygotowany.");
                    $('#startReportPreparation').prop('disabled', true);
                } else {
                    $('#startReportPreparation').prop('disabled', false);
                }
            });

            // Ładowanie danych przy starcie
            loadProducts();

            // Obsługa kliknięcia przycisku "Zleć raport"
            $('#startReportPreparation').click(function (e) {
                e.preventDefault();

                if (!selectedReportId) {
                    alert("Wybierz raport przed zleceniem.");
                    return;
                }

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("StartReportPreparation", "Safari")',
                    data: { reportId: selectedReportId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            $('#reportSelection').find('option:selected').data('prepared', false);
                            $('#startReportPreparation').prop('disabled', true);
                            selectedReportPreparedStatus = false;
                            filterAndUpdateTable();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Wystąpił błąd podczas zlecania raportu.");
                    }
                });
            });

        });
    </script>

}
