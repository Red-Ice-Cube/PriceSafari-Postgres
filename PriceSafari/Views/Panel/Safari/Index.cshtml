@model IEnumerable<PriceSafari.Models.ProductClass>

@{
    ViewData["Title"] = "Lista Produktów";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    var storeId = ViewBag.StoreId;
}

<div class="Vert">
    <div class="Vert-full">
        <div class="price-box-space">
            <div class="Order-Container-Title">
                Lista produktów @ViewBag.StoreName
                <div class="bar-List">
                    <div class="d-flex mb-3">
                        <p class="me-4">Liczba produktów znalezionych: <span id="foundCount" class="badge bg-success">0</span></p>
                    </div>
                </div>
            </div>

            <div>
                <input type="text" id="productSearch" placeholder="Wyszukaj produkt" />
            </div>
        </div>

        <div class="Vert-table">
            <table class="table-orders">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>Indeks</th>
                        <th>Url</th>
                        <th>Google Url</th>
                        <th>Status</th>
                        <th>Flagi</th> <!-- Nowa kolumna dla flag -->
                    </tr>
                </thead>

                <tbody id="productTable">
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var allProducts = [];
            loadProducts();

            // Wczytaj produkty z serwera
            function loadProducts() {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Index", "Safari")',
                    data: { storeId: '@ViewBag.StoreId' },
                    success: function (products) {
                        allProducts = products;
                        updateTable(products); // Renderuj wszystkie produkty
                    },
                    error: function (xhr, status, error) {
                        console.error("Error loading products: ", error);
                    }
                });
            }

            // Funkcja podświetlająca wpisany tekst w nazwach produktów
            function highlightMatches(text, searchTerm) {
                if (!searchTerm) return text;
                const sanitizedSearchTerm = searchTerm.replace(/[^a-zA-Z0-9\s.-]/g, '');
                const regex = new RegExp(`(${sanitizedSearchTerm})`, 'gi');
                return text.replace(regex, '<span style="color: #9400D3; font-weight: 600;">$1</span>');
            }

            function updateTable(products, searchTerm = "") {
                $('#productTable').empty();
                var foundCount = 0;

                $.each(products, function (index, product) {
                    var highlightedProductName = highlightMatches(product.productNameInStoreForGoogle, searchTerm);
                    var highlightedCatalogNumber = highlightMatches(product.catalogNumber, searchTerm);

                    var foundOnGoogleBadge = '<span class="badge bg-secondary">Pending</span>';
                    if (product.foundOnGoogle === true) {
                        foundOnGoogleBadge = '<span class="badge bg-success">Found</span>';
                        foundCount++;
                    }

                    var googleUrl = product.googleUrl || '';

                    // Generowanie listy flag
                    var flagList = product.flags && product.flags.length > 0
                        ? product.flags.join(", ")
                        : "Brak flag";

                    var row = '<tr id="productRow-' + product.productId + '">' +
                        '<td>' + highlightedProductName + '</td>' +
                        '<td>' + highlightedCatalogNumber + '</td>' +
                        '<td><a href="' + product.url + '" target="_blank">' + product.url + '</a></td>' +
                        '<td><a href="' + googleUrl + '" target="_blank">' + googleUrl + '</a></td>' +
                        '<td>' + foundOnGoogleBadge + '</td>' +
                        '<td>' + flagList + '</td>' + <!--Dodajemy flagi w nowej kolumnie -->
                            '</tr>';

                    $('#productTable').append(row);
                });

                updateProductCounts(foundCount);
            }

            function updateProductCounts(foundCount) {
                $('#foundCount').text(foundCount);
            }

            $('#productSearch').on('input', function () {
                var searchTerm = $(this).val().toLowerCase();
                var filteredProducts = allProducts.filter(function (product) {
                    return product.productNameInStoreForGoogle.toLowerCase().includes(searchTerm) ||
                        product.catalogNumber.toLowerCase().includes(searchTerm);
                });
                updateTable(filteredProducts, searchTerm);
            });
        });
    </script>
}