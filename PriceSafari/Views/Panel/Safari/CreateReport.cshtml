@model PriceSafari.Models.PriceSafariReport

@{
    ViewData["Title"] = "Tworzenie nowego raportu";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Vert">
    <h2>Stwórz nowy raport</h2>

    <form method="post" action="@Url.Action("CreateReport", "Safari")">
        <input type="hidden" name="storeId" value="@ViewBag.StoreId" />

        <div>
            <label for="reportName">Nazwa Raportu:</label>
            <input type="text" id="reportName" name="reportName" required />
        </div>

        <div>
            <label for="regionSelection">Wybierz regiony:</label>
            <div>
                @foreach (var region in ViewBag.Regions)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="region_@region.RegionId" name="regionIds" value="@region.RegionId" />
                        <label class="form-check-label" for="region_@region.RegionId">@region.Name</label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Zapisz Raport</button>
    </form>
</div>
