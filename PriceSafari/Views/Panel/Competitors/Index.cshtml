@model List<PriceSafari.Models.ViewModels.ChanelViewModel>

@{
    ViewBag.Title = "Wybierz Sklep - Konkurencja";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<style>

    .button-disabled {
        pointer-events: none;
        opacity: 0.5;
    }

    .icon-disabled {
        filter: grayscale(100%);
    }

</style>

<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Konkurencja
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th>Sklep</th>
                            <th></th>
                            <th>Porównywarki Cenowe</th>
                            <th>Marketplace</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr class="store-row">
                                <td>
                                    <img src="@store.LogoUrl" class="img-container" alt="@store.StoreName" />
                                </td>
                                <td>@store.StoreName</td>

                                <td>
                                    <div style="display: flex; align-items: center; gap: 15px;">
                                        <a href="@Url.Action("Competitors", "Competitors", new { storeId = store.StoreId })"
                                           class="Button-select @(!(store.OnCeneo || store.OnGoogle) ? "button-disabled" : "")"
                                           title="Konkurencja w porównywarkach">

                                            <img src="/images/Ceneo.png" alt="Ceneo" class="@(store.OnCeneo ? "" : "icon-disabled")" />
                                            <img src="/images/GoogleShopping.png" alt="Google Shopping" class="@(store.OnGoogle ? "" : "icon-disabled")" />
                                        </a>
                                    </div>
                                </td>

                                <td>
                                    <div style="display: flex; align-items: center; gap: 15px;">
                                        <a href="@Url.Action("AllegroCompetitors", "Competitors", new { storeId = store.StoreId })"
                                           class="Button-select @(!store.OnAllegro ? "button-disabled" : "")"
                                           title="Konkurencja na Marketplace">

                                            <img src="/images/AllegroIcon.png" alt="Allegro" class="@(store.OnAllegro ? "" : "icon-disabled")" />
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Brak sklepów do wyświetlenia lub konto jest konfigurowane.</p>
        }
    </div>
</div>