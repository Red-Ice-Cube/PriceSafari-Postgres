                                    @Html.AntiForgeryToken()
                                    <div class="mb-3">
                                        <label class="form-label">Nazwa Twojego sklepu</label>
                                        <input type="text" class="form-control" name="StoreName" value="@Model.PendingStoreNameGoogle" required @(Model.IsGoogleSubmitted ? "readonly" : "")>
                                    </div>
