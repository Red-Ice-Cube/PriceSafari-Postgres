@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization
@model PriceSafari.Models.ViewModels.StorePaymentsViewModel

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    var jsonSettings = new JsonSerializerSettings
            {
                ContractResolver = new CamelCasePropertyNamesContractResolver()
            };
    var paymentDataListJson = JsonConvert.SerializeObject(Model.PaymentDataList, jsonSettings);

    // Dobieramy plik graficzny planu na podstawie danych
    string planImageFile = "";
    if (Model.IsTestPlan)
    {
        planImageFile = "Free.png";
    }
    else
    {
        if (Model.ProductsToScrap <= 500)
            planImageFile = "Lite.png";
        else if (Model.ProductsToScrap <= 1000)
            planImageFile = "Basic.png";
        else if (Model.ProductsToScrap <= 4000)
            planImageFile = "Pro.png";
        else if (Model.ProductsToScrap <= 10000)
            planImageFile = "Ultimate.png";
        else
            planImageFile = "Enterprise.png";
    }
}

<style>
    .modal-split {
        display: flex;
        gap: 32px;
        width: 100%;
    }

    .modal-dialog {
        max-width: 1200px;
    }

    .modal-content {
        width: 100%;
    }

    .store-details-title {
        font-size: 22px;
        font-weight: 300;
        margin-bottom: 16px;
    }

    .space-100 {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 16px;
        margin-bottom: 24px;
    }



    .custom-info-table {
        border-collapse: separate;
        border-spacing: 0;
        width: auto;
        margin: 10px 0;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }

        .custom-info-table th,
        .custom-info-table td {
            padding: 8px 12px;
            border-bottom: 1px solid #ddd;
        }

        .custom-info-table th {
            background-color: #f9f9f9;
            text-align: left;
            font-weight: bold;
        }

        .custom-info-table tr:last-child td {
            border-bottom: none;
        }
</style>

<div class="Vert">
    <div class="Vert-full">
        <div class="store-details">
            <img src="~/images/@planImageFile" alt="@Model.PlanName" style="height:36px; margin-bottom:24px;" />
         
            <div class="store-details-title">Plan @Model.PlanName dla @Model.StoreName</div>
                
            <table class="custom-info-table">
                <tr>
                    <th>Maksymalna ilość produktów</th>
                    <td>Do @Model.ProductsToScrap SKU</td>
                </tr>
                <tr>
                    <th>Pakiet analiz</th>
                    <td>@Model.ScrapesPerInvoice</td>
                </tr>
                <tr>
                    <th>Dane historyczne</th>
                    <td>30 analiz</td>
                </tr>
                <tr>
                    <th>Źródło danych</th>
                    <td>
                        @if (Model.Ceneo && Model.GoogleShopping)
                        {
                            <img src="~/images/Ceneo.png" alt="Ceneo" style="height:18px;width:18px;" />
                            <img src="~/images/GoogleShopping.png" alt="Google Shopping" style="height:18px;width:18px;" />
                        }
                        else if (Model.Ceneo)
                        {
                            <img src="~/images/Ceneo.png" alt="Ceneo" style="height:18px;width:18px;" />
                        }
                        else if (Model.GoogleShopping)
                        {
                            <img src="~/images/GoogleShopping.png" alt="Google Shopping" style="height:18px;width:18px;" />
                        }
                        else
                        {
                            <span>Brak</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Informacje</th>
                    <td>@Model.Info</td>
                </tr>
              
            </table>

            @if (Model.DiscountValue.HasValue && Model.DiscountValue.Value > 0)
            {
                var discountAmount = Model.PlanPrice * (Model.DiscountValue.Value / 100);
                var discountedPrice = Model.PlanPrice - discountAmount;
                <div style="display:flex; flex-direction:column; align-items:flex-start; margin-bottom:10px;">
                    <div>
                        <p style="color: darkgreen; font-weight: bold;">@discountedPrice.ToString("C")</p>
                        <p style="text-decoration: line-through; font-weight: normal; color: #222222;">@Model.PlanPrice.ToString("C")</p>
                    </div>
                    <div style="font-weight:500; color: #222222; margin-top: 4px;">
                        Rabat: @Model.DiscountValue.Value.ToString("F2")%
                    </div>
                </div>
            }
            else
            {
                <p>Kwota: @Model.PlanPrice.ToString("C") Netto</p>
            }
        </div>

        <!-- Button to open modal -->
        <div>
            @if (Model.IsTestPlan)
            {
                <p><strong>Generowanie lub dodawanie faktur jest niedostępne w planie testowym.</strong></p>
            }
            else if (Model.HasUnpaidInvoice)
            {
                <p><strong>Proforma została już wygenerowana.</strong></p>
            }
            else
            {
                <button type="button" class="Button-Page-Small-bl" data-toggle="modal" data-target="#generateProformaModal">
                    Wygeneruj Proformę
                </button>
            }
        </div>

        <!-- Modal for Generating Proforma -->
        <div class="modal fade" id="generateProformaModal" tabindex="-1" role="dialog" aria-labelledby="generateProformaModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="generateProformaModalLabel">Generowanie Proformy</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Zamknij">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <!-- Modal Body -->
                    <div class="modal-split">
                        <div class="modal-body">
                            <!-- Managing Billing Data -->
                            <div class="form-group">
                                <select id="paymentDataSelect" class="form-control" style="margin-top:0px;">
                                    <option value="">Wybierz adres rozliczeniowy</option>
                                    @foreach (var data in Model.PaymentDataList)
                                    {
                                        <option value="@data.PaymentDataId">@data.CompanyName</option>
                                    }
                                </select>
                                <div class="space-100">
                                    <div>
                                        <button type="button" class="Button-Page-Small-bl" id="addPaymentDataButton">+ Adres rozliczeniowy</button>
                                    </div>
                                    <div>
                                        <button type="button" class="Button-Page-Small" id="editPaymentDataButton" style="display:none;">Edytuj</button>
                                        <button type="button" class="Button-Page-Small-r" id="deletePaymentDataButton" style="display:none;">Usuń</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Display Billing Data Details in a custom table -->
                            <div id="paymentDataDetails" style="display:none;">
                                <table class="custom-info-table">
                                    <tr>
                                        <th>Nazwa firmy</th>
                                        <td id="companyName"></td>
                                    </tr>
                                    <tr>
                                        <th>Adres</th>
                                        <td id="address"></td>
                                    </tr>
                                    <tr>
                                        <th>Kod pocztowy</th>
                                        <td id="postalCode"></td>
                                    </tr>
                                    <tr>
                                        <th>Miasto</th>
                                        <td id="city"></td>
                                    </tr>
                                    <tr>
                                        <th>NIP</th>
                                        <td id="nip"></td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Form for Adding/Editing Billing Data -->
                            <div id="paymentDataFormContainer" style="display:none;">
                                <form id="paymentDataForm">
                                    <input type="hidden" id="PaymentDataId" name="PaymentDataId" value="" />
                                    <div class="form-group">
                                        <label for="CompanyName">Nazwa firmy</label>
                                        <input type="text" class="form-control" id="CompanyName" name="CompanyName" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="Address">Adres</label>
                                        <input type="text" class="form-control" id="Address" name="Address" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="PostalCode">Kod pocztowy</label>
                                        <input type="text" class="form-control" id="PostalCode" name="PostalCode" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="City">Miasto</label>
                                        <input type="text" class="form-control" id="City" name="City" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="NIP">NIP</label>
                                        <input type="text" class="form-control" id="NIP" name="NIP" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="InvoiceAutoMail">E-mail do automatycznej wysyłki faktur (opcjonalny)</label>
                                        <input type="email" class="form-control" id="InvoiceAutoMail" name="InvoiceAutoMail" />
                                    </div>
                                    <div class="form-group form-check">
                                        <input type="checkbox" class="form-check-input" id="InvoiceAutoMailSend" name="InvoiceAutoMailSend" value="true" />
                                        <label class="form-check-label" for="InvoiceAutoMailSend">Automatyczna wysyłka faktur na e-mail</label>
                                    </div>
                                    <div style="margin-top:16px;">
                                        <button type="button" class="Button-Page-Small-bl" id="savePaymentDataButton">Zapisz dane</button>
                                        <button type="button" class="Button-Page-Small" id="cancelPaymentDataButton">Anuluj</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="store-details">
                                <img src="~/images/@planImageFile" alt="@Model.PlanName" style="height:36px; margin-bottom:24px;" />
                                <div class="store-details-title">Plan @Model.PlanName dla @Model.StoreName</div>
                                @if (Model.DiscountValue.HasValue && Model.DiscountValue.Value > 0)
                                {
                                    var discountAmount = Model.PlanPrice * (Model.DiscountValue.Value / 100);
                                    var discountedPrice = Model.PlanPrice - discountAmount;
                                    <div style="display:flex; flex-direction:column; align-items:flex-start; margin-bottom:10px;">
                                        <div>
                                            <p style="color: darkgreen; font-weight: bold;">@discountedPrice.ToString("C")</p>
                                            <p style="text-decoration: line-through; font-weight: normal; color: #222222;">@Model.PlanPrice.ToString("C")</p>
                                        </div>
                                        <div style="font-weight:500; color: #222222; margin-top: 4px;">
                                            Rabat: @Model.DiscountValue.Value.ToString("F2")%
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>Kwota: @Model.PlanPrice.ToString("C") Netto</p>
                                }
                                <table class="custom-info-table">
                                    <tr>
                                        <th>Maksymalna ilość produktów</th>
                                        <td>@Model.ProductsToScrap</td>
                                    </tr>
                                    <tr>
                                        <th>Pakiet analiz</th>
                                        <td>@Model.ScrapesPerInvoice</td>
                                    </tr>
                                    <tr>
                                        <th>Dane historyczne</th>
                                        <td>30 analiz</td>
                                    </tr>
                                    <tr>
                                        <th>Źródło danych</th>
                                        <td>
                                            @if (Model.Ceneo && Model.GoogleShopping)
                                            {
                                                <img src="~/images/Ceneo.png" alt="Ceneo" style="height:18px;width:18px;" />
                                                <img src="~/images/GoogleShopping.png" alt="Google Shopping" style="height:18px;width:18px;" />
                                            }
                                            else if (Model.Ceneo)
                                            {
                                                <img src="~/images/Ceneo.png" alt="Ceneo" style="height:18px;width:18px;" />
                                            }
                                            else if (Model.GoogleShopping)
                                            {
                                                <img src="~/images/GoogleShopping.png" alt="Google Shopping" style="height:18px;width:18px;" />
                                            }
                                            else
                                            {
                                                <span>Brak</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Informacje</th>
                                        <td>@Model.Info</td>
                                    </tr>
                                  
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <form id="generateProformaForm" method="post" asp-action="GenerateProforma">
                            <input type="hidden" name="storeId" value="@Model.StoreId" />
                            <input type="hidden" id="paymentDataId" name="paymentDataId" value="" />
                            <button type="submit" class="btn btn-success" id="generateProformaButton" disabled>Generuj Proformę</button>
                        </form>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Invoices != null && Model.Invoices.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th>Numer</th>
                            <th>Wystawiono</th>
                            <th>Opłacono</th>
                            <th>Kwota Netto</th>
                            <th>Status</th>
                            <th>Pobierz</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.Invoices)
                        {
                            <tr class="store-row">
                                <td>@invoice.InvoiceNumber</td>
                                <td>@invoice.IssueDate.ToString("yyyy-MM-dd")</td>
                                <td>@(invoice.PaymentDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                <td>
                                    @if (invoice.AppliedDiscountPercentage > 0)
                                    {
                                        var originalPrice = invoice.NetAmount + invoice.AppliedDiscountAmount;
                                        <div style="display:flex; flex-direction:column; align-items:flex-start;">
                                            <div>
                                                <span style="color: darkgreen; font-weight: bold;">@invoice.NetAmount.ToString("C")</span>
                                                <span style="text-decoration: line-through; font-weight: normal; color: #222222; margin-left: 10px;">@originalPrice.ToString("C")</span>
                                            </div>
                                            <div style="font-size:0.9em; color: #222222; margin-top: 4px;">
                                                Rabat: @invoice.AppliedDiscountPercentage.ToString("F2")% (@invoice.AppliedDiscountAmount.ToString("C"))
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span>@invoice.NetAmount.ToString("C")</span>
                                    }
                                </td>
                                <td>
                                    @if (invoice.IsPaid)
                                    {
                                        <span class="Validation Validation-accepted">Opłacona</span>
                                    }
                                    else
                                    {
                                        <span class="Validation Validation-cancelled">Nieopłacona</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("InvoicePdf", "Payment", new { invoiceId = invoice.InvoiceId })" class="Button-Action-Small" target="_blank">
                                        Pobierz
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Brak historii faktur dla tego sklepu.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var paymentDataList = @Html.Raw(paymentDataListJson);

            function resetForm() {
                $("#paymentDataForm")[0].reset();
                toggleAutoMailSendCheckbox("");
                $("#PaymentDataId").val('');
            }

            function showForm() {
                $("#paymentDataFormContainer").show();
                $("#paymentDataDetails").hide();
                $("#generateProformaButton").prop('disabled', true);
            }

            function hideForm() {
                $("#paymentDataFormContainer").hide();
            }

            function showDetails() {
                $("#paymentDataDetails").show();
                $("#editPaymentDataButton").show();
                $("#deletePaymentDataButton").show();
            }

            function hideDetails() {
                $("#paymentDataDetails").hide();
                $("#editPaymentDataButton").hide();
                $("#deletePaymentDataButton").hide();
            }

            function clearDetailsFields() {
                $("#companyName").text('');
                $("#address").text('');
                $("#postalCode").text('');
                $("#city").text('');
                $("#nip").text('');
            }

            function disableGenerateProforma() {
                $("#generateProformaButton").prop('disabled', true);
            }

            function enableGenerateProforma() {
                $("#generateProformaButton").prop('disabled', false);
            }

            function toggleAutoMailSendCheckbox(emailValue) {
                if (!emailValue || emailValue.trim() === "") {
                    $("#InvoiceAutoMailSend").prop("checked", false);
                    $("#InvoiceAutoMailSend").prop("disabled", true);
                } else {
                    $("#InvoiceAutoMailSend").prop("disabled", false);
                }
            }

            function populatePaymentData(paymentDataId) {
                var data = paymentDataList.find(x => x.paymentDataId == paymentDataId);
                if (data) {
                    $("#companyName").text(data.companyName);
                    $("#address").text(data.address);
                    $("#postalCode").text(data.postalCode);
                    $("#city").text(data.city);
                    $("#nip").text(data.nip);
                    showDetails();
                    hideForm();
                    enableGenerateProforma();
                    $("#paymentDataId").val(data.paymentDataId);
                } else {
                    hideDetails();
                    clearDetailsFields();
                    $("#paymentDataId").val('');
                    disableGenerateProforma();
                }
            }

            $("#paymentDataSelect").change(function () {
                var selectedValue = $(this).val();
                if (selectedValue) {
                    populatePaymentData(selectedValue);
                } else {
                    hideDetails();
                    clearDetailsFields();
                    $("#paymentDataId").val('');
                    disableGenerateProforma();
                }
            });

            $("#addPaymentDataButton").click(function () {
                resetForm();
                showForm();
                hideDetails();
                disableGenerateProforma();
            });

            $("#editPaymentDataButton").click(function () {
                var paymentDataId = $("#paymentDataId").val();
                var data = paymentDataList.find(x => x.paymentDataId == paymentDataId);
                if (data) {
                    showForm();
                    hideDetails();
                    disableGenerateProforma();
                    $("#PaymentDataId").val(data.paymentDataId);
                    $("#CompanyName").val(data.companyName);
                    $("#Address").val(data.address);
                    $("#PostalCode").val(data.postalCode);
                    $("#City").val(data.city);
                    $("#NIP").val(data.nip);
                    $("#InvoiceAutoMail").val(data.invoiceAutoMail || '');
                    $("#InvoiceAutoMailSend").prop('checked', data.invoiceAutoMailSend);
                    toggleAutoMailSendCheckbox($("#InvoiceAutoMail").val());
                } else {
                    alert("Nie można edytować - dane nie istnieją.");
                }
            });

            $("#cancelPaymentDataButton").click(function () {
                hideForm();
                var paymentDataId = $("#paymentDataId").val();
                if (paymentDataId) {
                    populatePaymentData(paymentDataId);
                } else {
                    hideDetails();
                    clearDetailsFields();
                    disableGenerateProforma();
                }
            });

            $("#InvoiceAutoMail").on("input", function () {
                toggleAutoMailSendCheckbox($(this).val());
            });

            $("#savePaymentDataButton").click(function () {
                var formData = $("#paymentDataForm").serialize();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("SaveOrUpdatePaymentData", "Payment")",
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            var newPaymentData = {
                                paymentDataId: response.paymentData.paymentDataId,
                                companyName: response.paymentData.companyName,
                                address: response.paymentData.address,
                                postalCode: response.paymentData.postalCode,
                                city: response.paymentData.city,
                                nip: response.paymentData.nip,
                                invoiceAutoMail: response.paymentData.invoiceAutoMail,
                                invoiceAutoMailSend: response.paymentData.invoiceAutoMailSend
                            };
                            var existingData = paymentDataList.find(x => x.paymentDataId == newPaymentData.paymentDataId);
                            if (existingData) {
                                Object.assign(existingData, newPaymentData);
                                $("#paymentDataSelect option[value='" + newPaymentData.paymentDataId + "']").text(newPaymentData.companyName);
                            } else {
                                paymentDataList.push(newPaymentData);
                                $("#paymentDataSelect").append($('<option>', {
                                    value: newPaymentData.paymentDataId,
                                    text: newPaymentData.companyName
                                }));
                            }
                            $("#paymentDataSelect").val(newPaymentData.paymentDataId);
                            hideForm();
                            populatePaymentData(newPaymentData.paymentDataId);
                        } else {
                            alert("Błąd podczas zapisywania danych: Niepoprawne dane wejściowe.");
                        }
                    },
                    error: function (xhr) {
                        if (xhr.responseJSON && xhr.responseJSON.errors) {
                            var errors = xhr.responseJSON.errors;
                            var errorMessage = "Błędy walidacji:\n";
                            for (var key in errors) {
                                errorMessage += errors[key].join(", ") + "\n";
                            }
                            alert(errorMessage);
                        } else {
                            alert("Błąd podczas zapisywania danych (HTTP " + xhr.status + ").");
                        }
                    }
                });
            });

            $("#deletePaymentDataButton").click(function () {
                if (confirm("Czy na pewno chcesz usunąć te dane?")) {
                    var paymentDataId = $("#paymentDataId").val();
                    if (!paymentDataId) {
                        alert("Brak wybranego adresu do usunięcia.");
                        return;
                    }
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("DeletePaymentData", "Payment")",
                        data: { paymentDataId: paymentDataId },
                        success: function (response) {
                            if (response.success) {
                                paymentDataList = paymentDataList.filter(x => x.paymentDataId != paymentDataId);
                                $("#paymentDataSelect option[value='" + paymentDataId + "']").remove();
                                $("#paymentDataSelect").val('');
                                hideDetails();
                                clearDetailsFields();
                                disableGenerateProforma();
                                hideForm();
                            } else {
                                alert("Błąd podczas usuwania danych - operacja nieudana po stronie serwera.");
                            }
                        },
                        error: function (xhr) {
                            if (xhr.status == 404) {
                                alert("Nie znaleziono danych do usunięcia (404). Prawdopodobnie zostały już wcześniej usunięte.");
                            } else {
                                alert("Błąd podczas usuwania danych (HTTP " + xhr.status + ").");
                            }
                        }
                    });
                }
            });
        });
    </script>
}
