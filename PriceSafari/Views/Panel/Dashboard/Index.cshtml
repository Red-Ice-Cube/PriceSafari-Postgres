@model List<PriceSafari.Models.ViewModels.ChanelViewModel>

@{
    ViewData["Title"] = "Analiza zmian cen";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<style>
    .button-disabled {
        pointer-events: none;
        opacity: 0.5;
    }

    .icon-disabled {
        filter: grayscale(100%);
    }
</style>

<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Analiza zmian cen
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th>Sklep</th>
                            <th></th>
                            <th>Porównywarki Cenowe</th>
                            <th>Marketplace</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr class="store-row">
                                <td>
                                    <img src="@store.LogoUrl" class="img-container" alt="@store.StoreName" />
                                </td>
                                <td>
                               @store.StoreName
                                </td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 15px;">
                                        @* Przycisk Dashboard Ceneo/Google *@
                                        <a href="@Url.Action("Dashboard", "Dashboard", new { storeId = store.StoreId })"
                                           class="Button-select @(!(store.OnCeneo || store.OnGoogle) ? "button-disabled" : "")"
                                           title="Dashboard porównywarek cenowych">

                                            <img src="/images/Ceneo.png" alt="Ceneo" class="@(store.OnCeneo ? "" : "icon-disabled")" />
                                            <img src="/images/GoogleShopping.png" alt="Google Shopping" class="@(store.OnGoogle ? "" : "icon-disabled")" />
                                        </a>
                                        <div>
                                            @if (store.LastScrapeDate.HasValue)
                                            {
                                                <p style="margin: 0; font-weight: 500;">@store.LastScrapeDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                                <p style="margin: 0; font-size: 0.8em; color: #777;">Ostatnia analiza</p>
                                            }
                                            else
                                            {
                                                <p style="margin: 0; font-size: 0.8em; color: #999;">Brak analiz</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 15px;">
                                        @* Przycisk Dashboard Allegro *@
                                        <a href="@Url.Action("Dashboard", "AllegroDashboard", new { storeId = store.StoreId })"
                                           class="Button-select @(!store.OnAllegro ? "button-disabled" : "")"
                                           title="Dashboard Allegro">

                                            <img src="/images/AllegroIcon.png" alt="Allegro" class="@(store.OnAllegro ? "" : "icon-disabled")" />
                                        </a>
                                        <div>
                                            @if (store.AllegroLastScrapeDate.HasValue)
                                            {
                                                <p style="margin: 0; font-weight: 500;">@store.AllegroLastScrapeDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                                <p style="margin: 0; font-size: 0.8em; color: #777;">Ostatnia analiza</p>
                                            }
                                            else
                                            {
                                                <p style="margin: 0; font-size: 0.8em; color: #999;">Brak analiz</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted" style="padding: 20px;">Brak skonfigurowanych sklepów.</p>
        }
    </div>
</div>