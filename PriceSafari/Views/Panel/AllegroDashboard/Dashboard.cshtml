@{
    ViewData["Title"] = "Analiza zmian cen Allegro – podsumowanie";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<style>
    /* --- TWOJE ISTNIEJĄCE STYLE (bez zmian) --- */
    .week-box {
        display: flex;
        width: 80px;
        padding: 4px 12px;
        align-items: center;
        justify-content: center;
        gap: 10px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 400;
        border: 1px solid #A2A2A2;
        background: rgba(162, 162, 162, 0.25);
        color: #A2A2A2;
    }

    .weekend-box {
        display: flex;
        width: 80px;
        padding: 4px 12px;
        align-items: center;
        justify-content: center;
        gap: 10px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 400;
        border: 1px solid #2AC6FF;
        background: rgba(42, 198, 255, 0.25);
        color: #2AC6FF;
    }

    .details-row {
        display: table-row;
    }

    .details-content {
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transition: .3s ease, opacity .3s ease;
    }

    .details-row.open .details-content {
        opacity: 1;
    }

    .details-inner-row {
        display: flex;
        flex-wrap: nowrap;
    }

    .table {
        margin-bottom: 0px;
    }

    .details-inner-row > .col-md-6 {
        flex: 1 1 0;
        min-width: 0;
    }

    .inner-table td a {
        display: inline-block;
        max-width: 100%;
        text-overflow: ellipsis;
    }

    .table-price {
        width: 100%;
        border-collapse: collapse;
    }

        .table-price thead {
            background: #222;
            min-width: 1260px;
        }

            .table-price thead th {
                position: sticky;
                top: 0;
                z-index: 5;
                background: #222;
                color: #fff;
                padding: 12px 16px;
                font-size: 17px;
                font-weight: 400;
                white-space: nowrap;
            }

                .table-price thead th:first-child {
                    border-top-left-radius: 4px;
                    border-bottom-left-radius: 4px;
                }

                .table-price thead th:last-child {
                    border-top-right-radius: 4px;
                    border-bottom-right-radius: 4px;
                }

        .table-price tbody tr {
            border-bottom: 0.5px solid #eee;
            text-align: center;
        }

        .table-price td, .table-price th {
            padding: 8px 16px;
            text-align: left;
            color: #222222;
            font-size: 16px;
            font-weight: 400;
        }

    .col-md-6 {
        padding: 0;
    }

    .inner-table {
        width: 100%;
        table-layout: auto;
    }

        .inner-table td:first-child {
            display: flex;
            align-items: center;
            margin-right: 8px;
            white-space: normal;
        }

            .inner-table td:first-child a {
                flex: 1;
                display: -webkit-box;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 2;
                overflow: hidden;
                text-overflow: ellipsis;
                text-decoration: none;
                line-height: 1.2em;
                color: #222222;
                max-height: calc(1.2em * 2);
            }

                .inner-table td:first-child a:hover {
                    color: #41C7C7;
                    cursor: pointer;
                }

        .inner-table th:not(:first-child), .inner-table td:not(:first-child) {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .table-price .details-content .inner-table thead th {
        background: #EEEEEE;
        height: 41px;
        border-radius: 0;
        font-weight: 500;
        color: #222222;
        font-size: 16px;
        border-bottom: none;
        position: static;
        z-index: auto;
    }

    .table-price .details-content .inner-table td, .table-price .details-content .inner-table th {
        padding: 6px 12px;
        font-size: 15px;
        vertical-align: middle;
        border-bottom-width: 0px;
    }

    .table-price tbody tr.parent-row.active {
        background: #EEEEEE;
    }

    .scrap-section {
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

        .scrap-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

    .scrap-header {
        background: #e0e0e0;
        padding: 8px 16px;
        font-weight: 500;
        color: #222;
        font-size: 15px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .scrap-header .time-badge {
            background: #222;
            color: #fff;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 13px;
        }

    /* --- NOWE STYLE DLA PRZEŁĄCZNIKA --- */
    .btn-view-switch {
        padding: 6px 16px; /* Trochę mniejszy padding żeby pasował do nagłówka */
        border: 1px solid #ddd;
        background: #fff;
        cursor: pointer;
        border-radius: 4px;
        font-weight: 500;
        font-size: 14px;
        transition: all 0.2s;
        color: #555;
        margin-left: 15px; /* Odstęp od tytułu */
    }

        .btn-view-switch:first-child {
            margin-left: 0;
        }

        .btn-view-switch.active {
            background: #222;
            color: #fff;
            border-color: #222;
        }
    /* Grupa przycisków przełącznika */
    .view-switch-group {
        display: flex;
        align-items: center;
        margin-left: 25px; /* Odsunięcie całej grupy od tytułu */
    }

</style>

<script>const STORE_ID = @ViewBag.StoreId;</script>

<div class="Vert">
    <div class="Date" style="display: flex; justify-content: space-between; align-items: center; width: 100%;">

        <div style="display: flex; align-items: center;">
            <div class="Order-Container-Title" style="margin-bottom: 0;">Analiza cen Allegro @ViewBag.StoreName</div>

            <div class="view-switch-group">
                <button id="viewAnalysisBtn" class="btn-view-switch active">Analiza konkurencji</button>
                <button id="viewHistoryBtn" class="btn-view-switch" style="margin-left: 5px;">Historia zmian PriceSafari</button>
            </div>
        </div>

        <div>
            <div id="analysisDateShortcuts" class="Select-Line" style="gap:2px;">
                <button class="dateShortcut active" data-count="7">7</button>
                <button class="dateShortcut" data-count="14">14</button>
                <button class="dateShortcut" data-count="30">30</button>
            </div>
            <div id="historyDateShortcuts" class="Select-Line" style="gap:2px; display: none;">
                <button class="dateShortcut active" data-count="7">7</button>
                <button class="dateShortcut" data-count="14">14</button>
                <button class="dateShortcut" data-count="30">30</button>
            </div>
        </div>

    </div>
</div>

<div id="analysisViewContainer" class="View">
    <div class="Vert">
        <div class="Charts-Bar-a" style="max-height:350px;">
            <div class="Charts-Box-Bar-a">
                <canvas id="priceAnaliseChart"></canvas>
            </div>
        </div>
    </div>

    <div class="Vert">
        <div class="Vert-full">
            <div class="Vert-table" style="height:90vh;">
                <table class="table-price" id="analysisTable">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Obniżki cen</th>
                            <th>Podwyżki cen</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="historyViewContainer" style="display: none;" class="View">
    <div class="Vert">
        <div class="Vert-full">
            <div class="Vert-table" style="height:90vh;">
                <table class="table-price" id="historyTable">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Liczba zmian (sukces)</th>
                            <th>Błędy</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="loadingOverlay"
     style="display:none;position:fixed;inset:0;background:rgba(0,0,0,.5);z-index:999">
    <div style="position:absolute;top:50%;left:50%;
              transform:translate(-50%,-50%);
              width:400px;background:#fff;border-radius:8px;padding:24px">
        <p class="mb-2" style="font-weight:500">Wczytywanie analizy Allegro…</p>
        <div id="progressBarContainer"
             style="height:16px;background:#ddd;border-radius:4px;overflow:hidden;margin-block:12px">
            <div id="progressBar"
                 style="height:100%;width:0;background:#202430;transition:width .2s"></div>
        </div>
        <p id="progressText">Ładowanie… 0%</p>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.9/signalr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/member/AllegroPriceDashboard.js"></script>