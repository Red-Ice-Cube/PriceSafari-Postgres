        // ============================================================
        // BATCH SELECT / DESELECT — OPTIMISTIC + CHUNKED
        // ============================================================
        function batchToggle(turnOn) {
            var idsToSend = [];

            filteredProducts.forEach(function (p) {
                var platformStatus = getProductPlatformStatus(p);
                if (platformStatus.notFound) return;
                if (turnOn && !p.isScrapable) {
                    idsToSend.push(p.productId);
                } else if (!turnOn && p.isScrapable) {
                    idsToSend.push(p.productId);
                }
            });

            if (idsToSend.length === 0) return;

            // Optimistic local update
            var previousStates = {};
            idsToSend.forEach(function (id) {
                var p = productMap[id];
                if (p) {
                    previousStates[id] = p.isScrapable;
                    p.isScrapable = turnOn;
                }
            });
            updateCounters();
            renderVirtual(true);

            var url = turnOn
                ? '@Url.Action("UpdateMultipleScrapableProducts", "Product")?storeId=' + storeId
                : '@Url.Action("ResetMultipleScrapableProducts", "Product")?storeId=' + storeId;

            // Chunk into smaller requests
            var chunks = [];
            for (var i = 0; i < idsToSend.length; i += BATCH_CHUNK_SIZE) {
                chunks.push(idsToSend.slice(i, i + BATCH_CHUNK_SIZE));
            }

            // Show overlay
            var overlay = document.getElementById('batchOverlay');
            var titleEl = document.getElementById('batchOverlayTitle');
            var doneCountEl = document.getElementById('batchDoneCount');
            var totalCountEl = document.getElementById('batchTotalCount');
            var fillEl = document.getElementById('batchProgressFill');

        titleEl.textContent = turnOn ? 'Aktualizowanie produktów...' : 'Odznaczanie produktów...';
            totalCountEl.textContent = idsToSend.length;
            doneCountEl.textContent = '0';
            fillEl.style.width = '0%';
            overlay.classList.add('active');

            var completed = 0;
            var processedCount = 0;
            var failed = false;

            // Send chunks sequentially
            var chain = Promise.resolve();
            chunks.forEach(function (chunk, idx) {
                chain = chain.then(function () {
                    if (failed) return;
                    return fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(chunk)
                    })
                    .then(function (r) { return r.json(); })
                    .then(function (data) {
                        completed++;
                        processedCount += chunk.length;
                        doneCountEl.textContent = Math.min(processedCount, idsToSend.length);
                        fillEl.style.width = ((processedCount / idsToSend.length) * 100) + '%';

                        if (!data.success) {
                            failed = true;
                            alert('Błąd: ' + (data.message || 'Nie udało się zaktualizować produktów.'));
                        }
                    });
                });
            });

            chain
                .then(function () {
                    if (failed) {
                        // Rollback all
                        Object.keys(previousStates).forEach(function (id) {
                            var p = productMap[parseInt(id)];
                            if (p) p.isScrapable = previousStates[id];
                        });
                        updateCounters();
                        renderVirtual(true);
                    }
                })
                .catch(function (err) {
                    console.error('Batch error:', err);
                    Object.keys(previousStates).forEach(function (id) {
                        var p = productMap[parseInt(id)];
                        if (p) p.isScrapable = previousStates[id];
                    });
                    updateCounters();
                    renderVirtual(true);
                })
                .finally(function () {
                    // Fill to 100% briefly, then hide
                    fillEl.style.width = '100%';
                    doneCountEl.textContent = idsToSend.length;
                    setTimeout(function () {
                        overlay.classList.remove('active');
                    }, 600);
                });
        }

