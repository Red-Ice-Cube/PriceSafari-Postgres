<div class="Vert">
    <div class="Vert-full">
        <div class="price-box-space">
            <div class="Order-Container-Title">
                Lista produktów @ViewBag.StoreName
                <div class="bar-List">
                    <div>
                        <strong>Wszystkie produky: </strong><span id="total-products"></span>
                    </div>
                    <div>
                        <strong>Max monitorowanych produktów: </strong><span>@ViewBag.ProductCount</span>
                    </div>
                    <div>
                        <strong>Monitorowane produkty: </strong><span id="scrapable-count"></span>
                    </div>
                </div>
            </div>

            <div>
                <button type="button" class="Button-Page-Small-gr" id="uploadMarginsButton">
                    Ceny zakupu
                </button>

                <select id="categoryDropdown" class="DropDown" style="width:150px;">
                    <option value="all">Wszystkie</option>
                </select>
                <input type="text" id="productSearch" placeholder="Wyszukaj produkt" />
                <div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" style="margin-top:8px;">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" style="margin-top:8px;">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="price-box-space">
            <div style="display:flex; gap:6px;">
                <div class="store-section">
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="active" value="active" data-status="active">
                        <label class="form-check-label" for="active">Aktywny (<span id="count-active">0</span>) </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="active-rejected" value="active-rejected" data-status="active-rejected">
                        <label class="form-check-label" for="active-rejected">Odrzucony (<span id="count-active-rejected">0</span>) </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="inactive" value="inactive" data-status="inactive">
                        <label class="form-check-label" for="inactive">Nieaktywny (<span id="count-inactive">0</span>) </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="inactive-rejected" value="inactive-rejected" data-status="inactive-rejected">
                        <label class="form-check-label" for="inactive-rejected">Wyłączony (<span id="count-inactive-rejected">0</span>) </label>
                    </div>
                </div>

                <div class="store-section">
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="google" value="google" data-status="google">
                        <label class="form-check-label" for="google">Google (<span id="count-google">0</span>)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="ceneo" value="ceneo" data-status="ceneo">
                        <label class="form-check-label" for="ceneo">Ceneo (<span id="count-ceneo">0</span>)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="google-ceneo" value="google-ceneo" data-status="google-ceneo">
                        <label class="form-check-label" for="google-ceneo">Google i Ceneo (<span id="count-google-ceneo">0</span>)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input status-filter" type="checkbox" id="not-found" value="not-found" data-status="not-found">
                        <label class="form-check-label" for="not-found">Nie znalezione (<span id="count-not-found">0</span>)</label>
                    </div>
                </div>
            </div>
            <div style="display:flex; gap:6px; justify-content:flex-end; flex-wrap:wrap; align-content: flex-end; margin-right:12px;">
                <button id="select-all" class="Button-Page-Small" style="height:33px;">
                    <span class="dot green-dot"></span>Zaznacz widoczne
                </button>
                <button id="deselect-all" class="Button-Page-Small" style="height:33px;">
                    <span class="dot red-dot"></span>Odznacz widoczne
                </button>
            </div>
        </div>

        <div class="Vert-table">
            <table class="table-orders">
                <thead>
                    <tr>
                        <th>Produkt (<span id="displayed-count"></span>)</th>
                        <th></th>
                        <th>EAN/GTIN</th>
                        <th>Cena zakupu</th>
                        <th>Oferta</th>
                        <th>Monitoring</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody id="product-list">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="uploadMarginsModal" tabindex="-1" role="dialog" aria-labelledby="uploadMarginsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="SetMargins" asp-controller="Product" asp-route-storeId="@ViewBag.StoreId" method="post" enctype="multipart/form-data" id="uploadMarginsForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadMarginsModalLabel">Ceny zakupu</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Zamknij">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }

                    <div id="modalProductStats" style="margin-bottom: 20px; padding: 10px; border: 1px solid #eee; border-radius: 4px; background-color: #f9f9f9;">
                        <h6 style="margin-bottom: 10px; font-weight: bold; color: #333;">Statystyki Produktów:</h6>
                        <ul class="list-unstyled" style="font-size: 0.9em; line-height: 1.6;">
                            <li>Całkowita liczba produktów w sklepie: <strong id="stat-total-products" class="float-right">Ładowanie...</strong></li>
                            <li>Produkty z przypisaną ceną zakupu: <strong id="stat-products-with-purchase-price" class="float-right">Ładowanie...</strong></li>
                            <hr style="margin: 5px 0;" />
                            <li>Produkty aktywne w monitoringu: <strong id="stat-active-monitoring-products" class="float-right">Ładowanie...</strong></li>
                            <li style="padding-left: 15px;"><span style="font-size:0.9em;">↳ z kodem EAN:</span> <strong id="stat-active-monitoring-with-ean" class="float-right">Ładowanie...</strong></li>
                            <li style="padding-left: 15px;"><span style="font-size:0.9em;">↳ z wgraną ceną zakupu:</span> <strong id="stat-active-monitoring-with-purchase-price" class="float-right">Ładowanie...</strong></li>
                        </ul>
                    </div>
                    <p>Proszę wgrać plik Excel zawierający następujące kolumny:</p>
                    <ul>
                        <li><strong>EAN</strong>: Kod EAN produktu.</li>
                        <li><strong>CENA</strong>: Cena zakupu produktu BRUTTO (w formacie liczbowym, np. 44,51).</li>
                    </ul>
                    <p>Plik może zawierać dodatkowe kolumny, ale tylko kolumny 'EAN' i 'CENA' zostaną użyte.</p>
                    <div class="mb-3">
                        <label for="uploadedFile" class="form-label">Wybierz plik (.xls, .xlsx)</label>
                        <input type="file" name="uploadedFile" id="uploadedFile" class="form-control" accept=".xls,.xlsx" required />
                    </div>
                    <p>
                        <strong>Aktualizacja cen zakupu:</strong>
                        Jeśli ceny zakupu są już wgrane i chcesz je zaktualizować, wgraj nowy plik. Spowoduje to nadpisanie cen dla produktów, których kody EAN pasują do wpisów w nowym pliku.

                    </p>

                    <p style="margin-top:20px;">
                        <strong>
                            Ważne:
                        </strong>
                        Jeżeli nowy plik nie zawiera produktów (kodów EAN), dla których wcześniej istniała cena zakupu, ich dotychczasowe ceny nie zostaną zmienione ani usunięte.
                        Aby mieć pewność, że w systemie znajdują się wyłącznie ceny z nowego pliku (a stare ceny dla produktów nieobecnych w nowym pliku zostały usunięte), najpierw skorzystaj z opcji "Usuń wszystkie ceny zakupu", a dopiero potem wgraj nowy plik.
                    </p>
                    <div id="uploadClientError" class="alert alert-danger" style="display: none; margin-top: 10px;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="Button-Page-Small" data-dismiss="modal">Anuluj</button>

                    <button type="button" class="Button-Page-Small-r" id="clearAllMarginsButton" style="margin-right: auto;">Usuń wszystkie ceny zakupu</button>
                    <button type="submit" class="Button-Page-Small-b" id="submitUploadMarginsButton">Wgraj ceny zakupu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        var allProducts = [];

        document.addEventListener('DOMContentLoaded', function () {
            var storeId = @ViewBag.StoreId;
            var selectAllButton = document.getElementById('select-all');
            var deselectAllButton = document.getElementById('deselect-all');
            var searchInput = document.getElementById('productSearch');
            var categoryDropdown = document.getElementById('categoryDropdown');

            var lastScrollPosition = 0;
            var selectedCategory = 'all';

            var platformStatuses = ['google', 'ceneo', 'google-ceneo', 'not-found'];

            const storeNameFromViewBag = '@(ViewBag.StoreName ?? "Oferta Sklepu")';
            const storeNameForButton = decodeHTML(storeNameFromViewBag);

            function getProductPlatformStatus(product) {
                var hasGoogle = product.googleUrl && product.googleUrl.trim() !== '';
                var hasCeneo = product.offerUrl && product.offerUrl.trim() !== '';
                var hasBoth = hasGoogle && hasCeneo;
                var notFound = !hasGoogle && !hasCeneo;
                return {
                    hasGoogle: hasGoogle,
                    hasCeneo: hasCeneo,
                    hasBoth: hasBoth,
                    notFound: notFound
                };
            }

            function formatDate(dateString) {
                if (!dateString) return "";
                const d = new Date(dateString);
                if (isNaN(d.getTime())) return "";
                const day = String(d.getDate()).padStart(2, '0');
                const month = String(d.getMonth() + 1).padStart(2, '0');
                const year = d.getFullYear();
                const hours = String(d.getHours()).padStart(2, '0');
                const minutes = String(d.getMinutes()).padStart(2, '0');
                return `${day}-${month}-${year} ${hours}:${minutes}`;
            }

            function saveState() {
                lastScrollPosition = window.scrollY;
                selectedCategory = categoryDropdown.value;
            }

            function restoreState() {
                categoryDropdown.value = selectedCategory;
                window.scrollTo(0, lastScrollPosition);
            }

            function decodeHTML(html) {
                var txt = document.createElement("textarea");
                txt.innerHTML = html;
                return txt.value;
            }

            function populateCategoryDropdown(categoriesWithCount) {
                categoriesWithCount.sort((a, b) => b.count - a.count);
                categoryDropdown.innerHTML = '<option value="all">Wszystkie (' + allProducts.length + ')</option>';
                categoriesWithCount.forEach(category => {
                    var decodedCategoryName = decodeHTML(category.name);
                    var option = document.createElement('option');
                    option.value = decodedCategoryName;
                    option.textContent = `${decodedCategoryName} (${category.count})`;
                    categoryDropdown.appendChild(option);
                });
                restoreState();
            }

            function filterProductsByCategory(products, category) {
                if (category === 'all') {
                    return products;
                }
                return products.filter(product => decodeHTML(product.category) === category);
            }

            function filterProductsByName(products, name) {
                const sanitizedInput = name.replace(/[^a-zA-Z0-9\s.-]/g, '').trim().toLowerCase();
                return products.filter(product => {
                    const sanitizedProductName = product.productName.toLowerCase().replace(/[^a-zA-Z0-9\s.-]/g, '').trim();
                    return sanitizedProductName.includes(sanitizedInput);
                });
            }

            function getProductStatus(product) {
                if (product.isScrapable && product.isRejected) {
                    return "active-rejected";
                } else if (product.isScrapable) {
                    return "active";
                } else if (product.isRejected) {
                    return "inactive-rejected";
                } else {
                    return "inactive";
                }
            }

            function updateCounters(products) {
                var activeRejectedCount = allProducts.filter(p => p.isScrapable && p.isRejected).length;
                var activeCount = allProducts.filter(p => p.isScrapable && !p.isRejected).length;
                var inactiveRejectedCount = allProducts.filter(p => !p.isScrapable && p.isRejected).length;
                var inactiveCount = allProducts.filter(p => !p.isScrapable && !p.isRejected).length;

                document.getElementById('count-active-rejected').textContent = activeRejectedCount;
                document.getElementById('count-active').textContent = activeCount;
                document.getElementById('count-inactive-rejected').textContent = inactiveRejectedCount;
                document.getElementById('count-inactive').textContent = inactiveCount;

                var scrapableCount = activeRejectedCount + activeCount;
                document.getElementById('scrapable-count').textContent = scrapableCount;
                document.getElementById('total-products').textContent = allProducts.length;

                var googleCount = allProducts.filter(p => getProductPlatformStatus(p).hasGoogle).length;
                var ceneoCount = allProducts.filter(p => getProductPlatformStatus(p).hasCeneo).length;
                var googleCeneoCount = allProducts.filter(p => getProductPlatformStatus(p).hasBoth).length;
                var notFoundCount = allProducts.filter(p => getProductPlatformStatus(p).notFound).length;

                document.getElementById('count-google').textContent = googleCount;
                document.getElementById('count-ceneo').textContent = ceneoCount;
                document.getElementById('count-google-ceneo').textContent = googleCeneoCount;
                document.getElementById('count-not-found').textContent = notFoundCount;
            }

            function highlightMatches(text, searchTerm) {
                if (!searchTerm) return text;
                const sanitizedSearchTerm = searchTerm.replace(/[^a-zA-Z0-9\s.-]/g, '');
                const regex = new RegExp(`(${sanitizedSearchTerm})`, 'gi');
                return text.replace(regex, '<span style="color: #9400D3; font-weight: 600;">$1</span>');
            }

           function renderProducts(products, searchTerm = "") {
                var tbody = document.getElementById('product-list');
                tbody.innerHTML = '';
                products.forEach(function (product) {
                    var row = document.createElement('tr');
                    row.classList.add('product-row');
                    row.setAttribute('data-scrapable', product.isScrapable);
                    row.setAttribute('data-rejected', product.isRejected);

                    var platformStatus = getProductPlatformStatus(product);
                    var isNotFound = platformStatus.notFound;

                    var highlightedProductName = highlightMatches(product.productName, searchTerm);
                    var category = product.category || '';

                    var offerUrlButton = product.offerUrl ? `<a href="${product.offerUrl}" class="Button-Page-Small" style="width: 150px;" target="_blank">Ceneo</a>` : '';
                    var googleUrlButton = product.googleUrl ? `<a href="${product.googleUrl}" class="Button-Page-Small" style="width: 150px;" target="_blank">Google</a>` : '';
                    var storeSpecificOfferButton = product.url ? `<a href="${product.url}" class="Button-Page-Small" style="width: 150px;" target="_blank">${storeNameForButton}</a>` : '';

                    var ean = product.ean || '';

                    var purchasePriceDisplay;
                    if (product.marginPrice && product.marginPrice.toString().trim() !== '') {
                        purchasePriceDisplay = `${product.marginPrice} PLN`;
                    } else {
                        purchasePriceDisplay = 'Brak';
                    }

                    var imageUrl = product.mainUrl || '';
                    var imageCell = imageUrl ? `<img src="${imageUrl}" style="width: 90px; height: 90px; object-fit: contain; background-color: white;" />` : `<div style="width: 90px; height: 90px;"></div>`;

                    var addedDateFormatted = formatDate(product.addedDate);
                    var foundOnGoogleDateFormatted = formatDate(product.foundOnGoogleDate);
                    var foundOnCeneoDateFormatted = formatDate(product.foundOnCeneoDate);

                    var statusBoxClass = "";
                    var statusText = "";

                    if (product.isScrapable && product.isRejected) {
                        statusBoxClass = "StatusBoxProduct-1";
                        statusText = "Odrzucony";
                    } else if (product.isScrapable) {
                        statusBoxClass = "StatusBoxProduct-2";
                        statusText = "Aktywny";
                    } else if (product.isRejected) {
                        statusBoxClass = "StatusBoxProduct-3";
                        statusText = "Wyłączony";
                    } else {
                        statusBoxClass = "StatusBoxProduct-4";
                        statusText = "Nieaktywny";
                    }

                    row.innerHTML = `
                        <td><p>${highlightedProductName}</p><p>${category}</p></td>
                        <td>${imageCell}</td>
                        <td>${ean}</td>
                        <td>${purchasePriceDisplay}</td>
                        <td>
                            <div style="display: flex; flex-direction: column; align-items: flex-start; gap: 5px;">
                                ${offerUrlButton}
                                ${googleUrlButton}
                                ${storeSpecificOfferButton}
                            </div>
                        </td>
                        <td>
                            <input type="checkbox" class="scrapable-checkbox" data-product-id="${product.productId}"
                                ${product.isScrapable ? "checked" : ""}
                                ${isNotFound ? "disabled" : ""} />
                        </td>
                        <td><div class="${statusBoxClass}">${statusText}</div></td>`;

                    if (!isNotFound) {
                        row.querySelector('.scrapable-checkbox').addEventListener('change', function () {
                            saveState();
                            var productId = this.getAttribute('data-product-id');
                            fetch('@Url.Action("UpdateScrapableProduct", "Product")?storeId=' + storeId, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify(productId)
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (!data.success) {
                                    alert(data.message || 'Wystąpił błąd podczas aktualizacji statusu scrapowania.');
                                    this.checked = !this.checked;
                                } else {
                                    fetchProducts();
                                }
                            })
                            .catch(error => {
                                console.error('There was a problem with your fetch operation:', error);
                            });
                        });
                    }
                    tbody.appendChild(row);
                });
                document.getElementById('displayed-count').textContent = products.length;
                window.scrollTo(0, lastScrollPosition);
            }

            function filterRows() {
                var selectedStatuses = Array.from(document.querySelectorAll('.status-filter:checked'))
                    .map(checkbox => checkbox.getAttribute('data-status'));

                var searchTerm = searchInput.value;
                var filteredProducts = filterProductsByName(allProducts, searchTerm);

                var existingStatuses = ['active', 'inactive', 'active-rejected', 'inactive-rejected'];
                var selectedExistingStatuses = selectedStatuses.filter(status => existingStatuses.includes(status));
                var selectedPlatformStatuses = selectedStatuses.filter(status => platformStatuses.includes(status));

                if (selectedExistingStatuses.length > 0) {
                    filteredProducts = filteredProducts.filter(product => {
                        var productStatus = getProductStatus(product);
                        return selectedExistingStatuses.includes(productStatus);
                    });
                }

                if (selectedPlatformStatuses.length > 0) {
                    filteredProducts = filteredProducts.filter(product => {
                        var platformStatus = getProductPlatformStatus(product);
                        if (selectedPlatformStatuses.includes('not-found')) return platformStatus.notFound;
                        if (selectedPlatformStatuses.includes('google-ceneo')) return platformStatus.hasBoth;

                        var includeProduct = false;
                        if (selectedPlatformStatuses.includes('google') && platformStatus.hasGoogle) includeProduct = true;
                        if (selectedPlatformStatuses.includes('ceneo') && platformStatus.hasCeneo) includeProduct = true;

                        if(selectedPlatformStatuses.includes('google') && selectedPlatformStatuses.includes('ceneo')){

                        } else if (selectedPlatformStatuses.includes('google')) {
                            return platformStatus.hasGoogle;
                        } else if (selectedPlatformStatuses.includes('ceneo')) {
                            return platformStatus.hasCeneo;
                        }
                        return includeProduct;

                    });
                }
                filteredProducts = filterProductsByCategory(filteredProducts, selectedCategory);
                renderProducts(filteredProducts, searchTerm);
                updateCounters(filteredProducts);
            }

            function fetchProducts() {
                fetch('@Url.Action("GetProducts", "Product")?storeId=' + storeId)
                    .then(response => response.json())
                    .then(data => {
                        allProducts = data;
                        var categoriesWithCount = allProducts.reduce((acc, product) => {
                            let category = product.category || "Inne";
                            let categoryObj = acc.find(cat => cat.name === category);
                            if (categoryObj) {
                                categoryObj.count++;
                            } else {
                                acc.push({ name: category, count: 1 });
                            }
                            return acc;
                        }, []);
                        populateCategoryDropdown(categoriesWithCount);
                        updateCounters(allProducts);
                        filterRows();
                    })
                    .catch(error => {
                        console.error('Error fetching products:', error);
                    });
            }

            document.querySelectorAll('.status-filter').forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    if ((this.id === 'not-found' || this.id === 'google-ceneo') && this.checked) {
                        platformStatuses.forEach(function (statusId) {
                            if (statusId !== this.id && document.getElementById(statusId)) {
                                document.getElementById(statusId).checked = false;
                            }
                        }.bind(this));
                    } else if (this.checked && (this.id === 'google' || this.id === 'ceneo')) {
                        if(document.getElementById('not-found')) document.getElementById('not-found').checked = false;
                        if(document.getElementById('google-ceneo')) document.getElementById('google-ceneo').checked = false;
                    }
                    filterRows();
                });
            });

            searchInput.addEventListener('input', filterRows);
            categoryDropdown.addEventListener('change', function () {
                saveState();
                filterRows();
            });

            selectAllButton.addEventListener('click', function () {
                var productIds = [];
                document.querySelectorAll('.scrapable-checkbox').forEach(function (checkbox) {
                    if (!checkbox.disabled && !checkbox.checked) {
                        checkbox.checked = true;
                        productIds.push(parseInt(checkbox.getAttribute('data-product-id')));
                    }
                });
                if (productIds.length > 0) {
                    fetch('@Url.Action("UpdateMultipleScrapableProducts", "Product")?storeId=' + storeId, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(productIds)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            fetchProducts();
                        } else {
                            alert('Błąd podczas aktualizacji produktów: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Problem z operacją fetch:', error);
                    });
                }
            });

            deselectAllButton.addEventListener('click', function () {
                var productIds = [];
                document.querySelectorAll('.scrapable-checkbox:checked:not(:disabled)').forEach(function (checkbox) {
                    checkbox.checked = false;
                    productIds.push(parseInt(checkbox.getAttribute('data-product-id')));
                });
                if (productIds.length > 0) {
                    fetch('@Url.Action("ResetMultipleScrapableProducts", "Product")?storeId=' + storeId, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(productIds)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            fetchProducts();
                        } else {
                            alert('Błąd podczas resetowania produktów: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Problem z operacją fetch:', error);
                    });
                }
            });

            fetchProducts();
        });
    </script>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            const uploadMarginsModal = document.getElementById('uploadMarginsModal');
            const uploadMarginsForm = document.getElementById('uploadMarginsForm');
            const uploadedFileField = document.getElementById('uploadedFile');
            const submitUploadButton = document.getElementById('submitUploadMarginsButton');
            const uploadClientError = document.getElementById('uploadClientError');
            const originalButtonText = submitUploadButton ? submitUploadButton.innerHTML : 'Wgraj ceny zakupu';
            const clearAllMarginsButton = document.getElementById('clearAllMarginsButton');
            const storeIdForMargins = @ViewBag.StoreId;

            const uploadMarginsButton = document.getElementById('uploadMarginsButton');
           if (uploadMarginsButton && uploadMarginsModal) {
                uploadMarginsButton.addEventListener('click', function () {
                    if (uploadMarginsForm) uploadMarginsForm.reset();
                    if (uploadClientError) {
                        uploadClientError.style.display = 'none';
                        uploadClientError.textContent = '';
                    }
                    if (submitUploadButton) {
                        submitUploadButton.disabled = false;

                        submitUploadButton.innerHTML = originalButtonText;
                    }
                    updateModalStats();
                    $('#uploadMarginsModal').modal('show');
                });
            }

            if (uploadMarginsForm && uploadedFileField && submitUploadButton && uploadClientError) {
                uploadMarginsForm.addEventListener('submit', function (event) {
                    uploadClientError.style.display = 'none';
                    uploadClientError.textContent = '';

                    if (!uploadedFileField.files || uploadedFileField.files.length === 0) {
                        event.preventDefault();
                        uploadClientError.textContent = 'Proszę wybrać plik.';
                        uploadClientError.style.display = 'block';
                        return;
                    }

                    const fileName = uploadedFileField.files[0].name;
                    const fileSize = uploadedFileField.files[0].size;
                    const allowedExtensions = /(\.xls|\.xlsx)$/i;
                    const maxFileSize = 10 * 1024 * 1024;

                    if (!allowedExtensions.exec(fileName)) {
                        event.preventDefault();
                        uploadClientError.textContent = 'Niewspierany format pliku. Proszę wgrać plik Excel (.xls lub .xlsx).';
                        uploadClientError.style.display = 'block';
                        uploadedFileField.value = '';
                        return;
                    }

                    if (fileSize > maxFileSize) {
                        event.preventDefault();
                        uploadClientError.textContent = 'Wielkość pliku nie może przekraczać 10 MB.';
                        uploadClientError.style.display = 'block';
                        uploadedFileField.value = '';
                        return;
                    }

                    submitUploadButton.disabled = true;
                    submitUploadButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Wgrywanie...';

                });
            }

        if (clearAllMarginsButton) {
            clearAllMarginsButton.addEventListener('click', function() {
                if (!confirm('Jesteś pewien, że chcesz usunąć WSZYSTKIE ceny zakupu dla tego sklepu? Ta operacja jest nieodwracalna.')) {
                    return;
                }

                this.disabled = true;
                const originalButtonHTML = this.innerHTML;
                this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Usuwanie...';

                const formWithToken = document.getElementById('uploadMarginsForm');
                let requestVerificationToken = null;
                if (formWithToken) {
                    const tokenInput = formWithToken.querySelector('input[name="__RequestVerificationToken"]');
                    if (tokenInput) {
                        requestVerificationToken = tokenInput.value;
                    }
                }

                if (!requestVerificationToken) {

                    alert('Nie można znaleźć tokenu weryfikacyjnego. Operacja anulowana.');
                    this.disabled = false;
                    this.innerHTML = originalButtonHTML;
                    console.error('__RequestVerificationToken not found on the page.');
                    return;
                }

                fetch(`@Url.Action("ClearAllPurchasePrices", "Product")?storeId=${storeIdForMargins}`, {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'RequestVerificationToken': requestVerificationToken
                    }
                })
                .then(response => {

                    if (!response.ok) {
                        const contentType = response.headers.get("content-type");
                        if (contentType && contentType.indexOf("application/json") !== -1) {
                            return response.json().then(errData => {
                                throw new Error(errData.message || `Błąd serwera (JSON): ${response.status}`);
                            });
                        } else {
                            return response.text().then(textData => {
                                throw new Error(`Błąd serwera (${response.status}). Odpowiedź nie była w formacie JSON. Treść: ${textData.substring(0, 100)}...`);
                            });
                        }
                    }
                    const contentType = response.headers.get("content-type");
                    if (contentType && contentType.indexOf("application/json") !== -1) {
                         return response.json();
                    } else {
                        throw new Error('Serwer odpowiedział poprawnie, ale odpowiedź nie jest w formacie JSON.');
                    }
                })
                .then(data => {
                    if (data.success) {

                        window.location.reload();
                    } else {
                        alert(data.message || 'Wystąpił błąd podczas usuwania cen zakupu.');

                        this.disabled = false;
                        this.innerHTML = originalButtonHTML;
                    }
                })
                .catch(error => {
                    console.error('Błąd podczas usuwania cen zakupu:', error);
                    alert('Wystąpił błąd komunikacji: ' + error.message);

                    this.disabled = false;
                    this.innerHTML = originalButtonHTML;
                })

            });
        }

            function updateModalStats() {
                const elTotal = document.getElementById('stat-total-products');
                const elWithPrice = document.getElementById('stat-products-with-purchase-price');
                const elActiveMon = document.getElementById('stat-active-monitoring-products');
                const elActiveMonEan = document.getElementById('stat-active-monitoring-with-ean');
                const elActiveMonPrice = document.getElementById('stat-active-monitoring-with-purchase-price');

                if (!allProducts || allProducts.length === 0) {
                    elTotal.textContent = '0';
                    elWithPrice.textContent = '0 (0.0%)';
                    elActiveMon.textContent = '0';
                    elActiveMonEan.textContent = '0 (0.0%)';
                    elActiveMonPrice.textContent = '0 (0.0%)';
                    return;
                }

                const totalProducts = allProducts.length;
                const productsWithPurchasePrice = allProducts.filter(p => p.marginPrice != null && p.marginPrice.toString().trim() !== '').length;

                const activeMonitoringProducts = allProducts.filter(p => p.isScrapable && !p.isRejected);
                const activeMonitoringCount = activeMonitoringProducts.length;

                const activeMonitoringWithEan = activeMonitoringProducts.filter(p => p.ean && p.ean.trim() !== '').length;
                const activeMonitoringWithPurchasePrice = activeMonitoringProducts.filter(p => p.marginPrice != null && p.marginPrice.toString().trim() !== '').length;

                elTotal.textContent = totalProducts;
                elWithPrice.textContent = `${productsWithPurchasePrice} (${totalProducts > 0 ? ((productsWithPurchasePrice / totalProducts) * 100).toFixed(1) : '0.0'}%)`;
                elActiveMon.textContent = activeMonitoringCount;
                elActiveMonEan.textContent = `${activeMonitoringWithEan} (${activeMonitoringCount > 0 ? ((activeMonitoringWithEan / activeMonitoringCount) * 100).toFixed(1) : '0.0'}%)`;
                elActiveMonPrice.textContent = `${activeMonitoringWithPurchasePrice} (${activeMonitoringCount > 0 ? ((activeMonitoringWithPurchasePrice / activeMonitoringCount) * 100).toFixed(1) : '0.0'}%)`;
            }

            if (uploadMarginsModal) {
                $(uploadMarginsModal).on('hidden.bs.modal', function () {
                    if (uploadClientError) uploadClientError.style.display = 'none';
                    if (submitUploadButton) {
                        submitUploadButton.disabled = false;
                        submitUploadButton.innerHTML = originalButtonText;
                    }

                });
            }
        });
    </script>
