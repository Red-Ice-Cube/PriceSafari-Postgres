@{
    ViewData["Title"] = "Lista Produktów";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<style>
    .StatusBoxProduct-1 {
        display: inline-flex;
        padding: 2px 5px;
        border-radius: 4px;
        width: 90px;
        align-items: center;
        justify-content: center;
        background: rgba(128, 0, 128, 0.3);
        border: solid 2px rgba(128, 0, 128, 1);
        font-size: 14px;
        font-weight: 500;
        color: rgba(128, 0, 128, 1);
    }

    .StatusBoxProduct-2 {
        display: inline-flex;
        padding: 2px 5px;
        border-radius: 4px;
        align-items: center;
        justify-content: center;
        width: 90px;
        background: rgba(14, 126, 135, 0.3);
        border: solid 2px rgba(14, 126, 135, 1);
        font-size: 14px;
        font-weight: 500;
        color: rgba(14, 126, 135, 1);
    }

    .StatusBoxProduct-3 {
        display: inline-flex;
        padding: 2px 5px;
        border-radius: 4px;
        align-items: center;
        width: 90px;
        justify-content: center;
        background: rgba(238, 17, 17, 0.3);
        border: solid 2px rgba(238, 17, 17, 1);
        font-size: 14px;
        font-weight: 500;
