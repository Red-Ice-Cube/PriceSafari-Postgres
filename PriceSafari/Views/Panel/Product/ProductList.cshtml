        // ============================================================
        // FILTER / SEARCH PIPELINE
        // ============================================================
        function filterRows() {
            var selectedStatuses = Array.from(document.querySelectorAll('.status-filter:checked'))
                .map(function (cb) { return cb.getAttribute('data-status'); });
            var searchTerm = searchInput.value;

            var result = filterProductsByName(allProducts, searchTerm);

            var existingStatuses = ['active', 'inactive', 'active-rejected', 'inactive-rejected'];
            var selectedExistingStatuses = selectedStatuses.filter(function (s) { return existingStatuses.includes(s); });
            var selectedPlatformStatuses = selectedStatuses.filter(function (s) { return platformStatuses.includes(s); });

            if (selectedExistingStatuses.length > 0) {
                result = result.filter(function (product) {
                    return selectedExistingStatuses.includes(getProductStatus(product));
                });
            }

            if (selectedPlatformStatuses.length > 0) {
                result = result.filter(function (product) {
                    var ps = getProductPlatformStatus(product);
                    if (selectedPlatformStatuses.includes('not-found')) return ps.notFound;
                    if (selectedPlatformStatuses.includes('google-ceneo')) return ps.hasBoth;
                    var include = false;
                    if (selectedPlatformStatuses.includes('google') && ps.hasGoogle) include = true;
                    if (selectedPlatformStatuses.includes('ceneo') && ps.hasCeneo) include = true;
                    if (selectedPlatformStatuses.includes('google') && selectedPlatformStatuses.includes('ceneo')) {
                        // both individual checked
                    } else if (selectedPlatformStatuses.includes('google')) {
                        return ps.hasGoogle;
                    } else if (selectedPlatformStatuses.includes('ceneo')) {
                        return ps.hasCeneo;
                    }
                    return include;
                });
            }

            var productsBeforeFlagFilter = result.slice();

            if (selectedFlagsExclude.size > 0) {
                result = result.filter(function (item) {
                    if (selectedFlagsExclude.has('noFlag') && (!item.flagIds || item.flagIds.length === 0)) return false;
                    if (item.flagIds) {
                        for (var it = selectedFlagsExclude.values(), val = null; (val = it.next().value) !== undefined;) {
                            if (val !== 'noFlag' && item.flagIds.includes(parseInt(val))) return false;
                        }
                    }
                    return true;
                });
            }

            if (selectedFlagsInclude.size > 0) {
                result = result.filter(function (item) {
                    if (selectedFlagsInclude.has('noFlag') && (!item.flagIds || item.flagIds.length === 0)) return true;
                    if (item.flagIds) {
                        return item.flagIds.some(function (fid) { return selectedFlagsInclude.has(fid.toString()); });
                    }
                    return false;
                });
            }

            result = filterProductsByProducer(result, selectedProducer);

            filteredProducts = result;

            // Reset scroll to top and render
            lastRenderedStart = -1;
            lastRenderedEnd = -1;
            renderVirtual(true);
            updateCounters();
            updateAndRenderFlagFilters(productsBeforeFlagFilter);
        }

        // ============================================================
        // FETCH PRODUCTS
        // ============================================================
        function fetchProducts() {
            fetch('@Url.Action("GetProducts", "Product")?storeId=' + storeId)
                .then(function (r) { return r.json(); })
                .then(function (data) {
                    allProducts = data;

                    // Build lookup map
                    productMap = {};
                    allProducts.forEach(function (p) {
                        productMap[p.productId] = p;
                    });

                    var producersWithCount = allProducts.reduce(function (acc, product) {
                        var producer = product.producer || "Brak";
                        var obj = acc.find(function (p) { return p.name === producer; });
                        if (obj) { obj.count++; } else { acc.push({ name: producer, count: 1 }); }
                        return acc;
                    }, []);

                    populateProducerDropdown(producersWithCount);
                    filterRows();
                })
                .catch(function (err) {
                    console.error('Error fetching products:', err);
                });
        }

        // ============================================================
        // HELPERS
        // ============================================================
        function getProductPlatformStatus(product) {
            var hasGoogle = product.googleUrl && product.googleUrl.trim() !== '';
            var hasCeneo = product.offerUrl && product.offerUrl.trim() !== '';
            return {
                hasGoogle: hasGoogle,
                hasCeneo: hasCeneo,
                hasBoth: hasGoogle && hasCeneo,
                notFound: !hasGoogle && !hasCeneo
            };
        }

        function getProductStatus(product) {
            if (product.isScrapable && product.isRejected) return "active-rejected";
            if (product.isScrapable) return "active";
            if (product.isRejected) return "inactive-rejected";
            return "inactive";
        }

        function getStatusInfo(product) {
            if (product.isScrapable && product.isRejected) {
                return { boxClass: 'StatusBoxProduct-1', text: 'Odrzucony', checkboxClass: 'rejected' };
            } else if (product.isScrapable) {
                return { boxClass: 'StatusBoxProduct-2', text: 'Aktywny', checkboxClass: '' };
            } else if (product.isRejected) {
                return { boxClass: 'StatusBoxProduct-3', text: 'Wyłączony', checkboxClass: '' };
            }
            return { boxClass: 'StatusBoxProduct-4', text: 'Nieaktywny', checkboxClass: '' };
        }

        function createNewGoogleUrl(product) {
            if (!product.googleUrl || !product.productName) return product.googleUrl || '';
            var match = product.googleUrl.match(/product\/(\d+)/);
            if (match && match[1]) {
                return 'https://www.google.com/shopping/product/' + match[1] + '/offers?q=' + encodeURIComponent(product.productName);
            }
            return product.googleUrl;
        }

        function decodeHTML(html) {
            var txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }

        function highlightMatches(text, searchTerm) {
            if (!searchTerm) return text;
            var sanitized = searchTerm.replace(/[^a-zA-Z0-9\s.-]/g, '');
            if (!sanitized) return text;
            var regex = new RegExp('(' + sanitized.replace(/[.*+?^${}()|[\]\\]/g, '\\$&') + ')', 'gi');
            return text.replace(regex, '<span style="color: #9400D3; font-weight: 600;">$1</span>');
        }

        function filterProductsByProducer(products, producer) {
            if (producer === 'all') return products;
            return products.filter(function (p) { return decodeHTML(p.producer || "Brak") === producer; });
        }

        function filterProductsByName(products, name) {
            var sanitized = name.replace(/[^a-zA-Z0-9\s.-]/g, '').trim().toLowerCase();
            if (sanitized === '') return products;
            return products.filter(function (product) {
                var pName = product.productName.toLowerCase().replace(/[^a-zA-Z0-9\s.-]/g, '').trim();
                var pEan = (product.ean || '').toLowerCase().replace(/[^a-zA-Z0-9\s.-]/g, '').trim();
                return pName.includes(sanitized) || pEan.includes(sanitized);
            });
        }

        function hexToRgba(hex, alpha) {
            var r = 0, g = 0, b = 0;
            if (hex.length == 4) {
                r = parseInt(hex[1] + hex[1], 16);
                g = parseInt(hex[2] + hex[2], 16);
                b = parseInt(hex[3] + hex[3], 16);
            } else if (hex.length == 7) {
                r = parseInt(hex[1] + hex[2], 16);
                g = parseInt(hex[3] + hex[4], 16);
                b = parseInt(hex[5] + hex[6], 16);
            }
            return 'rgba(' + r + ', ' + g + ', ' + b + ', ' + alpha + ')';
        }

        function createFlagsHTML(product) {
            if (!product.flagIds || product.flagIds.length === 0) return '';
            var html = '<div class="flags-container">';
            product.flagIds.forEach(function (flagId) {
                var flag = flags.find(function (f) { return f.FlagId === flagId; });
                if (flag) {
                    html += '<span class="flag" style="color:' + flag.FlagColor +
                        ';border:2px solid ' + flag.FlagColor +
                        ';background-color:' + hexToRgba(flag.FlagColor, 0.3) + ';">' +
                        flag.FlagName + '</span>';
                }
            });
            html += '</div>';
            return html;
        }

        // ============================================================
        // COUNTERS
        // ============================================================
        function updateCounters() {
            var activeRejectedCount = 0, activeCount = 0, inactiveRejectedCount = 0, inactiveCount = 0;
            var googleCount = 0, ceneoCount = 0, googleCeneoCount = 0, notFoundCount = 0;

            for (var i = 0; i < allProducts.length; i++) {
                var p = allProducts[i];
                if (p.isScrapable && p.isRejected) activeRejectedCount++;
                else if (p.isScrapable) activeCount++;
                else if (p.isRejected) inactiveRejectedCount++;
                else inactiveCount++;

                var ps = getProductPlatformStatus(p);
                if (ps.hasBoth) googleCeneoCount++;
                if (ps.hasGoogle) googleCount++;
                if (ps.hasCeneo) ceneoCount++;
                if (ps.notFound) notFoundCount++;
            }

            document.getElementById('count-active-rejected').textContent = activeRejectedCount;
            document.getElementById('count-active').textContent = activeCount;
            document.getElementById('count-inactive-rejected').textContent = inactiveRejectedCount;
            document.getElementById('count-inactive').textContent = inactiveCount;
            document.getElementById('scrapable-count').textContent = activeRejectedCount + activeCount;
            document.getElementById('total-products').textContent = allProducts.length;
            document.getElementById('count-google').textContent = googleCount;
            document.getElementById('count-ceneo').textContent = ceneoCount;
            document.getElementById('count-google-ceneo').textContent = googleCeneoCount;
            document.getElementById('count-not-found').textContent = notFoundCount;
        }

        // ============================================================
