    .scrapable-checkbox {
        appearance: none;
        width: 44px;
        height: 44px;
        background-color: red;
        border: 2px solid black;
        border-radius: 24px;
        position: relative;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
        outline: none;
    }

        .scrapable-checkbox:checked {
