        // ============================================================
        function populateProducerDropdown(producersWithCount) {
            producersWithCount.sort(function (a, b) { return b.count - a.count; });
            producerDropdown.innerHTML = '<option value="all">Producent - Wszyscy (' + allProducts.length + ')</option>';
            producersWithCount.forEach(function (prod) {
