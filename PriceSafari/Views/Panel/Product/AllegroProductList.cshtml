        function getToken() {
            var f = document.getElementById('uploadAllegroMarginsForm');
            if (!f) return null;
            var inp = f.querySelector('input[name="__RequestVerificationToken"]');
            return inp ? inp.value : null;
        }

        function updatePurchasePrice(productId, newPrice) {
            var token = getToken();
            if (!token) {
                alert('Błąd bezpieczeństwa: Nie znaleziono tokenu weryfikacyjnego.');
                return;
            }

            fetch('@Url.Action("UpdateAllegroPurchasePrice", "AllegroProduct")?storeId=' + storeId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ AllegroProductId: parseInt(productId), NewPrice: newPrice })
            })
            .then(function (response) {
                if (!response.ok) {
                    return response.json().then(function (err) { throw new Error(err.message || 'Błąd serwera'); });
                }
                return response.json();
            })
            .then(function (data) {
                if (data.success) {
                    var product = productMap[parseInt(productId)];
                    if (product) {
                        product.allegroMarginPrice = newPrice;
                    }
                    renderVirtual(true);
                } else {
                    alert('Błąd: ' + (data.message || 'Nie udało się zaktualizować ceny.'));
                }
            })
            .catch(function (error) {
                console.error('Błąd podczas aktualizacji ceny:', error);
                alert('Wystąpił błąd komunikacji: ' + error.message);
            });
        }

        // ============================================================
        // FILTER PIPELINE
        // ============================================================
        function filterRows() {
            var selectedStatuses = Array.from(document.querySelectorAll('.status-filter:checked'))
                .map(function (cb) { return cb.getAttribute('data-status'); });
            var searchTerm = searchInput.value.toLowerCase();

            var result = allProducts.filter(function (p) {
                var nameMatch = p.allegroProductName.toLowerCase().includes(searchTerm);
                var eanMatch = (p.allegroEan || '').toLowerCase().includes(searchTerm);
                var idMatch = (p.idOnAllegro || '').toLowerCase().includes(searchTerm);
                var skuMatch = (p.allegroSku || '').toLowerCase().includes(searchTerm);
                var statusMatch = selectedStatuses.length === 0 || selectedStatuses.includes(getProductStatus(p));
                return (nameMatch || eanMatch || idMatch || skuMatch) && statusMatch;
            });

            var productsBeforeFlagFilter = result.slice();

            if (selectedFlagsExclude.size > 0) {
                result = result.filter(function (item) {
                    if (selectedFlagsExclude.has('noFlag') && (!item.flagIds || item.flagIds.length === 0)) return false;
                    if (item.flagIds) {
                        for (var it = selectedFlagsExclude.values(), val = null; (val = it.next().value) !== undefined;) {
                            if (val !== 'noFlag' && item.flagIds.includes(parseInt(val))) return false;
                        }
                    }
                    return true;
                });
            }

            if (selectedFlagsInclude.size > 0) {
                result = result.filter(function (item) {
                    if (selectedFlagsInclude.has('noFlag') && (!item.flagIds || item.flagIds.length === 0)) return true;
                    if (item.flagIds) {
                        return item.flagIds.some(function (fid) { return selectedFlagsInclude.has(fid.toString()); });
                    }
                    return false;
                });
            }

            filteredProducts = result;

            lastRenderedStart = -1;
            lastRenderedEnd = -1;
            renderVirtual(true);
            updateCounters();
            updateAndRenderFlagFilters(productsBeforeFlagFilter);
        }

        // ============================================================
        // FETCH
        // ============================================================
        function fetchProducts() {
            fetch('@Url.Action("GetAllegroProducts", "AllegroProduct")?storeId=' + storeId)
                .then(function (r) { return r.json(); })
                .then(function (data) {
                    allProducts = data;
                    productMap = {};
                    allProducts.forEach(function (p) {
                        productMap[p.allegroProductId] = p;
                    });
                    filterRows();
                })
                .catch(function (err) {
                    console.error('Error fetching products:', err);
                });
        }

        // ============================================================
        // HELPERS
        // ============================================================
        function getProductStatus(product) {
            if (product.isScrapable && product.isRejected) return "active-rejected";
            if (product.isScrapable) return "active";
            if (product.isRejected) return "inactive-rejected";
            return "inactive";
        }

        function getStatusInfo(product) {
            if (product.isScrapable && product.isRejected) {
                return { boxClass: 'StatusBoxProduct-1', text: 'Odrzucony', checkboxClass: 'rejected' };
            } else if (product.isScrapable) {
                return { boxClass: 'StatusBoxProduct-2', text: 'Aktywny', checkboxClass: '' };
            } else if (product.isRejected) {
                return { boxClass: 'StatusBoxProduct-3', text: 'Wyłączony', checkboxClass: '' };
            }
            return { boxClass: 'StatusBoxProduct-4', text: 'Nieaktywny', checkboxClass: '' };
        }

        function highlightMatches(text, searchTerm) {
            if (!searchTerm || !text) return text || '';
            var sanitized = searchTerm.replace(/[^a-zA-Z0-9\s.-]/g, '');
            if (!sanitized) return text;
            var regex = new RegExp('(' + sanitized.replace(/[.*+?^${}()|[\]\\]/g, '\\$&') + ')', 'gi');
            return text.replace(regex, '<span style="color: #9400D3; font-weight: 600;">$1</span>');
        }

        function hexToRgba(hex, alpha) {
            var r = 0, g = 0, b = 0;
            if (hex.length == 4) {
                r = parseInt(hex[1] + hex[1], 16);
                g = parseInt(hex[2] + hex[2], 16);
                b = parseInt(hex[3] + hex[3], 16);
            } else if (hex.length == 7) {
                r = parseInt(hex[1] + hex[2], 16);
                g = parseInt(hex[3] + hex[4], 16);
                b = parseInt(hex[5] + hex[6], 16);
            }
            return 'rgba(' + r + ', ' + g + ', ' + b + ', ' + alpha + ')';
        }

        function createFlagsHTML(product) {
            if (!product.flagIds || product.flagIds.length === 0) return '';
            var html = '<div class="flags-container">';
            product.flagIds.forEach(function (flagId) {
                var flag = flags.find(function (f) { return f.FlagId === flagId; });
                if (flag) {
                    html += '<span class="flag" style="color:' + flag.FlagColor +
                        ';border:2px solid ' + flag.FlagColor +
                        ';background-color:' + hexToRgba(flag.FlagColor, 0.3) + ';">' +
                        flag.FlagName + '</span>';
                }
            });
            html += '</div>';
            return html;
        }

        // ============================================================
        // COUNTERS
        // ============================================================
        function updateCounters() {
            var activeRejectedCount = 0, activeCount = 0, inactiveRejectedCount = 0, inactiveCount = 0;

            for (var i = 0; i < allProducts.length; i++) {
                var p = allProducts[i];
                if (p.isScrapable && p.isRejected) activeRejectedCount++;
                else if (p.isScrapable) activeCount++;
                else if (p.isRejected) inactiveRejectedCount++;
                else inactiveCount++;
            }

            document.getElementById('count-active-rejected').textContent = activeRejectedCount;
            document.getElementById('count-active').textContent = activeCount;
            document.getElementById('count-inactive-rejected').textContent = inactiveRejectedCount;
            document.getElementById('count-inactive').textContent = inactiveCount;
            document.getElementById('scrapable-count').textContent = activeRejectedCount + activeCount;
            document.getElementById('total-products').textContent = allProducts.length;
        }

        // ============================================================
        // FLAG FILTERS
        // ============================================================
        function updateAndRenderFlagFilters(products) {
            var flagCounts = {};
            var noFlagCount = 0;

            products.forEach(function (p) {
                if (!p.flagIds || p.flagIds.length === 0) {
                    noFlagCount++;
                } else {
                    p.flagIds.forEach(function (id) {
                        flagCounts[id] = (flagCounts[id] || 0) + 1;
                    });
                }
            });

            var flagContainer = document.getElementById('flagFilterList');
            if (!flagContainer) return;
            flagContainer.innerHTML = '';

            if (typeof flags !== 'undefined' && flags) {
                flags.forEach(function (flag) {
                    var count = flagCounts[flag.FlagId] || 0;
                    var includeChecked = selectedFlagsInclude.has(String(flag.FlagId)) ? 'checked' : '';
                    var excludeChecked = selectedFlagsExclude.has(String(flag.FlagId)) ? 'checked' : '';

                    flagContainer.insertAdjacentHTML('beforeend',
                        '<div class="flag-filter-group">' +
                            '<div class="form-check form-check-inline check-include" style="margin-right:0px;">' +
                                '<input class="form-check-input flagFilterInclude" type="checkbox" id="flagCheckboxInclude_' + flag.FlagId + '" value="' + flag.FlagId + '" ' + includeChecked + ' title="Pokaż wszystkie produkty z tą flagą">' +
                            '</div>' +
                            '<div class="form-check form-check-inline check-exclude" style="margin-right:0px; padding-left:16px;">' +
                                '<input class="form-check-input flagFilterExclude" type="checkbox" id="flagCheckboxExclude_' + flag.FlagId + '" value="' + flag.FlagId + '" ' + excludeChecked + ' title="Ukryj wszystkie produkty z tą flagą">' +
                            '</div>' +
                            '<span class="flag-name-count" style="font-size:14px; font-weight: 400;">' + flag.FlagName + ' (' + count + ')</span>' +
                        '</div>');
                });
            }

            var noFlagIncludeChecked = selectedFlagsInclude.has('noFlag') ? 'checked' : '';
            var noFlagExcludeChecked = selectedFlagsExclude.has('noFlag') ? 'checked' : '';
            flagContainer.insertAdjacentHTML('beforeend',
                '<div class="flag-filter-group">' +
                    '<div class="form-check form-check-inline check-include" style="margin-right:0px;">' +
                        '<input class="form-check-input flagFilterInclude" type="checkbox" id="flagCheckboxInclude_noFlag" value="noFlag" ' + noFlagIncludeChecked + ' title="Pokaż wszystkie produkty bez flagi">' +
                    '</div>' +
                    '<div class="form-check form-check-inline check-exclude" style="margin-right:0px; padding-left:16px;">' +
                        '<input class="form-check-input flagFilterExclude" type="checkbox" id="flagCheckboxExclude_noFlag" value="noFlag" ' + noFlagExcludeChecked + ' title="Ukryj wszystkie produkty bez flagi">' +
                    '</div>' +
                    '<span class="flag-name-count" style="font-size:14px; font-weight: 400;">Brak flagi (' + noFlagCount + ')</span>' +
                '</div>');

            document.querySelectorAll('.flagFilterInclude, .flagFilterExclude').forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    var flagValue = this.value;
                    var isInclude = this.classList.contains('flagFilterInclude');
                    if (isInclude) {
                        if (this.checked) {
                            document.getElementById('flagCheckboxExclude_' + flagValue).checked = false;
                            selectedFlagsExclude.delete(flagValue);
                            selectedFlagsInclude.add(flagValue);
                        } else {
                            selectedFlagsInclude.delete(flagValue);
                        }
                    } else {
                        if (this.checked) {
                            document.getElementById('flagCheckboxInclude_' + flagValue).checked = false;
                            selectedFlagsInclude.delete(flagValue);
                            selectedFlagsExclude.add(flagValue);
                        } else {
                            selectedFlagsExclude.delete(flagValue);
                        }
                    }
                    filterRows();
                });
            });
        }

    })();
