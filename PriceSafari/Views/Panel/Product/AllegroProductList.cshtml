                        <div class="SimpleSpace" style="justify-content:flex-end; margin-right: 12px;">
                            <button type="button" class="Button-Page-Small-gr" id="uploadMarginsButton">
                                Ceny zakupu
                            </button>
                        </div>
                    </div>

                    <div class="virtual-scroll-container" id="virtualScrollContainer">
                        <table class="table-orders">
                            <thead>
                                <tr>
                                    <th>Produkt (<span id="displayed-count"></span>)</th>
                                    <th>Cena zakupu</th>
                                    <th>Oferta</th>
                                    <th>Monitoring</th>
                                    <th>Flagi</th>
                                </tr>
                            </thead>
                            <tbody id="product-list">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Batch operation overlay -->
