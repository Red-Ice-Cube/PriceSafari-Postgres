        // ============================================================
        // CHECKBOX — OPTIMISTIC SINGLE TOGGLE
        // ============================================================
        function onCheckboxChange(e) {
            var checkbox = e.target;
            if (!checkbox.classList.contains('scrapable-checkbox')) return;

            var productId = parseInt(checkbox.getAttribute('data-product-id'));
            var product = productMap[productId];
            if (!product) return;

            var wasScrapable = product.isScrapable;

            // Optimistic
            product.isScrapable = checkbox.checked;
            updateRowVisual(checkbox.closest('tr'), product);
            updateCounters();

            fetch('@Url.Action("UpdateScrapableAllegroProduct", "AllegroProduct")?storeId=' + storeId, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(productId)
            })
            .then(function (r) { return r.json(); })
            .then(function (data) {
                if (!data.success) {
                    product.isScrapable = wasScrapable;
                    checkbox.checked = wasScrapable;
                    updateRowVisual(checkbox.closest('tr'), product);
                    updateCounters();
                    alert(data.message || 'Wystąpił błąd podczas aktualizacji statusu.');
                }
            })
            .catch(function (err) {
                product.isScrapable = wasScrapable;
                checkbox.checked = wasScrapable;
                updateRowVisual(checkbox.closest('tr'), product);
                updateCounters();
                console.error('Fetch error:', err);
            });
        }

        function updateRowVisual(row, product) {
            if (!row) return;
            var statusInfo = getStatusInfo(product);
            var statusBox = row.querySelector('.StatusBoxProduct');
            if (statusBox) {
                statusBox.className = 'StatusBoxProduct ' + statusInfo.boxClass;
                statusBox.textContent = statusInfo.text;
            }
            var cb = row.querySelector('.scrapable-checkbox');
            if (cb) {
                cb.className = 'scrapable-checkbox ' + statusInfo.checkboxClass;
            }
        }

        // ============================================================
        // BATCH TOGGLE WITH OVERLAY
        // ============================================================
        function batchToggle(turnOn) {
            var idsToSend = [];

            filteredProducts.forEach(function (p) {
                if (turnOn && !p.isScrapable) {
                    idsToSend.push(p.allegroProductId);
                } else if (!turnOn && p.isScrapable) {
                    idsToSend.push(p.allegroProductId);
                }
            });

            if (idsToSend.length === 0) return;

            // Optimistic
            var previousStates = {};
            idsToSend.forEach(function (id) {
                var p = productMap[id];
                if (p) {
                    previousStates[id] = p.isScrapable;
                    p.isScrapable = turnOn;
                }
            });
            updateCounters();
            renderVirtual(true);

            var url = turnOn
                ? '@Url.Action("UpdateMultipleScrapableAllegroProducts", "AllegroProduct")?storeId=' + storeId
                : '@Url.Action("ResetMultipleScrapableAllegroProducts", "AllegroProduct")?storeId=' + storeId;

            var chunks = [];
            for (var i = 0; i < idsToSend.length; i += BATCH_CHUNK_SIZE) {
                chunks.push(idsToSend.slice(i, i + BATCH_CHUNK_SIZE));
            }

            // Show overlay
            var overlay = document.getElementById('batchOverlay');
            var titleEl = document.getElementById('batchOverlayTitle');
            var doneCountEl = document.getElementById('batchDoneCount');
            var totalCountEl = document.getElementById('batchTotalCount');
            var fillEl = document.getElementById('batchProgressFill');

            titleEl.textContent = turnOn ? 'Aktualizowanie produktów...' : 'Odznaczanie produktów...';
            totalCountEl.textContent = idsToSend.length;
            doneCountEl.textContent = '0';
            fillEl.style.width = '0%';
            overlay.classList.add('active');

            var processedCount = 0;
            var failed = false;

            var chain = Promise.resolve();
            chunks.forEach(function (chunk) {
                chain = chain.then(function () {
                    if (failed) return;
                    return fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(chunk)
                    })
                    .then(function (r) { return r.json(); })
                    .then(function (data) {
                        processedCount += chunk.length;
                        doneCountEl.textContent = Math.min(processedCount, idsToSend.length);
                        fillEl.style.width = ((processedCount / idsToSend.length) * 100) + '%';
                        if (!data.success) {
                            failed = true;
                            alert('Błąd: ' + (data.message || 'Nie udało się zaktualizować produktów.'));
                        }
                    });
                });
            });

            chain
                .then(function () {
                    if (failed) {
                        Object.keys(previousStates).forEach(function (id) {
                            var p = productMap[parseInt(id)];
                            if (p) p.isScrapable = previousStates[id];
                        });
                        updateCounters();
                        renderVirtual(true);
                    }
                })
                .catch(function (err) {
                    console.error('Batch error:', err);
                    Object.keys(previousStates).forEach(function (id) {
                        var p = productMap[parseInt(id)];
                        if (p) p.isScrapable = previousStates[id];
                    });
                    updateCounters();
                    renderVirtual(true);
                })
                .finally(function () {
                    fillEl.style.width = '100%';
                    doneCountEl.textContent = idsToSend.length;
                    setTimeout(function () {
                        overlay.classList.remove('active');
                    }, 600);
                });
        }

        // ============================================================
        // PRICE ACTIONS (delegated)
        // ============================================================
        function onTableClick(e) {
            var target = e.target;
            var row = target.closest('tr.product-row');
