<div class="modal fade" id="uploadAllegroMarginsModal" tabindex="-1" role="dialog" aria-labelledby="uploadAllegroMarginsModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:1050px" role="document">
        <div class="modal-content" style="margin:5% auto; width:850px;">
            <form asp-action="SetAllegroMargins" asp-controller="AllegroProduct" asp-route-storeId="@ViewBag.StoreId" method="post" enctype="multipart/form-data" id="uploadAllegroMarginsForm">
