                                </span>
                            </li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <label for="uploadedAllegroFile" class="form-label font-weight-bold">Wybierz plik:</label>
                        <input type="file" name="uploadedFile" id="uploadedAllegroFile" class="form-control" accept=".xls,.xlsx" required />
                    </div>

                    <div id="uploadAllegroClientError" class="alert alert-danger" style="display: none; margin-top: 10px;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="Button-Page-Small" data-dismiss="modal">Anuluj</button>
                    <button type="button" class="Button-Page-Small-r" id="clearAllAllegroMarginsButton" style="margin-right: auto;">Usuń wszystkie ceny zakupu</button>
                    <button type="submit" class="Button-Page-Small-b" id="submitUploadAllegroMarginsButton">Wgraj ceny zakupu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
    (function () {
        'use strict';

        // ============================================================
        // CONFIG
        // ============================================================
        var ROW_HEIGHT = 100;
        var BUFFER_ROWS = 10;
        var SEARCH_DEBOUNCE = 250;
        var BATCH_CHUNK_SIZE = 1000;

        // ============================================================
        // STATE
        // ============================================================
        var allProducts = [];
        var filteredProducts = [];
        var flags = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Flags ?? new List<FlagViewModel>()));
        var storeId = @ViewBag.StoreId;

        var selectedFlagsInclude = new Set();
        var selectedFlagsExclude = new Set();

        // Lookup map
        var productMap = {};

        // Expose for modal script
        window.getAllProducts = function () { return allProducts; };
        window.triggerFilterRows = function () { filterRows(); };

        // ============================================================
        // DOM refs
        // ============================================================
        var scrollContainer, tbody, searchInput;
        var selectAllButton, deselectAllButton;
        var displayedCountEl;

        // ============================================================
        // INIT
        // ============================================================
        document.addEventListener('DOMContentLoaded', function () {
            scrollContainer = document.getElementById('virtualScrollContainer');
            tbody = document.getElementById('product-list');
            searchInput = document.getElementById('productSearch');
            selectAllButton = document.getElementById('select-all');
            deselectAllButton = document.getElementById('deselect-all');
            displayedCountEl = document.getElementById('displayed-count');

            // Virtual scroll
            scrollContainer.addEventListener('scroll', onScroll);

            // Debounced search
            var searchTimer;
            searchInput.addEventListener('input', function () {
                clearTimeout(searchTimer);
                searchTimer = setTimeout(filterRows, SEARCH_DEBOUNCE);
            });

            // Status checkboxes
            document.querySelectorAll('.status-filter').forEach(function (cb) {
                cb.addEventListener('change', filterRows);
            });

            // Batch select/deselect
            selectAllButton.addEventListener('click', function () { batchToggle(true); });
            deselectAllButton.addEventListener('click', function () { batchToggle(false); });

            // Delegated events on tbody
            tbody.addEventListener('change', onCheckboxChange);
            tbody.addEventListener('click', onTableClick);

            // Initial fetch
            fetchProducts();
        });

        // ============================================================
        // VIRTUAL SCROLL
        // ============================================================
        var lastRenderedStart = -1;
        var lastRenderedEnd = -1;
        var rafPending = false;

        function onScroll() {
            if (!rafPending) {
                rafPending = true;
                requestAnimationFrame(function () {
                    rafPending = false;
                    renderVirtual();
                });
            }
        }

        function renderVirtual(force) {
            var total = filteredProducts.length;
            if (total === 0) {
                tbody.innerHTML = '';
                displayedCountEl.textContent = '0';
                return;
            }

            var scrollTop = scrollContainer.scrollTop;
            var viewportH = scrollContainer.clientHeight;
            var theadHeight = 40;
            var adjustedScrollTop = Math.max(0, scrollTop - theadHeight);

            var startIdx = Math.max(0, Math.floor(adjustedScrollTop / ROW_HEIGHT) - BUFFER_ROWS);
            var endIdx = Math.min(total, Math.ceil((adjustedScrollTop + viewportH) / ROW_HEIGHT) + BUFFER_ROWS);

            if (!force && startIdx === lastRenderedStart && endIdx === lastRenderedEnd) return;
            lastRenderedStart = startIdx;
            lastRenderedEnd = endIdx;

            var searchTerm = searchInput ? searchInput.value : '';
            var fragment = document.createDocumentFragment();

            // Top spacer
            var spacerTop = document.createElement('tr');
            spacerTop.style.height = (startIdx * ROW_HEIGHT) + 'px';
            spacerTop.style.padding = '0';
            spacerTop.style.border = 'none';
            spacerTop.innerHTML = '<td colspan="5" style="padding:0;border:none;"></td>';
            fragment.appendChild(spacerTop);

            for (var i = startIdx; i < endIdx; i++) {
                fragment.appendChild(createProductRow(filteredProducts[i], searchTerm));
            }

            // Bottom spacer
            var spacerBottom = document.createElement('tr');
            spacerBottom.style.height = ((total - endIdx) * ROW_HEIGHT) + 'px';
            spacerBottom.style.padding = '0';
            spacerBottom.style.border = 'none';
            spacerBottom.innerHTML = '<td colspan="5" style="padding:0;border:none;"></td>';
            fragment.appendChild(spacerBottom);

            tbody.innerHTML = '';
            tbody.appendChild(fragment);
            displayedCountEl.textContent = total;
        }

        // ============================================================
        // CREATE ROW
        // ============================================================
        function createProductRow(product, searchTerm) {
            var row = document.createElement('tr');
            row.classList.add('product-row');
            row.setAttribute('data-product-id', product.allegroProductId);

            var highlightedName = highlightMatches(product.allegroProductName, searchTerm);

            // EAN
            var eanHtml = '';
            if (product.allegroEan) {
                eanHtml = '<b>EAN:</b> ' + highlightMatches(product.allegroEan, searchTerm);
            } else {
                eanHtml = '<b style="color: #777;">EAN:</b> <span style="color: #777;">Brak</span>';
            }

            // ID
            var idHtml = '';
            if (product.idOnAllegro) {
                idHtml = '<b>ID:</b> ' + highlightMatches(product.idOnAllegro, searchTerm);
            } else {
                idHtml = '<b style="color: #777;">ID:</b> <span style="color: #777;">Brak</span>';
            }

            // SKU
            var skuHtml = '';
            if (product.allegroSku) {
                skuHtml = '<b>SKU:</b> ' + highlightMatches(product.allegroSku, searchTerm);
            } else {
                skuHtml = '<b style="color: #777;">SKU:</b> <span style="color: #777;">Brak</span>';
            }

            var offerUrlButton = product.allegroOfferUrl
                ? '<a href="' + product.allegroOfferUrl + '" rel="noopener noreferrer" class="Button-Page-Small" style="width: 150px;" target="_blank">Allegro</a>'
                : '';

            // Price
            var hasPrice = product.allegroMarginPrice != null && product.allegroMarginPrice.toString().trim() !== '';
            var priceValue = hasPrice ? parseFloat(product.allegroMarginPrice).toFixed(2) : '';

            var purchasePriceHtml =
                '<div class="price-display-container">' +
                    '<span class="price-text">' + (hasPrice ? priceValue.replace('.', ',') + ' PLN' : 'Brak') + '</span>' +
                    '<span class="price-actions">' +
                        '<i class="fas fa-plus add-price-btn ' + (hasPrice ? 'hidden' : '') + '" title="Dodaj cenę"></i>' +
                        '<i class="fas fa-pencil-alt edit-price-btn ' + (!hasPrice ? 'hidden' : '') + '" title="Edytuj cenę"></i>' +
                        '<i class="fas fa-trash-alt delete-price-btn ' + (!hasPrice ? 'hidden' : '') + '" title="Usuń cenę"></i>' +
                    '</span>' +
                '</div>' +
                '<div class="price-edit-container hidden">' +
                    '<input type="number" step="0.01" class="price-edit-input" value="' + priceValue + '">' +
                    '<span class="price-actions">' +
                        '<i class="fas fa-check save-price-btn" title="Zapisz"></i>' +
                        '<i class="fas fa-times cancel-edit-btn" title="Anuluj"></i>' +
                    '</span>' +
                '</div>';

            var statusInfo = getStatusInfo(product);
            var flagsCellContent = createFlagsHTML(product);

            row.innerHTML =
                '<td>' +
                    '<div style="width:420px;">' +
                        '<p style="margin-bottom: 6px; font-weight:500;">' + highlightedName + '</p>' +
                        '<div style="font-size: 0.85em; color: #555; line-height: 1.5em;">' +
                            '<div>' + eanHtml + '</div>' +
                            '<div>' + idHtml + '</div>' +
                            '<div>' + skuHtml + '</div>' +
                        '</div>' +
                    '</div>' +
                '</td>' +
                '<td>' + purchasePriceHtml + '</td>' +
                '<td>' + offerUrlButton + '</td>' +
                '<td>' +
                    '<div style="position: relative; width: 130px; height: 40px;">' +
                        '<input type="checkbox" class="scrapable-checkbox ' + statusInfo.checkboxClass + '" data-product-id="' + product.allegroProductId + '"' +
                            ' style="position: absolute; top: 0; left: 0; z-index: 2;"' +
                            (product.isScrapable ? ' checked' : '') + ' />' +
                        '<div class="StatusBoxProduct ' + statusInfo.boxClass + '" style="position: absolute; top: 0; left: 20px; z-index: 1;">' +
