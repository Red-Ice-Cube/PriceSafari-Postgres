@model List<PriceSafari.Models.ViewModels.ChanelViewModel>

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Produkty
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Sklep</th>
                            <th>Ilość Monitorowanych Produktów</th>
                            <th>Dozwolona Ilość Produktów</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr class="store-row" style="cursor:pointer;" data-url="@Url.Action("ProductList", "Product", new { storeId = store.StoreId })">
                                <td>
                                    <img src="@store.LogoUrl" class="img-container" alt="@store.StoreName" />
                                </td>
                                <td>@store.StoreName</td>
                                <td>@store.ProductCount</td>
                                <td>@store.AllowedProducts</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Konto nadal jest konfigurowane.</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var rows = document.querySelectorAll('.store-row');
            rows.forEach(function (row) {
                row.addEventListener('click', function (e) {
                    window.location.href = row.getAttribute('data-url');
                });
            });
        });
    </script>
}
