    </script>
    <script>
        // 1. Na starcie (po załadowaniu) – obsługa przycisków i wczytanie ID produktu
        let productId = @ViewBag.ProductId;

        $(document).ready(function () {
            const $showTableBtn = $('#showTableBtn');
            const $showChartBtn = $('#showChartBtn');
            const $tableContainer = $('#priceTableContainer');
            const $chartContainer = $('#trendChartContainer');

            $showTableBtn.on('click', function() {
                $chartContainer.hide();
                $tableContainer.show();
            });

            $showChartBtn.on('click', function() {
                $tableContainer.hide();
                $chartContainer.show();
                loadTrendDataAndDrawChart();
            });

            // Obsługa "Pokaż nasz sklep" / "Pokaż wszystkich"
            $('#showOnlyMyStoreBtn').on('click', function() {
                if (window.trendChartRef) {
                    let myStore = "@storeName".toLowerCase().trim();
                    window.trendChartRef.data.datasets.forEach(ds => {
                        ds.hidden = (ds.label.toLowerCase().trim() !== myStore);
                    });
                    window.trendChartRef.update();
                }
            });

            $('#showAllStoresBtn').on('click', function() {
                if (window.trendChartRef) {
                    window.trendChartRef.data.datasets.forEach(ds => {
                        ds.hidden = false;
                    });
                    window.trendChartRef.update();
                }
            });
        });

        // 2. AJAX pobranie danych i wywołanie drawTrendChart
        function loadTrendDataAndDrawChart() {
            $.ajax({
                url: '@Url.Action("GetPriceTrendData", "PriceHistory")',
                type: 'GET',
                data: { productId: productId },
                success: function(response) {
                    // Otrzymujemy response.timelineData
                    drawTrendChart(response.timelineData);
                },
                error: function() {
                    alert("Błąd pobierania danych trendu!");
                }
            });
        }

        // 3. Funkcja tworząca wykres
        function drawTrendChart(timelineData) {
            const ctx = document.getElementById("trendChart").getContext("2d");
            if (window.trendChartRef) {
                window.trendChartRef.destroy();
            }

            // A) Zbierzmy listę unikalnych dat (posortowanych)
            let allDatesSet = new Set();
            timelineData.forEach(item => allDatesSet.add(item.scrapDate));
            let allDates = Array.from(allDatesSet).sort();

            // B) Zbierzmy sklepy
            let allStoresSet = new Set();
            timelineData.forEach(item => {
                item.pricesByStore.forEach(ps => allStoresSet.add(ps.storeName));
            });
            let allStores = Array.from(allStoresSet);

            // C) priceMap[date][store] = cena
            let priceMap = {};
            timelineData.forEach(entry => {
                let date = entry.scrapDate;
                if (!priceMap[date]) {
                    priceMap[date] = {};
                }
                entry.pricesByStore.forEach(ps => {
                    priceMap[date][ps.storeName] = ps.price;
                });
            });

            // D) Znajdź sklep z najlepszą ceną na ostatnią datę
            let lastDate = allDates[allDates.length - 1];
            let bestPrice = Infinity;
            let storeWithBestPriceLast = null;
            if (lastDate) {
                let lastDayPrices = priceMap[lastDate];
                for (const store of Object.keys(lastDayPrices)) {
                    let price = lastDayPrices[store];
                    if (price < bestPrice) {
                        bestPrice = price;
                        storeWithBestPriceLast = store;
                    }
                }
            }

            // E) Znajdź sklep z najniższą ceną historyczną
            let storeWithLowestHistoricalPrice = null;
            let absoluteMinPrice = Infinity;
            allStores.forEach(store => {
                let minPriceForStore = Infinity;
                allDates.forEach(date => {
                    let val = priceMap[date][store];
                    if (val !== undefined && val < minPriceForStore) {
                        minPriceForStore = val;
                    }
                });
                if (minPriceForStore < absoluteMinPrice) {
                    absoluteMinPrice = minPriceForStore;
                    storeWithLowestHistoricalPrice = store;
                }
            });

            // F) Budujemy datasets
            let myStore = "@storeName".toLowerCase().trim();
            let datasets = allStores.map(store => {
                let dataArray = allDates.map(date => {
                    let dateMap = priceMap[date] || {};
                    return (dateMap[store] !== undefined) ? dateMap[store] : null;
                });

                let lineColor = 'rgba(128, 128, 128, 0.2)'; // domyślny szary
                if (store.toLowerCase().trim() === myStore) {
                    lineColor = 'rgba(0, 0, 0, 1)'; // nasz sklep -> czarny
                } else if (store === storeWithLowestHistoricalPrice) {
                    lineColor = 'rgba(0, 102, 255, 1)';
                } else if (store === storeWithBestPriceLast) {
                    lineColor = 'rgba(255, 0, 0, 1)';
                }

                return {
                    label: store,
                    data: dataArray,
                    borderWidth: 2,
                    borderColor: lineColor,
                    fill: false,
                    tension: 0.1,
                    spanGaps: true,
                    pointRadius: 0,
                    pointHoverRadius: 0
                };
            });

            // G) Domyślna pozycja crosshair (np. ostatnia data)
            const defaultXValue = allDates[allDates.length - 1];

            // H) Tworzymy wykres z pluginem annotation i custom tooltip
            window.trendChartRef = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: allDates,
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    animation: {
                        duration: 0 // wyłączamy globalną animację
                    },
                    // Kliknięcie w wykres: obliczamy najbliższy indeks
                    onClick: function(evt, elements, chart) {
                        const canvasPos = Chart.helpers.getRelativePosition(evt, chart);
                        const xScale = chart.scales.x;
                        const labels = chart.data.labels;

                        // 1) Oblicz floatIndex (działamy w skali 'category')
                        const floatIndex = xScale.getValueForPixel(canvasPos.x);
                        let nearestIndex = Math.round(floatIndex);

                        // 2) Ograniczamy do zakresu
                        if (nearestIndex < 0) nearestIndex = 0;
                        if (nearestIndex >= labels.length) {
                            nearestIndex = labels.length - 1;
                        }

                        let xLabel = labels[nearestIndex];
                        console.log("[onClick] nearestIndex =", nearestIndex, " xLabel =", xLabel);

                        // 3) Ustawiamy crosshairLine.value
                        chart.config.options.plugins.annotation.annotations.crosshairLine.value = nearestIndex;
                        chart.update();

                        // 4) Wywołujemy tooltip
                        refreshCustomTooltip(chart, xLabel);
                    },
                    interaction: {
                        mode: 'index',
                        intersect: false,
                        axis: 'x'
                    },
                    scales: {
                        x: {
                            type: 'category',
                            title: { display: true, text: 'Data' }
                        },
                        y: {
                            title: { display: true, text: 'Cena PLN' }
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            enabled: false,
                            external: externalTooltipHandler
                        },
                        annotation: {
                            annotations: {
                                crosshairLine: {
                                    type: 'line',
                                    mode: 'vertical',
                                    scaleID: 'x',
                                    value: null, // początkowo brak
                                    borderColor: 'rgba(255, 0, 0, 1)',
                                    borderWidth: 2,
                                    hitRadius: 8,
                                    draggable: true,
                                    adjustScaleRange: false,
                                    display: (ctx) => {
                                        // Rysujemy linię tylko, jeśli value != null
                                        return ctx.chart.config.options.plugins.annotation.annotations.crosshairLine.value != null;
                                    },
                                    enter: (ctx) => {
                                        ctx.chart.canvas.style.cursor = 'grab';
                                    },
                                    leave: (ctx) => {
                                        ctx.chart.canvas.style.cursor = 'default';
                                    },
                                    onDragStart: (ctx) => {
                                        ctx.chart.canvas.style.cursor = 'grabbing';
                                    },
                                    onDragEnd: (ctx) => {
                                        ctx.chart.canvas.style.cursor = 'default';
                                    },
                                    onDrag: (ctx) => {
                                        const chart = ctx.chart;
                                        const labels = chart.data.labels;

                                        // 'ctx.element.value' to floatIndex (np. 2.3)
                                        let floatIndex = ctx.element.value;
                                        let nearestIndex = Math.round(floatIndex);

                                        if (nearestIndex < 0) nearestIndex = 0;
                                        if (nearestIndex >= labels.length) {
                                            nearestIndex = labels.length - 1;
                                        }

                                        const xLabel = labels[nearestIndex];
                                        console.log("[onDrag] floatIndex =", floatIndex, " nearestIndex =", nearestIndex, " xLabel =", xLabel);

                                        // Aktualizujemy tooltip i rysowanie
                                        refreshCustomTooltip(chart, xLabel);
                                        chart.update('none');
                                    }
                                }
                            }
                        }
                    }
                }
            });

            // I) Na końcu – ustawiamy crosshairLine na defaultXValue
            // ale uwaga, bo w 'category' scale 'defaultXValue' jest stringiem,
            // a w pluginie annotation 'value' musi być floatIndex:
            let idxDefault = allDates.indexOf(defaultXValue);
            if (idxDefault === -1) {
                idxDefault = 0;
            }
            window.trendChartRef.config.options.plugins.annotation.annotations.crosshairLine.value = idxDefault;
            window.trendChartRef.update();

            // Wywołujemy tooltip (jeśli chcesz od razu zaktualizować)
            refreshCustomTooltip(window.trendChartRef, defaultXValue);
        }

        // 4. Funkcja wyświetlająca customowy tooltip
        function refreshCustomTooltip(chart, xLabel) {
            const labels = chart.data.labels;
            const idx = labels.indexOf(xLabel);

            console.log("[refreshCustomTooltip] xLabel =", xLabel, " idx =", idx);

            if (idx < 0) {
                // Brak dopasowania
                return;
            }

            // Zbieramy widoczne dataset-y
            let items = [];
            chart.data.datasets.forEach(ds => {
                if (ds.hidden) return;
                const val = ds.data[idx];
                if (val != null) {
                    items.push({
                        storeName: ds.label,
                        price: val
                    });
                }
            });

            items.sort((a, b) => a.price - b.price);

            const tooltipEl = document.getElementById('customTrendTooltip');
            if (!tooltipEl) return;

            let html = `<div style="font-weight:bold; margin-bottom:4px;">
                          Data: ${xLabel}
                        </div>`;
            html += `<table style="width:100%; border-collapse:collapse;">`;
            items.forEach(item => {
                html += `
                    <tr style="border-bottom:1px solid #eee;">
                      <td style="padding:2px;">${item.storeName}</td>
                      <td style="padding:2px; text-align:right;">${item.price} PLN</td>
                    </tr>
                `;
            });
            html += `</table>`;

            tooltipEl.innerHTML = html;
            tooltipEl.style.display = items.length ? 'block' : 'none';
        }

        // 5. Funkcja externalTooltipHandler – wyłączamy standardowe rysowanie tooltipów
        function externalTooltipHandler(context) {
            const { tooltip } = context;
            const tooltipEl = document.getElementById('customTrendTooltip');

            // Gdy opacity = 0 -> chowamy (chyba, że nie chcemy chować przy drag)
            if (!tooltip || tooltip.opacity === 0) {
               
                return;
            }
        }
    </script>


