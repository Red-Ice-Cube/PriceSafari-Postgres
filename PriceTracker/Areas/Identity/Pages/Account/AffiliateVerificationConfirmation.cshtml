@page
@model PriceTracker.Areas.Identity.Pages.Account.AffiliateVerificationConfirmationModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-page">
    <div class="partner-banner">
        <a href="@Url.Action("Index", "Home")">
            <img src="~/images/Banner.png" alt="Home" class="menu-icon" />
        </a>
    </div>
    <div class="login">
        <div class="heat-lead"></div>
        <div class="login-box">


            <div class="login-box-head">
                <div class="login-box-title">Opis przesłany</div>
                <div class="Main-Text">
                    Dziękujemy za przesłanie opisu Twojej aplikacji. Cieszymy się na możliwość współpracy. Nasz zespół dokładnie
                    przeanalizuje przesłane informacje i skontaktuje się z Tobą drogą e-mailową z dalszymi instrukcjami.

                    <a href="/Identity/Account/Login" class="Main-button">Logowanie</a>
                </div>
            </div>
            
        </div>
        <div class="heat-lead"><img src="~/images/Heat-Lead-B.png" /></div>
    </div>
</div>
