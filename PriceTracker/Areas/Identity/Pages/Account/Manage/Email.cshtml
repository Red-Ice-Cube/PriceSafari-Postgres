@page
@model EmailModel
@{

    ViewData["ActivePage"] = ManageNavPages.Email;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="Flex-Column">
  
        <form id="email-form" method="post">

        <div asp-validation-summary="All" role="alert"></div>
           
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Wpisz adres E-mail." disabled />
                <label asp-for="Email" class="form-label">E-mail</label>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Wpisz adres E-mail." disabled />
                    <label asp-for="Email" class="form-label">E-mail</label>
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Wyślij wiadomość weryfikacyjną</button>
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                <label asp-for="Input.NewEmail" class="form-label">Nowy E-mail</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="Button-Action-Big">Zapisz</button>
        
        </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
