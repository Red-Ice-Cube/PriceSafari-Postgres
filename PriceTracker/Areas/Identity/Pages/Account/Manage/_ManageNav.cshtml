@inject SignInManager<PriceTrackerUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="Flex-Column">
    <a class="Flex-Column-Button @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Konto</a>
    <a class="Flex-Column-Button @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a>
    <a class="Flex-Column-Button @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Zmień Hasło</a>
    @if (hasExternalLogins)
    {
        <div id="external-logins" class="Flex-Column-Button"><a id="external-login" class=" Flex-Column-Button @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></div>
    }
   
    <a class="Flex-Column-Button @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Dane Konta</a>
</div>
