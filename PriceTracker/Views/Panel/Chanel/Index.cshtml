@model List<PriceTracker.Models.ViewModels.ChanelViewModel>


@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Kanały
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th>Kanał</th>
                            <th>Ostatnie scrapowanie</th>
                            <th>Ilość Produktów</th>
                          
                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr class="store-row" style="cursor:pointer;" data-url="@Url.Action("Index", "PriceHistory", new { storeId = store.StoreId })">
                                <td>@store.StoreName</td>
                                <td>@store.LastScrapeDate?.ToString("g")</td>

                                <td>@store.ProductCount</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Nie masz przypisanych żadnych sklepów.</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var rows = document.querySelectorAll('.store-row');
            rows.forEach(function (row) {
                row.addEventListener('click', function (e) {
                    if (!e.target.classList.contains('Button-Page-Small-b')) {
                        window.location.href = row.getAttribute('data-url');
                    }
                });
            });
        });
    </script>
}
