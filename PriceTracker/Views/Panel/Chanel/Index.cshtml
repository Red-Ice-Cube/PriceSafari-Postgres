@model List<PriceTracker.Models.StoreClass>

@{
    ViewData["Title"] = "Lista Sklepów";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}



<div class="Vert">
    <div class="Vert-full">
        <div class="Order-Container-Title">
            Kanały
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="Vert-table">
                <table class="table-orders">
                    <thead>
                        <tr>
                            <th>Kanał</th>
                            <th></th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr>
                                <td>@store.StoreName</td>
                                <td>
                                    <a asp-controller="PriceHistory" asp-action="Index" asp-route-storeId="@store.StoreId" class="Button-Page-Small-b">Ceny</a>
                          
                                </td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
            
            </div>
        }
        else
        {
        <p>Nie masz przypisanych żadnych sklepów.</p>
        }
    </div>
</div>

