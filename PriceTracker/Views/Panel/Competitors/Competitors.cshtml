@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Konkurenci dla " + ViewBag.StoreName;
    var storeId = ViewBag.StoreId;
}

<h2>Konkurenci dla @ViewBag.StoreName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa Sklepu</th>
            <th>Wspólne Produkty</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var competitor in Model)
        {
            <tr>
                <td>@competitor.StoreName</td>
                <td>@competitor.CommonProductsCount</td>
                <td>
                    <a href="@Url.Action("CompetitorPrices", "Competitors", new { storeId = storeId, competitorStoreName = competitor.StoreName })" class="btn btn-primary">Pokaż Ceny</a>
                </td>
            </tr>
        }
    </tbody>
</table>
