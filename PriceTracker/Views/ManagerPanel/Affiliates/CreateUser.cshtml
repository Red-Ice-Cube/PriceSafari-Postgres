@model PriceTracker.Models.ManagerViewModels.CreateUserViewModel

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Page-Box">
    <div class="Page-Box-Container">
        <div class="Page-Box-Category">
            <div class="Category-Box-Title">
                Dodaj użytkownika

            </div>

            <partial name="_ManageNavCol" />
        </div>

        <div class="Column-30">

            <form asp-action="CreateUser" class="Column-Form" method="post">

                <div class="form-group">
                    <label asp-for="Imie" class="control-label"></label>
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nazwisko" class="control-label"></label>
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">Hasło</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Powtórz hasło</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="Column">
                    <label asp-for="SelectedRole" class="control-label">Uprawnienia</label>
                    <select asp-for="SelectedRole" asp-items="@(new Microsoft.AspNetCore.Mvc.Rendering.SelectList(Model.Roles))" class="form-control"></select>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="SendConfirmationEmail" class="form-check-input" />
                        <label asp-for="SendConfirmationEmail" class="form-check-label">Wysłać e-mail z potwierdzeniem?</label>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" role="alert"></div>

                <div class="form-group">
                    <input type="submit" value="Utwórz" class="Button-Add-Small" />
                </div>
            </form>

        </div>

    </div>

</div>