@model PriceTracker.Models.ManagerViewModels.EditSpeedSettingsViewModel

@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="Page-Box">
    <div class="Page-Box-Container">
        <div class="Page-Box-Category">
            <div class="Category-Box-Title">
                Ustawienia Prędkości
            </div>
            <partial name="_ManageNavCol" />
        </div>

        <div class="Column-30">
            <form asp-action="EditSpeedSettings" class="Column-Form" method="post">

                <div class="form-group">
                    <label asp-for="CaptchaSpeed" class="control-label">Prędkość CAPTCHA</label>
                    <input asp-for="CaptchaSpeed" class="form-control" type="number" min="1" />
                    <span asp-validation-for="CaptchaSpeed" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ScrapingSpeed" class="control-label">Prędkość Scrapowania</label>
                    <input asp-for="ScrapingSpeed" class="form-control" type="number" min="1" />
                    <span asp-validation-for="ScrapingSpeed" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" role="alert"></div>

                <div class="form-group">
                    <input type="submit" value="Zapisz" class="Button-Add-Small" />
                </div>
            </form>
        </div>

    </div>
</div>
